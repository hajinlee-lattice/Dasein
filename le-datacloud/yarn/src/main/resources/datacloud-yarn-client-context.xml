<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.latticeengines.datacloud.yarn.client"/>

    <bean id="datacloudClient"
          class="org.springframework.yarn.fs.PrototypeYarnClientFactoryBean"
          scope="prototype">
        <property name="appName" value="datacloud"/>
        <property name="configuration">
            <ref bean="yarnConfiguration"/>
        </property>
        <property name="resourceLocalizer">
            <ref bean="defaultYarnLocalResources"/>
        </property>
    </bean>

</beans>