<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:component-scan base-package="com.latticeengines.datacloud.core" />
    <context:component-scan base-package="com.latticeengines.ldc_collectiondb.entitymgr" />

    <import resource="classpath:db-context.xml" />
    <import resource="classpath:hadoop-config-context.xml"/>
    <import resource="classpath:camille-runtime-context.xml"/>
    <import resource="classpath:proxy-context.xml"/>
    <import resource="classpath:security-no-controller-context.xml"/>
    <import resource="classpath:datafabric-context.xml" />
    <import resource="classpath:common-threadpool-context.xml"/>
    <import resource="classpath:ldc-collectiondb-persistence-context.xml"/>
    <import resource="classpath:datacloud-core-persistence-context.xml" />

    <bean id="batonService" class="com.latticeengines.baton.exposed.service.impl.BatonServiceImpl" />
    <bean id="countryCodeDao" class="com.latticeengines.datacloud.core.dao.impl.CountryCodeDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryPropDataManage"/>
    </bean>

    <bean id="patchBookDao" class="com.latticeengines.datacloud.core.dao.impl.PatchBookDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryPropDataManage"/>
    </bean>

</beans>
