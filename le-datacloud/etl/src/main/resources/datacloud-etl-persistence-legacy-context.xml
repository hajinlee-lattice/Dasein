<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSourcePropDataBulk" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
        <property name="url" value="jdbc:sqlserver://${datacloud.bulk.host}:${datacloud.bulk.port};databaseName=${datacloud.bulk.db};" />
        <property name="username" value="${datacloud.user}" />
        <property name="password" value="${datacloud.password.encrypted}" />
    </bean>

    <bean id="propDataBulkJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate"
          p:dataSource-ref="dataSourcePropDataBulk" />

    <bean id="dataSourcePropDataCollection" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
        <property name="url" value="jdbc:sqlserver://${datacloud.collection.host}:${datacloud.collection.port};databaseName=${datacloud.collection.db};" />
        <property name="username" value="${datacloud.user}" />
        <property name="password" value="${datacloud.password.encrypted}" />
    </bean>

    <bean id="propDataCollectionJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate"
          p:dataSource-ref="dataSourcePropDataCollection" />

</beans>