<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:component-scan base-package="com.latticeengines.datacloud.etl" />

    <import resource="classpath:datacloud-core-context.xml" />
    <import resource="classpath:datacloud-etl-aspect-context.xml" />
    <import resource="classpath:datacloud-etl-persistence-legacy-context.xml" />
    <import resource="classpath:dataflow-context.xml" />
    <import resource="classpath:yarn-context.xml" />
    <import resource="classpath:spark-context.xml" />
    <import resource="classpath:metadata-hive-context.xml"/>
    <import resource="classpath:datacloud-collection-context.xml"/>

    <bean id="simpleCascadingExecutor" class="com.latticeengines.dataflow.runtime.cascading.propdata.SimpleCascadingExecutor">
        <constructor-arg name="yarnConfiguration" ref="yarnConfiguration" />
    </bean>

    <bean id="sourceColumnDao" class="com.latticeengines.datacloud.etl.dao.impl.SourceColumnDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryPropDataManage"/>
    </bean>

    <bean id="ingestionDao" class="com.latticeengines.datacloud.etl.ingestion.dao.impl.IngestionDaoImpl" >
        <property name="sessionFactory" ref="sessionFactoryPropDataManage"/>
    </bean>

    <bean id="ingestionProgressDao" class="com.latticeengines.datacloud.etl.ingestion.dao.impl.IngestionProgressDaoImpl" >
        <property name="sessionFactory" ref="sessionFactoryPropDataManage"/>
    </bean>

    <bean id="publicationDao" class="com.latticeengines.datacloud.etl.publication.dao.impl.PublicationDaoImpl" >
        <property name="sessionFactory" ref="sessionFactoryPropDataManage"/>
    </bean>

    <bean id="publicationProgressDao" class="com.latticeengines.datacloud.etl.publication.dao.impl.PublicationProgressDaoImpl" >
        <property name="sessionFactory" ref="sessionFactoryPropDataManage"/>
    </bean>

    <bean id="transformationProgressDao" class="com.latticeengines.datacloud.etl.transformation.dao.impl.TransformationProgressDaoImpl" >
        <property name="sessionFactory" ref="sessionFactoryPropDataManage"/>
    </bean>

    <bean id="pipelineTransformationReportDao" class="com.latticeengines.datacloud.etl.transformation.dao.impl.PipelineTransformationReportDaoImpl" >
        <property name="sessionFactory" ref="sessionFactoryPropDataManage"/>
    </bean>

    <bean id="latticeIdStrategyDao" class="com.latticeengines.datacloud.etl.transformation.dao.impl.LatticeIdStrategyDaoImpl" >
        <property name="sessionFactory" ref="sessionFactoryPropDataManage"/>
    </bean>

    <bean id="orchestrationDao" class="com.latticeengines.datacloud.etl.orchestration.dao.impl.OrchestrationDaoImpl" >
        <property name="sessionFactory" ref="sessionFactoryPropDataManage"/>
    </bean>

    <bean id="orchestrationProgressDao" class="com.latticeengines.datacloud.etl.orchestration.dao.impl.OrchestrationProgressDaoImpl" >
        <property name="sessionFactory" ref="sessionFactoryPropDataManage"/>
    </bean>

    <bean id="purgeStrategyDao" class="com.latticeengines.datacloud.etl.purge.dao.impl.PurgeStrategyDaoImpl" >
        <property name="sessionFactory" ref="sessionFactoryPropDataManage"/>
    </bean>

</beans>
