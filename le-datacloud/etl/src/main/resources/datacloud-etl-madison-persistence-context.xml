    	<!-- Hibernate session factory -->
    <bean id="sessionFactoryPropDataMadison" class="org.springframework.orm.jpa.vendor.HibernateJpaSessionFactoryBean">
	    <property name="entityManagerFactory" ref="entityManagerFactoryPropDataMadison" />
	</bean>
	
	<!-- Entity manager factory -->
	<bean id="entityManagerFactoryPropDataMadison" 
			class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="dataSource" ref="dataSourcePropDataMadison" />
        <property name="packagesToScan" value="com.latticeengines.domain.exposed.datacloud*" />
		<property name="jpaVendorAdapter">
			<bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
				<!-- property name="prepareConnection" value="false"/-->
			</bean>
		</property>
		<property name="jpaProperties">
          <props>
            <prop key="hibernate.dialect">${propdata.madison.datasource.dialect}</prop>
            <prop key="hibernate.show_sql">false</prop>
            <prop key="hibernate.globally_quoted_identifiers">true</prop>
            <prop key="hibernate.id.new_generator_mappings">true</prop>
            <prop key="hibernate.current_session_context_class">org.springframework.orm.hibernate5.SpringSessionContext</prop>
            <prop key="hibernate.allow_refresh_detached_entity">true</prop>
            <!-- prop key="hibernate.connection.release_mode">on_close</prop-->
            <!-- prop key="hibernate.connection.handling_mode">DELAYED_ACQUISITION_AND_RELEASE_AFTER_TRANSACTION</prop-->
          </props>
      </property>
	</bean>
	
    <bean id="transactionManagerPropDataMadison" class="org.springframework.orm.hibernate5.HibernateTransactionManager"
        p:sessionFactory-ref="sessionFactoryPropDataMadison">
        <qualifier value="propdataMadison" />
    </bean>

    <bean id="propdataMadisonJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate"
          p:dataSource-ref="dataSourcePropDataMadison" />

    <bean id="madisonLogicDailyProgressDao" class="com.latticeengines.datacloud.madison.dao.impl.MadisonLogicDailyProgressDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryPropDataMadison" />
    </bean>

</beans>