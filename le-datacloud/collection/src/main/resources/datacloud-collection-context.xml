<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jpa="http://www.springframework.org/schema/data/jpa"
       xmlns:yarn="http://www.springframework.org/schema/yarn"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa.xsd http://www.springframework.org/schema/yarn http://www.springframework.org/schema/yarn/spring-yarn.xsd">

    <context:component-scan base-package="com.latticeengines.datacloud.collection" />

    <import resource="classpath:db-context.xml" />
    <import resource="classpath:hadoop-config-context.xml"/>
    <import resource="classpath:camille-runtime-context.xml"/>
    <import resource="classpath:proxy-context.xml"/>
    <import resource="classpath:security-no-controller-context.xml"/>
    <import resource="common-threadpool-context.xml"/>

    <import resource="classpath:ldc-collectiondb-persistence-context.xml" />

    <import resource="classpath:datacloud-core-context.xml" />
    <import resource="classpath:datacloud-core-persistence-context.xml" />

    <jpa:auditing/>
    <jpa:repositories base-package="com.latticeengines.datacloud.collection.repository"
                      base-class="com.latticeengines.db.exposed.repository.impl.BaseJpaRepositoryImpl"
                      entity-manager-factory-ref="ldcCollectionEntityManagerFactory"
                      transaction-manager-ref="ldcCollectionTransactionManager"  />

    <jpa:repositories base-package="com.latticeengines.datacloud.collection.repository.reader"
                      base-class="com.latticeengines.db.exposed.repository.impl.BaseJpaRepositoryImpl"
                      entity-manager-factory-ref="ldcCollectionEntityManagerFactoryReader"
                      transaction-manager-ref="ldcCollectionTransactionManagerReader"  />

    <import resource="classpath:aws-context.xml"/>
    <context:component-scan base-package="com.latticeengines.aws" annotation-config="true"/>

    <import resource="hadoop-config-context.xml"/>
    <context:property-placeholder location="classpath*:hadoop.properties"/>
    <import resource="classpath:hadoop-config-context.xml" />

</beans>