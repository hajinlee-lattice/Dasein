<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="propDataMatchDataSource" class="com.latticeengines.datacloud.match.exposed.datasource.MatchClientRoutingDataSource">
        <property name="targetDataSources">
            <map key-type="com.latticeengines.domain.exposed.datacloud.MatchClient">
                <entry key="PD126" value-ref="pd126ClientDataSource" />
                <entry key="PD131" value-ref="pd131ClientDataSource" />
                <entry key="PD144" value-ref="pd144ClientDataSource" />
                <entry key="PD130" value-ref="pd130ClientDataSource" />
            </map>
        </property>
        <property name="defaultTargetDataSource" ref="pd130ClientDataSource" />
    </bean>

    <bean id="pd126ClientDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
        <property name="url" value="jdbc:sqlserver://10.51.15.131:1433;databaseName=PropDataMatchDB;" />
        <property name="username" value="${datacloud.user}" />
        <property name="password" value="${datacloud.password.encrypted}" />
    </bean>

    <bean id="pd131ClientDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
        <property name="url" value="jdbc:sqlserver://10.51.15.131:1433;databaseName=PropDataMatchDB;" />
        <property name="username" value="${datacloud.user}" />
        <property name="password" value="${datacloud.password.encrypted}" />
    </bean>

    <bean id="pd144ClientDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
        <property name="url" value="jdbc:sqlserver://10.51.15.131:1433;databaseName=PropDataMatchDB;" />
        <property name="username" value="${datacloud.user}" />
        <property name="password" value="${datacloud.password.encrypted}" />
    </bean>

    <bean id="pd130ClientDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
        <property name="url" value="jdbc:sqlserver://10.51.15.130:1433;databaseName=PropDataMatchDB;" />
        <property name="username" value="${datacloud.user}" />
        <property name="password" value="${datacloud.password.encrypted}" />
    </bean>

</beans>