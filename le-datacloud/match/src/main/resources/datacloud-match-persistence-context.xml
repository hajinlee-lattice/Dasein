	<!-- Hibernate session factory -->
    <bean id="sessionFactoryPropDataMatch" class="org.springframework.orm.jpa.vendor.HibernateJpaSessionFactoryBean">
	    <property name="entityManagerFactory" ref="entityManagerFactoryPropDataMatch" />
	</bean>
	
	<!-- Entity manager factory -->
	<bean id="entityManagerFactoryPropDataMatch" 
			class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="dataSource" ref="propDataMatchDataSource" />
        <property name="packagesToScan" value="com.latticeengines.domain.exposed.datacloud" />
		<property name="jpaVendorAdapter">
			<bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
				<!-- property name="prepareConnection" value="false"/-->
			</bean>
		</property>
		<property name="jpaProperties">
          <props>
            <prop key="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</prop>
            <prop key="hibernate.show_sql">false</prop>
            <prop key="hibernate.globally_quoted_identifiers">true</prop>
            <prop key="hibernate.id.new_generator_mappings">true</prop>
            <prop key="hibernate.current_session_context_class">org.springframework.orm.hibernate5.SpringSessionContext</prop>
            <prop key="hibernate.allow_refresh_detached_entity">true</prop>
            <!-- prop key="hibernate.connection.release_mode">on_close</prop-->
            <!-- prop key="hibernate.connection.handling_mode">DELAYED_ACQUISITION_AND_RELEASE_AFTER_TRANSACTION</prop-->
          </props>
      </property>
	</bean>
	
    <bean id="transactionManagerPropDataMatch" class="org.springframework.orm.hibernate5.HibernateTransactionManager"
        p:sessionFactory-ref="sessionFactoryPropDataMatch">
        <qualifier value="propdata" />
    </bean>

    <bean name="dataCloudCollector" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
        <property name="driverClass" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
        <property name="jdbcUrl" value="jdbc:sqlserver://10.51.15.130:1433;databaseName=LEDataDB_30;"/>
        <property name="user" value="DLTransfer" />
        <property name="password" value="free&amp;NSE" />
        <property name="acquireIncrement" value="1"/>
        <property name="maxPoolSize" value="4"/>
        <property name="checkoutTimeout" value="10000"/>
        <property name="idleConnectionTestPeriod" value="10"/>
        <property name="maxIdleTime" value="30"/>
    </bean>

    <bean id="dataCloudCollectorJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate"
          p:dataSource-ref="dataCloudCollector" />

    <tx:annotation-driven/>

    <bean id="commandDao" class="com.latticeengines.datacloud.match.dao.impl.CommandDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryPropDataMatch" />
    </bean>

    <bean id="commandParameterDao" class="com.latticeengines.datacloud.match.dao.impl.CommandParameterDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryPropDataMatch" />
    </bean>

</beans>