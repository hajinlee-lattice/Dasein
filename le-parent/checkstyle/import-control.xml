<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC "-//Checkstyle//DTD ImportControl Configuration 1.4//EN"
        "https://checkstyle.org/dtds/import_control_1_4.dtd">
<import-control pkg="com.latticeengines" strategyOnMismatch="allowed">

   <disallow class="org.junit.Assert"/>

    <!-- use javax.inject.Inject -->
    <disallow class="com.google.inject.Inject"/>
    <disallow class="org.springframework.beans.factory.annotation.Autowired"/>

    <!-- org.apache.commons.lang3.tuple.Pair -->
    <disallow class="^((?!org\.apache\.commons\.lang3\.tuple).)*\.Pair" regex="true"/>

    <!-- org.apache.commons.lang3.StringUtils -->
    <disallow class="^((?!org\.apache\.commons\.lang3).)*\.StringUtils$" regex="true"/>
    <disallow class="^.*\.StringUtil$" regex="true"/>

    <!-- org.apache.commons.collections4.CollectionUtils -->
    <disallow class="^((?!org\.apache\.commons\.collections4).)*\.CollectionUtils$" regex="true"/>
    <disallow class="^.*\.CollectionUtil" regex="true"/>

    <!-- org.apache.commons.collections4.MapUtils -->
    <disallow class="^((?!org\.apache\.commons\.collections4).)*\.MapUtils$" regex="true"/>
    <disallow class="^.*\.MapUtil" regex="true"/>

    <!-- exceptions -->
    <file name="EventDataSamplingJobUnitTestNG">
        <allow class="org.apache.avro.mapred.Pair" />
    </file>

</import-control>
