<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure_9_3.dtd">
<Configure class="org.eclipse.jetty.webapp.WebAppContext">

    <New id="PlsMultiTenantJNDI" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>java:comp/env/jdbc/PLS_MultiTenant</Arg>
        <Arg>
            <New class="com.mchange.v2.c3p0.ComboPooledDataSource">
                <Set name="driverClass">com.mysql.jdbc.Driver</Set>
                <Set name="jdbcUrl">jdbc:mysql://localhost:3306/PLS_MultiTenant</Set>
                <Set name="user">root</Set>
                <Set name="password">tomcat</Set>
                <Set name="maxPoolSize">4</Set>
            </New>
        </Arg>
    </New>

    <New id="GlobalAuthenticationJNDI" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>java:comp/env/jdbc/GlobalAuthentication</Arg>
        <Arg>
            <New class="com.mchange.v2.c3p0.ComboPooledDataSource">
                <Set name="driverClass">com.mysql.jdbc.Driver</Set>
                <Set name="jdbcUrl">jdbc:mysql://localhost:3306/GlobalAuthentication</Set>
                <Set name="user">root</Set>
                <Set name="password">tomcat</Set>
                <Set name="maxPoolSize">2</Set>
            </New>
        </Arg>
    </New>

    <New id="LDCManageDBJNDI" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>java:comp/env/jdbc/LDC_ManageDB</Arg>
        <Arg>
            <New class="com.mchange.v2.c3p0.ComboPooledDataSource">
                <Set name="driverClass">com.mysql.jdbc.Driver</Set>
                <Set name="jdbcUrl">jdbc:mysql://localhost:3306/LDC_ManageDB</Set>
                <Set name="user">root</Set>
                <Set name="password">tomcat</Set>
                <Set name="maxPoolSize">2</Set>
            </New>
        </Arg>
    </New>

</Configure>