	<!-- Hibernate session factory -->
    <bean id="qrtzSessionFactory" class="org.springframework.orm.jpa.vendor.HibernateJpaSessionFactoryBean">
	    <property name="entityManagerFactory" ref="qrtzEntityManagerFactory" />
	</bean>
	
	<!-- Entity manager factory -->
	<bean id="qrtzEntityManagerFactory" 
			class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="dataSource" ref="qrtzDataSource" />
        <property name="packagesToScan" value="com.latticeengines.domain.exposed.quartz" />
		<property name="jpaVendorAdapter">
			<bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
				<!-- property name="prepareConnection" value="false"/-->
			</bean>
		</property>
		<property name="jpaProperties">
          <props>
            <prop key="hibernate.dialect">${quartzclient.datasource.dialect}</prop>
            <prop key="hibernate.show_sql">${quartzclient.datasource.show_sql:false}</prop>
            <prop key="hibernate.globally_quoted_identifiers">true</prop>
            <prop key="hibernate.id.new_generator_mappings">true</prop>
            <prop key="hibernate.current_session_context_class">org.springframework.orm.hibernate5.SpringSessionContext</prop>
            <prop key="hibernate.allow_refresh_detached_entity">true</prop>
            <!-- prop key="hibernate.connection.release_mode">on_close</prop-->
            <!-- prop key="hibernate.connection.handling_mode">DELAYED_ACQUISITION_AND_RELEASE_AFTER_TRANSACTION</prop-->
          </props>
      </property>
	</bean>
	
    <bean id="qrtzTransactionManager"
        class="org.springframework.orm.hibernate5.HibernateTransactionManager"
        p:sessionFactory-ref="qrtzSessionFactory">
    </bean>

    <tx:annotation-driven transaction-manager="qrtzTransactionManager" />

    <bean id="jobHistoryDao" class="com.latticeengines.quartzclient.dao.impl.JobHistoryDaoImpl">
        <property name="sessionFactory" ref="qrtzSessionFactory"/>
    </bean>

    <bean id="jobSourceDao" class="com.latticeengines.quartzclient.dao.impl.JobSourceDaoImpl">
        <property name="sessionFactory" ref="qrtzSessionFactory"/>
    </bean>

</beans>
