<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.latticeengines</groupId>
    <artifactId>le-dataplatform-hdfs-rpm</artifactId>
    <packaging>rpm</packaging>
    <version>4.14.0-SNAPSHOT</version>
    <description>LE DATAPLATFORM NO DEPENDENCY RPM</description>

    <properties>
        <mapping.username>yarn</mapping.username>
        <mapping.groupname>hdfs</mapping.groupname>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1.5</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- license>GPL (c) 2005, SWWDC</license -->
                    <!--distribution>Trash 2005</distribution -->
                    <group>Application/Collectors</group>
                    <!-- prefix>/usr/local</prefix -->
                    <sourceEncoding>utf-8</sourceEncoding>
                    <changelogFile>src/main/resources/rpm/dependency/changelog</changelogFile>
                    <defineStatements>
                        <defineStatement>_unpackaged_files_terminate_build 0</defineStatement>
                    </defineStatements>
                    <mappings>
                        <mapping>
                            <directory>/tmp/app/dataplatform</directory>
                            <filemode>644</filemode>
                            <username>${mapping.username}</username>
                            <groupname>${mapping.groupname}</groupname>
                            <sources>
                                <source>
                                    <location>../le-dataflowapi/target/le-dataflowapi-${project.version}-shaded.jar
                                    </location>
                                </source>
                                <source>
                                    <location>../le-eai/target/le-eai-${project.version}-shaded.jar</location>
                                </source>
                                <source>
                                    <location>../le-workflowapi/target/le-workflowapi-${project.version}-shaded.jar
                                    </location>
                                </source>
                                <source>
                                    <location>../le-sqoop/target/le-sqoop-${project.version}-shaded.jar
                                    </location>
                                </source>
                                <source>
                                    <location>../le-datacloud/yarn/target/le-datacloud-yarn-${project.version}-shaded.jar
                                    </location>
                                </source>
                                <source>
                                    <location>../le-datacloud/etl/target/templates.tar.gz
                                    </location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/tmp/app/dataplatform/lib</directory>
                            <filemode>644</filemode>
                            <username>${mapping.username}</username>
                            <groupname>${mapping.groupname}</groupname>
                            <sources>
                                <source>
                                    <location>target/le-dataplatform-${project.version}-shaded.jar</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/tmp/app/dataplatform/scripts</directory>
                            <filemode>644</filemode>
                            <username>${mapping.username}</username>
                            <groupname>${mapping.groupname}</groupname>
                            <sources>
                                <source>
                                    <location>target/leframework.tar.gz</location>
                                </source>
                                <source>
                                    <location>target/lepipeline.tar.gz</location>
                                </source>
                                <source>
                                    <location>src/main/python/launcher.py</location>
                                </source>
                                <source>
                                    <location>src/main/python/pipelinefwk.py</location>
                                </source>
                                <source>
                                    <location>src/main/python/rulefwk.py</location>
                                </source>
                                <source>
                                    <location>src/main/python/pipeline/pipeline.py</location>
                                </source>
                                <source>
                                    <location>src/main/python/configurablepipelinetransformsfromfile/pipeline.json</location>
                                </source>
                                  <source>
                                    <location>src/main/python/configurablepipelinetransformsfromfile/pmmlpipeline.json</location>
                                </source>
                                <source>
                                    <location>src/main/python/datarules/rulepipeline.json</location>
                                </source>
                                <source>
                                    <location>src/main/scripts/pythonlauncher.sh</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/tmp/app/playmaker/evmodel</directory>
                            <filemode>644</filemode>
                            <username>${mapping.username}</username>
                            <groupname>${mapping.groupname}</groupname>
                            <sources>
                                <source>
                                    <location>target/evpipeline.tar.gz</location>
                                </source>
                                <source>
                                    <location>src/main/python/evpipeline/evpipeline.py</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/tmp/app/dataplatform/scripts/algorithm</directory>
                            <filemode>644</filemode>
                            <username>${mapping.username}</username>
                            <groupname>${mapping.groupname}</groupname>
                            <sources>
                                <source>
                                    <location>src/main/python/algorithm</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/tmp/app/scoring/scripts</directory>
                            <filemode>644</filemode>
                            <username>${mapping.username}</username>
                            <groupname>${mapping.groupname}</groupname>
                            <sources>
                                <source>
                                    <location>../le-scoring/src/main/python/scoring.py</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/tmp/app/scoring/lib</directory>
                            <filemode>750</filemode>
                            <username>${mapping.username}</username>
                            <groupname>${mapping.groupname}</groupname>
                            <sources>
                                <source>
                                    <location>../le-scoring/target/le-scoring-${project.version}-shaded.jar</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preinstallScriptlet>
                        <scriptFile>src/main/resources/rpm/dataplatform-hdfs/scripts/preinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>src/main/resources/rpm/dataplatform-hdfs/scripts/postinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
