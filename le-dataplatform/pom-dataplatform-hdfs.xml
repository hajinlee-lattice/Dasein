    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-4</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- license>GPL (c) 2005, SWWDC</license -->
                    <!--distribution>Trash 2005</distribution -->
                    <group>Application/Collectors</group>
                    <!-- prefix>/usr/local</prefix -->
                    <changelogFile>src/main/resources/rpm/dependency/changelog</changelogFile>
                    <defineStatements>
                        <defineStatement>_unpackaged_files_terminate_build 0</defineStatement>
                    </defineStatements>
                    <mappings>
                        <mapping>
                            <directory>/tmp/app/dataplatform</directory>
                            <filemode>644</filemode>
                            <username>${mapping.username}</username>
                            <groupname>${mapping.groupname}</groupname>
                            <sources>
                                <source>
                                    <location>../le-dataflowapi/target/le-dataflowapi-${le.rpm.version}-shaded.jar
                                    </location>
                                </source>
                                <source>
                                    <location>../le-eai/target/le-eai-${le.rpm.version}-shaded.jar</location>
                                </source>
                                <source>
                                    <location>../le-workflowapi/target/le-workflowapi-${le.rpm.version}-shaded.jar
                                    </location>
                                </source>
                                <source>
                                    <location>../le-propdata/target/le-propdata-${le.rpm.version}-shaded.jar
                                    </location>
                                </source>
                                <source>
                                    <location>${hadoop-metrics2.properties.path}/hadoop-metrics2.properties</location>
                                </source>
                                <source>
                                    <location>${dataplatform.properties.path}/dataplatform.properties</location>
                                </source>
                                <source>
                                    <location>${dataflowapi.properties.path}/dataflowapi.properties</location>
                                </source>
                                <source>
                                    <location>${workflow.properties.path}/workflow.properties</location>
                                </source>
                                <source>
                                    <location>${workflowapi.properties.path}/workflowapi.properties</location>
                                </source>
                                <source>
                                    <location>${eai.properties.path}/eai.properties</location>
                                </source>
                                <source>
                                    <location>${db.properties.path}/db.properties</location>
                                </source>
                                <source>
                                    <location>${security.properties.path}/security.properties</location>
                                </source>
                                <source>
                                    <location>${camille.properties.path}/camille.properties</location>
                                </source>
                                <source>
                                    <location>${monitor.properties.path}/monitor.properties</location>
                                </source>
                                <source>
                                    <location>${propdata.properties.path}/propdata.properties</location>
                                </source>
                                <source>
                                    <location>${proxy.properties.path}/proxy.properties</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/tmp/app/dataplatform/lib</directory>
                            <filemode>644</filemode>
                            <username>${mapping.username}</username>
                            <groupname>${mapping.groupname}</groupname>
                            <sources>
                                <source>
                                    <location>target/le-dataplatform-${le.rpm.version}-shaded.jar</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/tmp/app/dataplatform/scripts</directory>
                            <filemode>644</filemode>
                            <username>${mapping.username}</username>
                            <groupname>${mapping.groupname}</groupname>
                            <sources>
                                <source>
                                    <location>target/leframework.tar.gz</location>
                                </source>
                                <source>
                                    <location>target/lepipeline.tar.gz</location>
                                </source>
                                <source>
                                    <location>src/main/python/launcher.py</location>
                                </source>
                                <source>
                                    <location>src/main/python/pipelinefwk.py</location>
                                </source>
                                <source>
                                    <location>src/main/python/pipeline/pipeline.py</location>
                                </source>
                                <source>
                                    <location>src/main/python/configurablepipelinetransformsfromfile/pipeline.json</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/tmp/app/playmaker/evmodel</directory>
                            <filemode>644</filemode>
                            <username>${mapping.username}</username>
                            <groupname>${mapping.groupname}</groupname>
                            <sources>
                                <source>
                                    <location>target/evpipeline.tar.gz</location>
                                </source>
                                <source>
                                    <location>src/main/python/evpipeline/evpipeline.py</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/tmp/app/dataplatform/scripts/algorithm</directory>
                            <filemode>644</filemode>
                            <username>${mapping.username}</username>
                            <groupname>${mapping.groupname}</groupname>
                            <sources>
                                <source>
                                    <location>src/main/python/algorithm</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/tmp/datascientist</directory>
                            <filemode>644</filemode>
                            <username>${mapping.username}</username>
                            <groupname>${mapping.groupname}</groupname>
                            <sources>
                                <source>
                                    <location>
                                        src/test/resources/com/latticeengines/dataplatform/python/modelpredictorextraction.py
                                    </location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preinstallScriptlet>
                        <scriptFile>src/main/resources/rpm/dataplatform-hdfs/scripts/${pre.install.script}</scriptFile>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>src/main/resources/rpm/dataplatform-hdfs/scripts/${post.install.script}</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
