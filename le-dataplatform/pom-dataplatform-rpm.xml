<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<artifactId>le-dataplatform-rpm</artifactId>
	<packaging>rpm</packaging>
	<description>LE DATAPLATFORM RPM</description>

	<parent>
		<groupId>com.latticeengines</groupId>
		<artifactId>le-parent</artifactId>
		<version>1.0.0-SNAPSHOT</version>
		<relativePath>../le-parent</relativePath>
	</parent>

	<profiles>
		<profile>
			<id>development</id>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>environment.type</name>
					<value>dev</value>
				</property>
			</activation>
			<properties>
				<dataplatform.properties.path>conf/env/dev</dataplatform.properties.path>
				<hadoop-metrics2.properties.path>conf/env/dev</hadoop-metrics2.properties.path>
			</properties>
		</profile>
		<profile>
			<id>qe</id>
			<activation>
				<property>
					<name>environment.type</name>
					<value>qe</value>
				</property>
			</activation>
			<properties>
				<dataplatform.properties.path>conf/env/qe</dataplatform.properties.path>
				<hadoop-metrics2.properties.path>conf/env/qe</hadoop-metrics2.properties.path>
			</properties>
		</profile>
		<profile>
			<id>production</id>
			<activation>
				<property>
					<name>environment.type</name>
					<value>prod</value>
				</property>
			</activation>
			<properties>
				<dataplatform.properties.path>conf/env/prod</dataplatform.properties.path>
				<hadoop-metrics2.properties.path>conf/env/prod</hadoop-metrics2.properties.path>
			</properties>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>rpm-maven-plugin</artifactId>
				<version>2.1-alpha-4</version>
				<extensions>true</extensions>
				<configuration>
					<!-- license>GPL (c) 2005, SWWDC</license -->
					<!--distribution>Trash 2005</distribution -->
					<group>Application/Collectors</group>
					<!-- prefix>/usr/local</prefix -->
					<changelogFile>src/main/resources/rpm/dataplatform/changelog</changelogFile>
					<mappings>
						<mapping>
							<directory>/tmp/app/dataplatform</directory>
							<filemode>644</filemode>
							<username>yarn</username>
							<groupname>hdfs</groupname>
							<sources>
								<source>
									<location>target/le-dataplatform-1.0.0-SNAPSHOT.jar</location>
								</source>
								<source>
									<location>target/le-dataplatform-1.0.0-SNAPSHOT-intf.jar</location>
								</source>
								<source>
									<location>target/le-dataplatform-1.0.0-SNAPSHOT-tests.jar</location>
								</source>
								<source>
									<location>${hadoop-metrics2.properties.path}/hadoop-metrics2.properties</location>
								</source>
								<source>
									<location>${dataplatform.properties.path}/dataplatform.properties</location>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>/tmp/app/dataplatform/scripts</directory>
							<filemode>644</filemode>
							<username>yarn</username>
							<groupname>hdfs</groupname>
							<sources>
								<source>
									<location>target/leframework.tar.gz</location>
								</source>
								<source>
									<location>src/main/python/launcher.py</location>
								</source>
						
							</sources>
						</mapping>	
					</mappings>
					<preinstallScriptlet>
						<scriptFile>src/main/resources/rpm/dataplatform/scripts/preinstall</scriptFile>
					</preinstallScriptlet>
					<postinstallScriptlet>
						<scriptFile>src/main/resources/rpm/dataplatform/scripts/postinstall</scriptFile>
						<fileEncoding>utf-8</fileEncoding>
					</postinstallScriptlet>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>