<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="dlorchestrationJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
         <property name="durability" value="true" /> 
        <property name="jobClass" value="com.latticeengines.dataplatform.service.impl.DLOrchestrationServiceImpl" />
        <property name="jobDataAsMap">
            <map>
                <entry key="dlOrchestrationJobTaskExecutor" value-ref="dlOrchestrationJobTaskExecutor" />
                <entry key="modelCommandEntityMgr" value-ref="modelCommandEntityMgr" />
                <entry key="jobService" value-ref="jobService" />
                <entry key="modelCommandStateEntityMgr" value-ref="modelCommandStateEntityMgr" />
                <entry key="modelStepProcessor" value-ref="modelStepProcessor" />
                <entry key="modelCommandLogService" value-ref="modelCommandLogService" />
                <entry key="waitTime" value="${dataplatform.dlorchestrationjob.wait.time}" />
            </map>
        </property>
    </bean>

    <!-- Cron Trigger, run every 15 seconds -->
    <bean id="dlorchestrationCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="dlorchestrationJob" />
        <property name="cronExpression" value="0/15 * * * * ?" />
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="dlorchestrationCronTrigger" />
            </list>
        </property>
    </bean>
</beans>