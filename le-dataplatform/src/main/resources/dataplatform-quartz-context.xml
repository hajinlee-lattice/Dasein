<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="watchdogJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="durability" value="true" />
        <property name="jobClass" value="com.latticeengines.dataplatform.service.impl.JobWatchdogServiceImpl" />
        <property name="jobDataAsMap">
            <map>
                <entry key="jobService" value-ref="jobService" />
                <entry key="throttleConfigurationEntityMgr" value-ref="throttleConfigurationEntityMgr" />
                <entry key="modelEntityMgr" value-ref="modelEntityMgr" />   
                <entry key="yarnService" value-ref="yarnService" /> 
                <entry key="jobEntityMgr" value-ref="jobEntityMgr" />  
                <entry key="retryWaitTime" value="${dataplatform.retry.wait.time}" />
            </map>
        </property>

    </bean>

    <!-- Cron Trigger, run every 15 seconds -->
    <bean id="cronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="watchdogJob" />
        <property name="cronExpression" value="0/15 * * * * ?" />
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">      
        <property name="triggers">
            <list>
                <ref bean="cronTrigger" />
            </list>
        </property>
    </bean>

</beans>