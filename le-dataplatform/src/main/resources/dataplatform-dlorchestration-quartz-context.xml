<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="dlorchestrationJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="durability" value="true" />
        <property name="jobClass" value="com.latticeengines.dataplatform.service.impl.dlorchestration.DLOrchestrationServiceImpl" />
        <property name="jobDataAsMap">
            <map>
                <entry key="dlOrchestrationJobTaskExecutor" value-ref="dlOrchestrationJobTaskExecutor" />
                <entry key="modelCommandEntityMgr" value-ref="modelCommandEntityMgr" />
                <entry key="modelingJobService" value-ref="modelingJobService" />
                <entry key="modelCommandStateEntityMgr" value-ref="modelCommandStateEntityMgr" />
                <entry key="modelStepYarnProcessor" value-ref="modelStepYarnProcessor" />
                <entry key="modelCommandLogService" value-ref="modelCommandLogService" />
                <entry key="modelCommandResultEntityMgr" value-ref="modelCommandResultEntityMgr" />
                <entry key="modelStepOutputResultsProcessor" value-ref="modelStepOutputResultsProcessor" />
                <entry key="modelStepFinishProcessor" value-ref="modelStepFinishProcessor" />
                <entry key="modelStepRetrieveMetadataProcessor" value-ref="modelStepRetrieveMetadataProcessor" />
                <entry key="debugProcessorImpl" value-ref="debugProcessorImpl" />
                <entry key="yarnConfiguration" value-ref="yarnConfiguration" />
                <entry key="alertService" value-ref="alertService" />
                <entry key="waitTime" value="${dataplatform.dlorchestrationjob.wait.time}" />
                <entry key="httpFsPrefix" value="${dataplatform.fs.web.defaultFS}" />
                <entry key="resourceManagerWebAppAddress" value="${dataplatform.yarn.resourcemanager.webapp.address}" />
                <entry key="appTimeLineWebAppAddress" value="${dataplatform.yarn.timeline-service.webapp.address}" />
                <entry key="rowFailThreshold" value="${dataplatform.dlorchestrationjob.row.fail.threshold}" />
                <entry key="rowWarnThreshold" value="${dataplatform.dlorchestrationjob.row.warn.threshold}" />
                <entry key="positiveEventFailThreshold" value="${dataplatform.dlorchestrationjob.postiveevent.fail.threshold}" />
                <entry key="positiveEventWarnThreshold" value="${dataplatform.dlorchestrationjob.postiveevent.warn.threshold}" />
                <entry key="metadataService" value-ref="metadataService" />
            </map>
        </property>
    </bean>

    <!-- Cron Trigger, run every 15 seconds -->
    <bean id="dlorchestrationCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="dlorchestrationJob" />
        <property name="cronExpression" value="0/15 * * * * ?" />
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="dlorchestrationCronTrigger" />
            </list>
        </property>
    </bean>
</beans>
