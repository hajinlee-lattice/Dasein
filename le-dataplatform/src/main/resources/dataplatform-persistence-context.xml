<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="dataSourceDlOrchestration" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${dataplatform.dlorchestration.datasource.driver}" />
        <property name="url"      value="${dataplatform.dlorchestration.datasource.url}" />
        <property name="username" value="${dataplatform.dlorchestration.datasource.user}" />
        <property name="password" value="${dataplatform.dlorchestration.datasource.password.encrypted}" />
    </bean>

    <!-- Hibernate session factory -->
    <bean id="sessionFactoryDlOrchestration" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSourceDlOrchestration" />
        <property name="packagesToScan" value="com.latticeengines.domain.exposed.dataplatform, com.latticeengines.domain.exposed.modeling" />
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">${dataplatform.dlorchestration.datasource.dialect}</prop>
                <prop key="hibernate.show_sql">false</prop>
                <prop key="hibernate.globally_quoted_identifiers">true</prop>
            </props>
        </property>
    </bean>

    <bean id="transactionManagerDlOrchestration" class="org.springframework.orm.hibernate4.HibernateTransactionManager"
         p:sessionFactory-ref="sessionFactoryDlOrchestration">
         <qualifier value="dlorchestration"/>
    </bean>

    <bean id="dlOrchestrationJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate" p:dataSource-ref="dataSourceDlOrchestration" />

    <!--   All DAOs' EntityMgrs should be added to com.latticeengines.dataplatform.functionalframework.OrderedEntityMgrListForDbClean -->
    <!--  DAOs for LeadScoring(DLOrchestration) database  -->
    <bean id="modelCommandDao" class="com.latticeengines.dataplatform.dao.impl.ModelCommandDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryDlOrchestration" />
    </bean>

    <bean id="modelCommandParameterDao" class="com.latticeengines.dataplatform.dao.impl.ModelCommandParameterDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryDlOrchestration" />
    </bean>

    <bean id="modelCommandLogDao" class="com.latticeengines.dataplatform.dao.impl.ModelCommandLogDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryDlOrchestration" />
    </bean>

    <bean id="modelCommandResultDao" class="com.latticeengines.dataplatform.dao.impl.ModelCommandResultDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryDlOrchestration" />
    </bean>

    <bean id="modelCommandStateDao" class="com.latticeengines.dataplatform.dao.impl.ModelCommandStateDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryDlOrchestration" />
    </bean>

    <bean id="modelCommandIdDao" class="com.latticeengines.dataplatform.dao.impl.ModelCommandIdDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryDlOrchestration" />
    </bean>

</beans>