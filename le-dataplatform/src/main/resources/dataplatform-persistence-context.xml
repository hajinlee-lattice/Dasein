	<!-- Hibernate session factory -->
    <bean id="sessionFactoryDlOrchestration" class="org.springframework.orm.jpa.vendor.HibernateJpaSessionFactoryBean" lazy-init="true">
	    <property name="entityManagerFactory" ref="entityManagerFactoryDlOrchestration" />
	</bean>
	
	<!-- Entity manager factory -->
	<bean id="entityManagerFactoryDlOrchestration" 
			class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean" lazy-init="true">
        <property name="dataSource" ref="dataSourceDlOrchestration" />
        <property name="packagesToScan" value="com.latticeengines.domain.exposed.dataplatform, com.latticeengines.domain.exposed.modeling" />
		<property name="jpaVendorAdapter">
			<bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter" lazy-init="true">
				<!-- property name="prepareConnection" value="false"/-->
			</bean>
		</property>
		<property name="jpaProperties">
          <props>
            <prop key="hibernate.dialect">${dataplatform.dlorchestration.datasource.dialect}</prop>
            <prop key="hibernate.show_sql">false</prop>
            <prop key="hibernate.globally_quoted_identifiers">true</prop>
            <prop key="hibernate.id.new_generator_mappings">true</prop>
            <prop key="hibernate.current_session_context_class">org.springframework.orm.hibernate5.SpringSessionContext</prop>
            <prop key="hibernate.allow_refresh_detached_entity">true</prop>
            <!-- prop key="hibernate.connection.release_mode">on_close</prop-->
            <!-- prop key="hibernate.connection.handling_mode">DELAYED_ACQUISITION_AND_RELEASE_AFTER_TRANSACTION</prop-->
          </props>
      </property>
	</bean>
	
    <bean id="transactionManagerDlOrchestration" class="org.springframework.orm.hibernate5.HibernateTransactionManager"
         p:sessionFactory-ref="sessionFactoryDlOrchestration" lazy-init="true">
         <qualifier value="dlorchestration"/>
    </bean>

    <bean id="dlOrchestrationJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate" p:dataSource-ref="dataSourceDlOrchestration" lazy-init="true"/>

    <!--   All DAOs' EntityMgrs should be added to com.latticeengines.dataplatform.functionalframework.OrderedEntityMgrListForDbClean -->
    <!--  DAOs for LeadScoring(DLOrchestration) database  -->
    <bean id="modelCommandDao" class="com.latticeengines.dataplatform.dao.impl.ModelCommandDaoImpl" lazy-init="true">
        <property name="sessionFactory" ref="sessionFactoryDlOrchestration" />
    </bean>

    <bean id="modelCommandParameterDao" class="com.latticeengines.dataplatform.dao.impl.ModelCommandParameterDaoImpl" lazy-init="true">
        <property name="sessionFactory" ref="sessionFactoryDlOrchestration" />
    </bean>

    <bean id="modelCommandLogDao" class="com.latticeengines.dataplatform.dao.impl.ModelCommandLogDaoImpl" lazy-init="true">
        <property name="sessionFactory" ref="sessionFactoryDlOrchestration" />
    </bean>

    <bean id="modelCommandResultDao" class="com.latticeengines.dataplatform.dao.impl.ModelCommandResultDaoImpl" lazy-init="true">
        <property name="sessionFactory" ref="sessionFactoryDlOrchestration" />
    </bean>

    <bean id="modelCommandStateDao" class="com.latticeengines.dataplatform.dao.impl.ModelCommandStateDaoImpl" lazy-init="true">
        <property name="sessionFactory" ref="sessionFactoryDlOrchestration" />
    </bean>

    <bean id="modelCommandIdDao" class="com.latticeengines.dataplatform.dao.impl.ModelCommandIdDaoImpl" lazy-init="true">
        <property name="sessionFactory" ref="sessionFactoryDlOrchestration" />
    </bean>

</beans>