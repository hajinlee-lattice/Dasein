<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="dataSourceDlOrchestration" class="org.springframework.jdbc.datasource.DriverManagerDataSource" lazy-init="true">
        <property name="driverClassName" value="${dataplatform.dlorchestration.datasource.driver}" />
        <property name="url"      value="${dataplatform.dlorchestration.datasource.url}" />
        <property name="username" value="${dataplatform.dlorchestration.datasource.user}" />
        <property name="password" value="${dataplatform.dlorchestration.datasource.password.encrypted}" />
    </bean>

    <!-- Hibernate session factory -->
