<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>lepipeline</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>src/main/python/pipeline</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>**/*.py</include>
            </includes>
            <excludes>
                <exclude>pipeline.py</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/python/configurablepipelinetransformsfromfile</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>**/*.py</include>
                <include>**/*.json</include>
            </includes>
            <excludes>
                <exclude>pipeline.json</exclude>
                <exclude>pmmlpipeline.json</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/python/datarules</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>**/*.py</include>
                <include>**/*.json</include>
            </includes>
            <excludes>
                <exclude>rulepipeline.json</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/python/</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>columntransform.py</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/python/leframework/util</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>precisionutil.py</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
