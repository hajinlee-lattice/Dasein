<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>le-dataplatform-java-dependencies</artifactId>
    <packaging>rpm</packaging>
    <description>LE DATAPLATFORM RPM</description>
    
    <properties>
        <le.rpm.version>2.0.40-SNAPSHOT</le.rpm.version>
    </properties>

    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-parent</artifactId>
        <version>2.0.40-SNAPSHOT</version>
        <relativePath>../le-parent</relativePath>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-4</version>
                <extensions>true</extensions>
                <configuration>
                    <group>Application/Collectors</group>
                    <defineStatements>
                        <defineStatement>_unpackaged_files_terminate_build 0</defineStatement>
                    </defineStatements>
                    <mappings>
                        <mapping>
                            <directory>/usr/lib/ledp</directory>
                            <filemode>750</filemode>
                            <username>yarn</username>
                            <groupname>hadoop</groupname>
                            <sources>
                                <source>
                                    <location>target/le-dataplatform-${le.rpm.version}.jar</location>
                                </source>
                                <source>
                                    <location>target/le-dataplatform-${le.rpm.version}-intf.jar</location>
                                </source>
                                <source>
                                    <location>target/le-dataplatform-${le.rpm.version}-tests.jar</location>
                                </source>
                                <source>
                                    <location>target/dependency</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preinstallScriptlet>
                        <scriptFile>src/main/resources/rpm/dataplatform-java-dependencies/scripts/preinstall</scriptFile>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>src/main/resources/rpm/dataplatform-java-dependencies/scripts/postinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>