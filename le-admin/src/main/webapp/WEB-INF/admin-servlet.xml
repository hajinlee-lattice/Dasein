<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/security
       http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <import resource="classpath:admin-context.xml"/>
    <import resource="classpath:admin-properties-context.xml"/>
    <bean class="com.latticeengines.admin.swagger.SwaggerConfig" />

    <bean id="adminHealthCheck" class="com.latticeengines.monitor.exposed.metric.stats.impl.HealthInspection">
        <property name="componentName" value="admin" />
    </bean>

    <security:global-method-security
            secured-annotations="enabled"
            jsr250-annotations="enabled"
            pre-post-annotations="enabled"
            proxy-target-class="true" />

</beans>