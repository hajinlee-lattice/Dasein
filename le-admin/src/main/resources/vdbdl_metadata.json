{
    "RootPath": "/",
    "Nodes": 
    [
      { "Node": "TenantAlias", "Data": {
        "Type": "string",
        "Helper": "Leave it blank if it is the same as Tenant Id."
      } },
      { "Node": "TemplateVersion",
        "Data": {"Type": "options", "Options": ["2.0"], "DynamicOptions": true } },
      { "Node": "VisiDB", 
        "Children" : [
          { "Node": "VisiDBName", "Data": {"Type": "string", "Helper": "Leave it blank if it is the same as Tenant Id."}},
          { "Node": "CacheLimit", "Data": {"Type": "number", "Required": true}},
          { "Node": "DiskspaceLimit", "Data": {"Type": "number", "Required": true}},
          { "Node": "ServerName", "Data": {"Type": "options", "Options": ["bodcdevvint207", "bodcdevvint187"]}},
          { "Node": "PermanentStoreOption", "Data": {"Type": "options", "Options": ["Master", "StandAlone"]}},
          {
            "Node": "PermanentStore",
            "Data": { "Type": "options", "Options": [
              "\\\\BODCDEVVINT187\\VisiDB\\PermanentStore",
              "\\\\BODCDEVVINT207\\VisiDB\\PermanentStore"
            ] }
          },
          { "Node": "PermStoreFullPath",
            "Data": {
              "Type": "string",
              "Derived": {
                "Expression": "var vdbname = \"{2}\" === \"\" ? scope.tenantId : \"{2}\"; \"{0}\" + \"\\\\\" + \"{1}\".toUpperCase() + \"\\\\\" + vdbname",
                "Parameters": [
                  {"Component": "VisiDBDL", "NodePath": "/VisiDB/PermanentStore"},
                  {"Component": "VisiDBDL", "NodePath": "/VisiDB/ServerName"},
                  {"Component": "VisiDBDL", "NodePath": "/VisiDB/VisiDBName"}
                ]
              }
            }
          }
         ]
      },
      { "Node": "DL",
        "Children" : [
          {
            "Node": "DataStore",
            "Data": {"Type": "options", "Options": [], "DynamicOptions": true}
          },
          { "Node": "DataStore_Launch", "Data": {
              "Type": "string",
              "Derived": {
                "Expression": "\"{0}\" + \"\\\\\" + scope.tenantId + \"\\\\Launch\"",
                "Parameters": [
                  {"Component": "VisiDBDL", "NodePath": "/DL/DataStore"}
                ]
              }
            }
          },
          { "Node": "DataStore_Backup", "Data": {
            "Type": "string",
            "Derived": {
              "Expression": "\"{0}\" + \"\\\\\" + scope.tenantId + \"\\\\Backup\"",
              "Parameters": [
                {"Component": "VisiDBDL", "NodePath": "/DL/DataStore"}
              ]
            }
          }
          },
          { "Node": "DataStore_Status", "Data": {
            "Type": "string",
            "Derived": {
              "Expression": "\"{0}\" + \"\\\\\" + scope.tenantId + \"\\\\Status\"",
              "Parameters": [
                {"Component": "VisiDBDL", "NodePath": "/DL/DataStore"}
              ]
            }
          }
          },
          { "Node": "OwnerEmail", "Data": {"Type": "string", "Required": true}}
        ]
      }
    ]
}
