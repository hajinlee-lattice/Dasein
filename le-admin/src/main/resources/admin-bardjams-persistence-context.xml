    <!-- Hibernate session factory -->
    <bean id="sessionFactoryBardjams" class="org.springframework.orm.jpa.vendor.HibernateJpaSessionFactoryBean">
	    <property name="entityManagerFactory" ref="entityManagerFactoryBardjams" />
	</bean>
	
	<!-- Entity manager factory -->
	<bean id="entityManagerFactoryBardjams" 
			class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="dataSource" ref="dataSourceBardJams" />
        <property name="packagesToScan" value="com.latticeengines.domain.exposed.admin" />
		<property name="jpaVendorAdapter">
			<bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
				<!-- property name="prepareConnection" value="false"/-->
			</bean>
		</property>
		<property name="jpaProperties">
          <props>
            <prop key="hibernate.dialect">${admin.bardjams.datasource.dialect}</prop>
            <prop key="hibernate.show_sql">false</prop>
            <prop key="hibernate.globally_quoted_identifiers">true</prop>
            <prop key="hibernate.id.new_generator_mappings">true</prop>
            <prop key="hibernate.current_session_context_class">org.springframework.orm.hibernate5.SpringSessionContext</prop>
            <prop key="hibernate.allow_refresh_detached_entity">true</prop>
            <!-- prop key="hibernate.connection.release_mode">on_close</prop-->
            <!-- prop key="hibernate.connection.handling_mode">DELAYED_ACQUISITION_AND_RELEASE_AFTER_TRANSACTION</prop-->
          </props>
      </property>
	</bean>
	
    <bean id="transactionManagerBardJams"
        class="org.springframework.orm.hibernate5.HibernateTransactionManager"
        p:sessionFactory-ref="sessionFactoryBardjams">
        <qualifier value="bardJamsRequest" />
    </bean>
    <tx:annotation-driven transaction-manager="transactionManagerBardJams" />

    <bean id="bardJamsRequestDao"
        class="com.latticeengines.admin.dao.impl.BardJamsRequestDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryBardjams" />
    </bean>

</beans>