<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>le-admin-tc-rpm</artifactId>
    <packaging>rpm</packaging>
    <description>LE ADMIN TOMCAT RPM</description>

    <properties>
        <le.rpm.version>2.0.22-SNAPSHOT</le.rpm.version>
    </properties>
    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-parent</artifactId>
        <version>2.0.22-SNAPSHOT</version>
        <relativePath>../le-parent</relativePath>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-4</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- license>GPL (c) 2005, SWWDC</license -->
                    <!--distribution>Trash 2005</distribution -->
                    <group>Application/Collectors</group>
                    <!-- prefix>/usr/local</prefix -->
                    <changelogFile>src/main/resources/changelog</changelogFile>
                    <mappings>
                        <mapping>
                            <directory>/tmp/webapps/admin</directory>
                            <filemode>755</filemode>
                            <username>yarn</username>
                            <groupname>yarn</groupname>
                            <sources>
                                <source>
                                    <location>target/le-admin-${le.rpm.version}.war</location>
                                </source>
                            </sources>
                        </mapping>
                        
                        <mapping>
                            <directory>/etc/ledp/admin/buildmachine</directory>
                            <filemode>755</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
                            <sources>
                                <source>
                                    <location>conf/env/buildmachine/admin.properties</location>
                                </source>
                                <source>
                                    <location>../le-db/conf/env/buildmachine/db.properties</location>
                                </source>
                                <source>
                                    <location>../le-security/conf/env/buildmachine/security.properties</location>
                                </source>
                                <source>
                                    <location>../le-camille/conf/env/buildmachine/camille.properties</location>
                                </source>
                                <source>
                                    <location>certificates/laca-ldap.dev.lattice.local.jks</location>
                                </source>
                                <source>
                                    <location>src/main/webapp/404.html</location>
                                </source>
                            </sources>
                        </mapping>
                        
                        <mapping>
                            <directory>/etc/ledp/admin/devcluster</directory>
                            <filemode>755</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
                            <sources>
                                <source>
                                    <location>conf/env/devcluster/admin.properties</location>
                                </source>
                                <source>
                                    <location>../le-db/conf/env/devcluster/db.properties</location>
                                </source>
                                <source>
                                    <location>../le-security/conf/env/devcluster/security.properties</location>
                                </source>
                                <source>
                                    <location>../le-camille/conf/env/devcluster/camille.properties</location>
                                </source>
                                <source>
                                    <location>certificates/laca-ldap.dev.lattice.local.jks</location>
                                </source>
                                <source>
                                    <location>src/main/webapp/404.html</location>
                                </source>
                            </sources>
                        </mapping>
                        
                        <mapping>
                            <directory>/etc/ledp/admin/qacluster</directory>
                            <filemode>755</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
                            <sources>
                                <source>
                                    <location>conf/env/devcluster/admin.properties</location>
                                </source>
                                <source>
                                    <location>../le-db/conf/env/qacluster/db.properties</location>
                                </source>
                                <source>
                                    <location>../le-security/conf/env/qacluster/security.properties</location>
                                </source>
                                <source>
                                    <location>../le-camille/conf/env/qacluster/camille.properties</location>
                                </source>
                                <source>
                                    <location>certificates/laca-ldap.dev.lattice.local.jks</location>
                                </source>
                                <source>
                                    <location>src/main/webapp/404.html</location>
                                </source>
                            </sources>
                        </mapping>
                        
                        <mapping>
                            <directory>/etc/ledp/admin/prodcluster</directory>
                            <filemode>755</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
                            <sources>
                                <source>
                                    <location>conf/env/prodcluster/admin.properties</location>
                                </source>
                                <source>
                                    <location>../le-db/conf/env/prodcluster/db.properties</location>
                                </source>
                                <source>
                                    <location>../le-security/conf/env/prodcluster/security.properties</location>
                                </source>
                                <source>
                                    <location>../le-camille/conf/env/prodcluster/camille.properties</location>
                                </source>
                                <source>
                                    <location>certificates/laca-ldap.dev.lattice.local.jks</location>
                                </source>
                                <source>
                                    <location>src/main/webapp/404.html</location>
                                </source>
                            </sources>
                        </mapping>
                        
                    </mappings>
                    <preremoveScriptlet>
                        <scriptFile>src/main/scripts/tcpreremove</scriptFile>
                    </preremoveScriptlet>
                    <preinstallScriptlet>
                        <scriptFile>src/main/scripts/tcpreinstall</scriptFile>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>src/main/scripts/tcpostinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>