<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <import resource="classpath:scoring-mapreduce-context.xml" />
    <import resource="classpath:scoring-yarn-client-context.xml" />
    <import resource="classpath:common-threadpool-context.xml" />
    <import resource="classpath:proxy-context.xml" />
    <import resource="classpath:monitor-alerts-context.xml" />

    <context:component-scan base-package="com.latticeengines.scoring">
        <context:exclude-filter type="aspectj"
            expression="com.latticeengines.scoring.controller.*" />
    </context:component-scan>

</beans>