<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="
  http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
  http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

    <import resource="classpath:scoring-persistence-context.xml" />
    <import resource="classpath:scoring-mapreduce-context.xml" />
    <import resource="classpath:scoring-yarn-client-context.xml" />

    <context:component-scan base-package="com.latticeengines.scoring" >
        <context:exclude-filter type="aspectj" expression="com.latticeengines.scoring.controller.*" />
    </context:component-scan>
    <import
        resource="classpath:scoring-scoringmanager-quartz-${SCORING_MGR_QUARTZ_ENABLED:disabled}-context.xml" />
    <import resource="classpath:scoring-validation-context.xml" />

    <bean id="scoringCreds" class="com.latticeengines.domain.exposed.modeling.DbCreds">
        <property name="jdbcUrl" value="${scoring.dao.datasource.url}" />
        <property name="dbType" value="${scoring.dao.datasource.type}" />
        <property name="user" value="${scoring.dao.datasource.user}" />
        <property name="password" value="${scoring.dao.datasource.password.encrypted}" />
    </bean>

    <bean id="scoringProcessorExecutor"
        class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="corePoolSize" value="${scoring.core.pool.size}" />
        <property name="maxPoolSize" value="${scoring.max.pool.size}" />
        <property name="queueCapacity" value="${scoring.queue.capacity}" />
        <property name="rejectedExecutionHandler">
            <bean
                class="java.util.concurrent.ThreadPoolExecutor$CallerRunsPolicy" />
        </property>
    </bean>

    <bean id="asyncTaskExecutor"
        class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="corePoolSize" value="${scoring.core.pool.size}" />
        <property name="maxPoolSize" value="${scoring.max.pool.size}" />
        <property name="queueCapacity" value="${scoring.queue.capacity}" />
        <property name="rejectedExecutionHandler">
            <bean
                class="java.util.concurrent.ThreadPoolExecutor$CallerRunsPolicy" />
        </property>
    </bean>
</beans>