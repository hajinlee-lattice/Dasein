<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
      http://www.springframework.org/schema/tx
      http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

    <bean id="dataSourceScoring" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${scoring.dao.datasource.driver}" />
        <property name="url"      value="${scoring.dao.datasource.url}" />
        <property name="username" value="${scoring.dao.datasource.user}" />
        <property name="password" value="${scoring.dao.datasource.password.encrypted}" />
    </bean>

    <bean id="scoringJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate" p:dataSource-ref="dataSourceScoring" />

    <!-- Hibernate session factory -->
    <bean id="sessionFactoryScoring" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSourceScoring" />
        <property name="packagesToScan" value="com.latticeengines.domain.exposed.scoring" />
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">${scoring.dao.datasource.dialect}</prop>
                <prop key="hibernate.show_sql">false</prop>
                <prop key="hibernate.globally_quoted_identifiers">true</prop>
                <!--   <prop key="hibernate.current_session_context_class">thread</prop> -->
                <!--   <prop key="hibernate.transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</prop>  -->
            </props>
        </property>
    </bean>

    <bean id="transactionManagerScoring" class="org.springframework.orm.hibernate4.HibernateTransactionManager"
        p:sessionFactory-ref="sessionFactoryScoring" >
        <qualifier value="scoring"/>
    </bean>

    <tx:annotation-driven transaction-manager="transactionManagerScoring" />

    <!--   All DAOs' EntityMgrs should be added to com.latticeengines.dataplatform.functionalframework.OrderedEntityMgrListForDbClean -->
    <!--   DAOs for ledp database  -->
    <bean id="scoringCommandDao" class="com.latticeengines.scoring.dao.impl.ScoringCommandDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryScoring" />
    </bean>

    <bean id="scoringCommandLogDao" class="com.latticeengines.scoring.dao.impl.ScoringCommandLogDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryScoring" />
    </bean>

    <bean id="scoringCommandStateDao" class="com.latticeengines.scoring.dao.impl.ScoringCommandStateDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryScoring" />
    </bean>

    <bean id="scoringCommandResultDao" class="com.latticeengines.scoring.dao.impl.ScoringCommandResultDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryScoring" />
    </bean>

</beans>