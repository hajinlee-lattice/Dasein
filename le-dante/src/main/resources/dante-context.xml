<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:annotation-config/>

    <context:component-scan base-package="com.latticeengines.dante">
        <context:exclude-filter type="aspectj" expression="com.latticeengines.dante.controller.*"/>
        <context:exclude-filter type="aspectj" expression="com.latticeengines.dantedb.*"/>
    </context:component-scan>

    <import resource="classpath:db-context.xml"/>
    <import resource="classpath:dantedb-context.xml"/>
    <import resource="classpath:proxy-context.xml"/>
    <import resource="classpath:monitor-alerts-context.xml"/>
    <import resource="classpath:camille-runtime-context.xml"/>

    <bean id="danteTalkingPointDao" class="com.latticeengines.dante.dao.impl.DanteTalkingPointDaoImpl">
        <property name="sessionFactory" ref="danteSessionFactory"/>
    </bean>

    <bean id="danteAccountDao" class="com.latticeengines.dante.dao.impl.DanteAccountDaoImpl">
        <property name="sessionFactory" ref="danteSessionFactory"/>
    </bean>
</beans>

