<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="classpath:propdata-collection-context.xml"/>

    <bean name="featureArchiveJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="durability" value="true" />
        <property name="jobClass"
            value="com.latticeengines.propdata.collection.job.impl.FeatureArchiveJobServiceImpl" />
        <property name="jobDataAsMap">
            <map>
                <entry key="featureArchiveService" value-ref="featureArchiveService" />
                <entry key="quartzEnabled" value="true" />
            </map>
        </property>
    </bean>

    <!-- Cron Trigger, run every 8 hour, start from 4am -->
    <bean id="featureArchiveCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="featureArchiveJob" />
        <property name="cronExpression" value="${propdata.collection.feature.archive.schedule:false}" />
    </bean>

    <bean id="propDataQuartzScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="featureArchiveCronTrigger" />
            </list>
        </property>
    </bean>


</beans>