<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="madisonLogicDownloadJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="durability" value="true" />
        <property name="jobClass"
            value="com.latticeengines.propdata.madison.jobs.impl.MadisonLogicDownloadServiceImpl" />
        <property name="jobDataAsMap">
            <map>
                <entry key="propDataMadisonService" value-ref="propDataMadisonService" />
                <entry key="propdataJobsEnabled" value="${propdata.jobs.enabled}" />
            </map>
        </property>
    </bean>

    <!-- Cron Trigger, run every 1 hour -->
    <bean id="propDataMadisonDownloadCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="madisonLogicDownloadJob" />
        <property name="cronExpression" value="${propdata.madison.download.schedule}" />
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="propDataMadisonDownloadCronTrigger" />
            </list>
        </property>
    </bean>

    <bean name="madisonLogicUploadJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="durability" value="true" />
        <property name="jobClass"
            value="com.latticeengines.propdata.madison.jobs.impl.MadisonLogicUploadServiceImpl" />
        <property name="jobDataAsMap">
            <map>
                <entry key="propDataMadisonService" value-ref="propDataMadisonService" />
                <entry key="propdataJobsEnabled" value="${propdata.jobs.enabled}" />
            </map>
        </property>
    </bean>

    <!-- Cron Trigger, run every 8 hour, start from 4am -->
    <bean id="propDataMadisonUploadCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="madisonLogicUploadJob" />
        <property name="cronExpression" value="${propdata.madison.upload.schedule}" />
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="propDataMadisonUploadCronTrigger" />
            </list>
        </property>
    </bean>


</beans>