<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <import resource="classpath:propdata-job-context.xml" />

    <bean name="refreshJobHeartBeatDetail"
        class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="durability" value="true" />
        <property name="jobClass"
            value="com.latticeengines.propdata.job.RefreshHeartBeat" />
        <property name="jobDataAsMap">
            <map>
                <entry key="orchestrator" value-ref="progressOrchestrator" />
                <entry key="scheduler" value-ref="propDataScheduler" />
            </map>
        </property>
    </bean>

    <bean id="refreshHeartBeatCronTrigger"
        class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="refreshJobHeartBeatDetail" />
        <property name="cronExpression" value="${propdata.job.legacy.heartbeat.schedule}" />
    </bean>

    <bean id="propDataHeartBeatScheduler"
        class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="refreshHeartBeatCronTrigger" />
            </list>
        </property>
    </bean>

    <bean name="propDataEngineHeartBeatDetail"
          class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="durability" value="true" />
        <property name="jobClass"
                  value="com.latticeengines.propdata.job.EngineHeartBeat" />
        <property name="jobDataAsMap">
            <map>
                <entry key="proxyHostport" value="${propdata.job.proxy.hostport}" />
                <entry key="ingestionProxy" value-ref="ingestionProxy" />
                <entry key="transformationProxy" value-ref="transformationProxy" />
                <entry key="publicationProxy" value-ref="publicationProxy" />
            </map>
        </property>
    </bean>

    <bean id="propDataEngineHeartBeatTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="propDataEngineHeartBeatDetail" />
        <property name="cronExpression" value="${propdata.job.engine.heartbeat.schedule}" />
    </bean>

    <bean id="propDataEngineHeartBeatScheduler"
          class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="propDataEngineHeartBeatTrigger" />
            </list>
        </property>
    </bean>

</beans>