<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <import resource="classpath:propdata-collection-context.xml"/>
    <import resource="classpath:propdata-zk-runtime-context.xml" />
    <context:component-scan base-package="com.latticeengines.propdata.job"/>

    <bean name="propDataEngineHeartBeatDetail"
          class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="durability" value="true" />
        <property name="jobClass"
                  value="com.latticeengines.propdata.job.EngineHeartBeat" />
        <property name="jobDataAsMap">
            <map>
                <entry key="ingestionProxy" value-ref="ingestionProxy" />
                <entry key="transformationProxy" value-ref="transformationProxy" />
                <entry key="publicationProxy" value-ref="publicationProxy" />
            </map>
        </property>
    </bean>

    <bean id="propDataEngineHeartBeatTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="propDataEngineHeartBeatDetail" />
        <property name="cronExpression" value="${propdata.job.heartbeat.schedule}" />
    </bean>

    <bean id="propDataEngineHeartBeatScheduler"
          class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="propDataEngineHeartBeatTrigger" />
            </list>
        </property>
    </bean>

</beans>