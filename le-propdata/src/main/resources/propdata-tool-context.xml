<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">


    <import resource="classpath:propdata-collection-context.xml" />

    <bean id="placeholderConfigurer" class="com.latticeengines.common.exposed.util.PropertyUtils">
        <property name="locations">
            <list>
                <value>file:${PROPDATA_PROPDIR:.}/propdata.properties</value>
                <value>file:${DATAPLATFORM_PROPDIR:.}/dataplatform.properties</value>
                <value>file:${DATAFLOW_PROPDIR:.}/dataflow.properties</value>
                <value>file:${DB_PROPDIR:.}/db.properties</value>
                <value>file:${CAMILLE_PROPDIR:.}/camille.properties</value>
                <value>file:${PROXY_PROPDIR:.}/proxy.properties</value>
            </list>
        </property>
        <property name="ignoreUnresolvablePlaceholders" value="false" />
        <property name="ignoreResourceNotFound" value="false" />
    </bean>

</beans>    
