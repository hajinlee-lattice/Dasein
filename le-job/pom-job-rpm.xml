<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>le-job-rpm</artifactId>
    <packaging>rpm</packaging>
    <description>LE JOB RPM</description>

    <properties>
        <le.rpm.version>2.0.12-SNAPSHOT</le.rpm.version>
    </properties>

    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-parent</artifactId>
        <version>2.0.12-SNAPSHOT</version>
        <relativePath>../le-parent</relativePath>
    </parent>

    <profiles>
        <profile>
            <id>buildmachine</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>environment.type</name>
                    <value>buildmachine</value>
                </property>
            </activation>
            <properties>
                <job.properties.path>conf/env/buildmachine</job.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/buildmachine
                </dataplatform.properties.path>
                <dataflow.properties.path>
                    ../le-dataflow/conf/env/buildmachine
                </dataflow.properties.path>
                <db.properties.path>../le-db/conf/env/buildmachine</db.properties.path>
                <propdata.properties.path>
                    ../le-propdata/conf/env/buildmachine
                </propdata.properties.path>
                <score.properties.path>
                    ../le-scoring/conf/env/buildmachine
                </score.properties.path>
                <dellebi.properties.path>
                    ../le-dellebi/conf/env/buildmachine
                </dellebi.properties.path>
                <pls.properties.path>
                    ../le-pls/conf/env/buildmachine
                </pls.properties.path>
                <security.properties.path>
                    ../le-security/conf/env/buildmachine
                </security.properties.path>
                <bin.env.path>bin/env/buildmachine</bin.env.path>
            </properties>
        </profile>
        <profile>
            <id>development</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>environment.type</name>
                    <value>devcluster</value>
                </property>
            </activation>
            <properties>
                <job.properties.path>conf/env/devcluster</job.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/devcluster
                </dataplatform.properties.path>
                <dataflow.properties.path>
                    ../le-dataflow/conf/env/devcluster
                </dataflow.properties.path>
                <db.properties.path>../le-db/conf/env/devcluster</db.properties.path>
                <propdata.properties.path>
                    ../le-propdata/conf/env/devcluster
                </propdata.properties.path>
                <score.properties.path>
                    ../le-scoring/conf/env/devcluster
                </score.properties.path>
                <dellebi.properties.path>
                    ../le-dellebi/conf/env/devcluster
                </dellebi.properties.path>
                <pls.properties.path>
                    ../le-pls/conf/env/devcluster
                </pls.properties.path>
                <security.properties.path>
                    ../le-security/conf/env/devcluster
                </security.properties.path>
                <bin.env.path>bin/env/devcluster</bin.env.path>
            </properties>
        </profile>
        <profile>
            <id>integration</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>environment.type</name>
                    <value>intcluster</value>
                </property>
            </activation>
            <properties>
                <job.properties.path>conf/env/intcluster</job.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/intcluster
                </dataplatform.properties.path>
                <dataflow.properties.path>
                    ../le-dataflow/conf/env/intcluster
                </dataflow.properties.path>
                <db.properties.path>../le-db/conf/env/intcluster</db.properties.path>
                <propdata.properties.path>
                    ../le-propdata/conf/env/intcluster
                </propdata.properties.path>
                <score.properties.path>
                    ../le-scoring/conf/env/intcluster
                </score.properties.path>
                <dellebi.properties.path>
                    ../le-dellebi/conf/env/intcluster
                </dellebi.properties.path>
                <pls.properties.path>
                    ../le-pls/conf/env/intcluster
                </pls.properties.path>
                <security.properties.path>
                    ../le-security/conf/env/intcluster
                </security.properties.path>
                <bin.env.path>bin/env/intcluster</bin.env.path>
            </properties>
        </profile>
        <profile>
            <id>qa</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>qacluster</value>
                </property>
            </activation>
            <properties>
                <job.properties.path>conf/env/qacluster</job.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/qacluster
                </dataplatform.properties.path>
                <dataflow.properties.path>
                    ../le-dataflow/conf/env/qacluster
                </dataflow.properties.path>
                <db.properties.path>../le-db/conf/env/qacluster</db.properties.path>
                <propdata.properties.path>
                    ../le-propdata/conf/env/qacluster
                </propdata.properties.path>
                <score.properties.path>
                    ../le-scoring/conf/env/qacluster
                </score.properties.path>
                <dellebi.properties.path>
                    ../le-dellebi/conf/env/qacluster
                </dellebi.properties.path>
                <pls.properties.path>
                    ../le-pls/conf/env/qacluster
                </pls.properties.path>
                <security.properties.path>
                    ../le-security/conf/env/qacluster
                </security.properties.path>
                <bin.env.path>bin/env/qacluster</bin.env.path>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>prodcluster</value>
                </property>
            </activation>
            <properties>
                <job.properties.path>conf/env/deployment</job.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/prodcluster
                </dataplatform.properties.path>
                <dataflow.properties.path>
                    ../le-dataflow/conf/env/prodcluster
                </dataflow.properties.path>
                <db.properties.path>../le-db/conf/env/prodcluster</db.properties.path>
                <propdata.properties.path>
                    ../le-propdata/conf/env/prodcluster
                </propdata.properties.path>
                <score.properties.path>
                    ../le-scoring/conf/env/prodcluster
                </score.properties.path>
                <dellebi.properties.path>
                    ../le-dellebi/conf/env/prodcluster
                </dellebi.properties.path>
                <pls.properties.path>
                    ../le-pls/conf/env/prodcluster
                </pls.properties.path>
                <security.properties.path>
                    ../le-security/conf/env/prodcluster
                </security.properties.path>
                <bin.env.path>bin/env/prodcluster</bin.env.path>
            </properties>
        </profile>
    </profiles>


    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-4</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- license>GPL (c) 2005, SWWDC</license -->
                    <!--distribution>Trash 2005</distribution -->
                    <group>Application/Collectors</group>
                    <!-- prefix>/usr/local</prefix -->
                    <changelogFile>src/main/resources/changelog</changelogFile>
                    <mappings>
                        <mapping>
                            <directory>/opt/jetty/webapps</directory>
                            <filemode>755</filemode>
                            <username>yarn</username>
                            <groupname>yarn</groupname>
                            <sources>
                                <source>
                                    <location>target/le-job-${le.rpm.version}.war</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/etc/ledp</directory>
                            <filemode>755</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
                            <sources>
                                <source>
                                    <location>${job.properties.path}/job.properties</location>
                                </source>
                                <source>
                                    <location>${dataplatform.properties.path}/dataplatform.properties</location>
                                </source>
                                <source>
                                    <location>${dataflow.properties.path}/dataflow.properties</location>
                                </source>
                                <source>
                                    <location>${db.properties.path}/db.properties</location>
                                </source>
                                <source>
                                    <location>${propdata.properties.path}/propdata.properties</location>
                                </source>
                                <source>
                                    <location>${score.properties.path}/scoring.properties</location>
                                </source>
                                <source>
                                    <location>${dellebi.properties.path}/dellebi.properties</location>
                                </source>
                                <source>
                                    <location>${pls.properties.path}/pls.properties</location>
                                </source>
                                <source>
                                    <location>${security.properties.path}/security.properties</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/opt/jetty/bin</directory>
                            <filemode>755</filemode>
                            <username>yarn</username>
                            <groupname>yarn</groupname>
                            <sources>
                                <source>
                                    <location>${bin.env.path}/jetty.sh</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/home/yarn</directory>
                            <filemode>700</filemode>
                            <username>yarn</username>
                            <groupname>hadoop</groupname>
                            <sources>
                                <source>
                                    <location>${bin.env.path}/.bashrc</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preremoveScriptlet>
                        <scriptFile>src/main/scripts/preremove</scriptFile>
                    </preremoveScriptlet>
                    <preinstallScriptlet>
                        <scriptFile>src/main/scripts/preinstall</scriptFile>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>src/main/scripts/postinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>