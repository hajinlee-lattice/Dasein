<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
  http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
  http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">


    <context:component-scan base-package="com.latticeengines.job">
        <context:exclude-filter type="assignable"
                                expression="com.latticeengines.job.swagger.SwaggerConfig"/>
    </context:component-scan>
    <mvc:annotation-driven/>

    <context:component-scan base-package="com.latticeengines.dataplatform.mbean" />

    <import resource="classpath:datacloud-etl-madison-context.xml"/>
    <import resource="classpath:monitor-metric-context.xml"/>
    <import resource="classpath:datacloudapi-job-quartz-${PROPDATA_COLLECTION_QUARTZ_ENABLED:disabled}-context.xml"/>

    <bean id="jobHealthCheck" class="com.latticeengines.monitor.exposed.metric.stats.impl.HealthInspection">
        <property name="componentName" value="job" />
    </bean>

</beans>