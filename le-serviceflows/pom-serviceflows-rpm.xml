<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.latticeengines</groupId>
    <artifactId>le-serviceflows-rpm</artifactId>
    <version>4.2.1-SNAPSHOT</version>
    <packaging>rpm</packaging>
    <description>LE SERVICEFLOWS RPM</description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1.5</version>
                <extensions>true</extensions>
                <configuration>
                    <group>Application/Collectors</group>
                    <sourceEncoding>utf-8</sourceEncoding>
                    <changelogFile>src/main/resources/changelog</changelogFile>
                    <mappings>
                        <mapping>
                            <directory>/tmp/swlib</directory>
                            <filemode>755</filemode>
                            <username>yarn</username>
                            <groupname>yarn</groupname>
                            <sources>
                                <source>
                                    <location>
                                        prospectdiscovery/target/le-serviceflows-prospectdiscovery-${project.version}-shaded.jar
                                    </location>
                                </source>
                                <source>
                                    <location>leadprioritization/target/le-serviceflows-leadprioritization-${project.version}-shaded.jar
                                    </location>
                                </source>
                                <source>
                                    <location>
                                        cdl/target/le-serviceflows-cdl-${project.version}-shaded.jar
                                    </location>
                                </source>
                                <source>
                                    <location>
                                        datacloud/target/le-serviceflows-datacloud-${project.version}-shaded.jar
                                    </location>
                                </source>
                                <source>
                                    <location>../le-swlib/target/le-swlib-${project.version}-shaded.jar</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preremoveScriptlet>
                        <scriptFile>src/main/scripts/preremove</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </preremoveScriptlet>
                    <preinstallScriptlet>
                        <scriptFile>src/main/scripts/preinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>src/main/scripts/postinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
