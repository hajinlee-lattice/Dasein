<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>le-dataflow-hdfs-rpm</artifactId>
    <packaging>rpm</packaging>
    <description>LE DATAFLOW NO DEPENDENCY RPM</description>

    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-parent</artifactId>
        <version>2.0.22-SNAPSHOT</version>
        <relativePath>../le-parent</relativePath>
    </parent>

    <properties>
        <mapping.username>yarn</mapping.username>
        <mapping.groupname>hdfs</mapping.groupname>
        <pre.install.script>preinstall</pre.install.script>
        <post.install.script>postinstall</post.install.script>
        <le.rpm.version>2.0.22-SNAPSHOT</le.rpm.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-4</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- license>GPL (c) 2005, SWWDC</license -->
                    <!--distribution>Trash 2005</distribution -->
                    <group>Application/Collectors</group>
                    <!-- prefix>/usr/local</prefix -->
                    <changelogFile>src/main/resources/rpm/dependency/changelog</changelogFile>
                    <mappings>
                        <mapping>
                            <directory>/tmp/app/dataflow</directory>
                            <filemode>644</filemode>
                            <username>${mapping.username}</username>
                            <groupname>${mapping.groupname}</groupname>
                            <sources>
                                <source>
                                    <location>target/le-dataflow-${le.rpm.version}-shaded.jar</location>
                                </source>
                                <source>
                                    <location>../le-dellebi/target/le-dellebi-${le.rpm.version}-shaded.jar</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preinstallScriptlet>
                        <scriptFile>src/main/resources/rpm/dataflow-hdfs/scripts/${pre.install.script}</scriptFile>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>src/main/resources/rpm/dataflow-hdfs/scripts/${post.install.script}</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>


