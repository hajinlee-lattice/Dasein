<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>skald</artifactId>
    <packaging>jar</packaging>
	<scm>
		<connection>scm:svn:http://lesvn.lattice.local/svn/lattice/LEDP/branches/develop</connection>
		<developerConnection>scm:svn:http://lesvn.lattice.local/svn/lattice/LEDP/branches/develop</developerConnection>
		<url>scm:svn:http://lesvn.lattice.local/svn/lattice/LEDP/branches/develop</url>
	</scm>

    <name>${component-name}</name>

    <properties>
        <component-name>skald</component-name>
        <le.common.version>1.0.20-SNAPSHOT</le.common.version>
        <le.domain.version>1.0.20-SNAPSHOT</le.domain.version>
        <guava.version>18.0</guava.version>
        <jpmml.version>2.0.0</jpmml.version>
        <le.camille.version>1.0.20-SNAPSHOT</le.camille.version>
        <jackson.version>2.4.1</jackson.version>
    </properties>

    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-parent</artifactId>
        <version>1.0.20-SNAPSHOT</version>
        <relativePath>../le-parent</relativePath>
    </parent>
    
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<shadedArtifactAttached>true</shadedArtifactAttached>
					<createDependencyReducedPom>false</createDependencyReducedPom>
					
					<transformers>
						<transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
							<mainClass>com.latticeengines.skald.SkaldServer</mainClass>
						</transformer>
              		</transformers>
              		
              		<artifactSet>
              			<excludes>
              				<!-- Remove the largest of the unfortunate unused dependencies. -->
              				<!-- TODO Refactor POMs and overall dependencies to avoid this situation. -->
              				<exclude>org.hibernate:*</exclude>
              				<exclude>org.apache.hadoop:*</exclude>
              				<exclude>org.springframework.data:*</exclude>
              				<exclude>org.apache.avro:*</exclude>
              				<exclude>com.google.http-client:*</exclude>
              			</excludes>
              		</artifactSet>
              		
					<filters>
						<!-- Strip any signatures to avoid security errors running the shaded JAR. -->
					    <filter>
					        <artifact>*:*</artifact>
					        <excludes>
					            <exclude>META-INF/*.SF</exclude>
					            <exclude>META-INF/*.DSA</exclude>
					            <exclude>META-INF/*.RSA</exclude>
					        </excludes>
					    </filter>
					</filters>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

    <dependencies>
        <dependency>
            <groupId>com.latticeengines</groupId>
            <artifactId>le-common</artifactId>
            <version>${le.common.version}</version>
            <classifier>intf</classifier>
        </dependency>
        
        <dependency>
            <groupId>com.latticeengines</groupId>
            <artifactId>le-camille</artifactId>
            <version>${le.camille.version}</version>
        </dependency>
        
        <dependency>
            <groupId>com.latticeengines</groupId>
            <artifactId>le-domain</artifactId>
            <version>${le.domain.version}</version>
            <classifier>intf</classifier>
        </dependency>
        
		<dependency>
			<groupId>org.eclipse.jetty</groupId>
			<artifactId>jetty-server</artifactId>
			<version>${jetty.version}</version>
	    </dependency>
	    
   		<dependency>
			<groupId>org.eclipse.jetty</groupId>
			<artifactId>jetty-servlet</artifactId>
			<version>${jetty.version}</version>
	    </dependency>
	    
	    <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-annotations</artifactId>
			<version>${jackson.version}</version>
		</dependency>  
	    
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-webmvc</artifactId>
            <version>4.0.0.RELEASE</version>
        </dependency>
        
        <dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
			<version>${guava.version}</version>
		</dependency>
		        
        
        <dependency>
		    <groupId>org.jpmml</groupId>
		    <artifactId>pmml-evaluator</artifactId>
		    <version>${jpmml.version}</version>
		</dependency>
    </dependencies>

</project>
