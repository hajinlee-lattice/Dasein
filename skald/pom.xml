<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>skald</artifactId>
    <packaging>war</packaging>
    <name>${component-name}</name>

    <properties>
        <component-name>skald</component-name>
        <le.common.version>2.0.17-SNAPSHOT</le.common.version>
        <le.domain.version>2.0.17-SNAPSHOT</le.domain.version>
        <guava.version>18.0</guava.version>
        <jpmml.version>2.0.0</jpmml.version>
        <le.camille.version>2.0.17-SNAPSHOT</le.camille.version>
        <jackson.version>2.4.1</jackson.version>
        <postgresql.version>9.4-1201-jdbc41</postgresql.version>
        <beanstalker.version>1.4.0</beanstalker.version>
    </properties>

    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-parent</artifactId>
        <version>2.0.17-SNAPSHOT</version>
        <relativePath>../le-parent</relativePath>
    </parent>
    
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
					<webResources>
						<resource>
							<directory>src/main/ebextensions</directory>
							<targetPath>.ebextensions</targetPath>
							<filtering>true</filtering>
						</resource>
					</webResources>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<profiles>
		<profile>
			<id>aws-deploy</id>
			<properties>
				<maven.install.skip>true</maven.install.skip>
				<maven.deploy.skip>true</maven.deploy.skip>
				<beanstalk.applicationName>SkaldTest</beanstalk.applicationName>
				<beanstalk.cnamePrefix>skaldtest</beanstalk.cnamePrefix>
				<beanstalk.environmentRef>${beanstalk.cnamePrefix}.elasticbeanstalk.com</beanstalk.environmentRef>
				<maven.build.timestamp.format>yyyyMMddHHmmss</maven.build.timestamp.format>
				<beanstalk.s3Bucket>rts-beanstalk</beanstalk.s3Bucket>
				<beanstalk.s3Key>${project.artifactId}/${project.build.finalName}-${maven.build.timestamp}.war</beanstalk.s3Key>
				<beanstalk.versionLabel>${project.build.finalName}-${maven.build.timestamp}</beanstalk.versionLabel>
				<beanstalk.multipartUpload>false</beanstalk.multipartUpload>
				<beanstalk.useLatestVersion>false</beanstalk.useLatestVersion>
			</properties>
			<build>
				<defaultGoal>deploy</defaultGoal>
				<plugins>
					<plugin>
						<groupId>br.com.ingenieux</groupId>
						<artifactId>beanstalk-maven-plugin</artifactId>
						<version>${beanstalker.version}</version>
						<executions>
							<execution>
								<id>default-deploy</id>
								<phase>deploy</phase>
								<goals>
									<goal>upload-source-bundle</goal>
									<goal>create-application-version</goal>
									<goal>update-environment</goal>
									<goal>wait-for-environment</goal>
								</goals>
								<configuration>
									<beanstalk.versionLabel>${maven.build.timestamp}</beanstalk.versionLabel>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	
    <dependencies>
    	<!-- Declare this explicitly to mask the inherited previous versions. -->
	   	<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>3.1.0</version>
		</dependency>
    
        <dependency>
            <groupId>com.latticeengines</groupId>
            <artifactId>le-common</artifactId>
            <version>${le.common.version}</version>
            <classifier>intf</classifier>
        </dependency>
        
        <dependency>
            <groupId>com.latticeengines</groupId>
            <artifactId>le-camille</artifactId>
            <version>${le.camille.version}</version>
        </dependency>
        
        <dependency>
            <groupId>com.latticeengines</groupId>
            <artifactId>le-domain</artifactId>
            <version>${le.domain.version}</version>
            <classifier>intf</classifier>
        </dependency>
	    
	    <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-annotations</artifactId>
			<version>${jackson.version}</version>
		</dependency>  
	    
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-webmvc</artifactId>
            <version>${spring.version}</version>
        </dependency>
        
        <dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
			<version>${guava.version}</version>
		</dependency>
        
        <dependency>
		    <groupId>org.jpmml</groupId>
		    <artifactId>pmml-evaluator</artifactId>
		    <version>${jpmml.version}</version>
		</dependency>
		
		<dependency>
			<groupId>org.postgresql</groupId>
			<artifactId>postgresql</artifactId>
			<version>${postgresql.version}</version>
		</dependency>
    </dependencies>

</project>
