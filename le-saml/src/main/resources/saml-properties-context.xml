<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">


    <bean id="placeholderConfigurer" class="com.latticeengines.common.exposed.util.PropertyUtils">
        <property name="locations">
            <list>
                <value>file:${DB_PROPDIR}/db.properties</value>
                <value>file:${SECURITY_PROPDIR}/security.properties</value>
                <value>file:${SAML_PROPDIR}/saml.properties</value>
            </list>
        </property>
        <property name="ignoreUnresolvablePlaceholders" value="false"/>
        <property name="ignoreResourceNotFound" value="false"/>
    </bean>

</beans>
