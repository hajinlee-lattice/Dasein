<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:annotation-config/>
    <context:component-scan
            base-package="com.latticeengines.saml">
        <!-- Need to exclude instantiating the swagger config except for bringing
            up the API since the servlet container instances are not available when running
            tests. -->
        <context:exclude-filter type="assignable"
                                expression="com.latticeengines.saml.swagger.SwaggerConfig"/>
    </context:component-scan>


    <import resource="classpath:saml-common-context.xml"/>
    <import resource="classpath:saml-persistence-context.xml"/>
    <import resource="classpath:common-properties-context.xml"/>
    <import resource="classpath:security-no-controller-context.xml"/>
    <import resource="classpath:test-testframework-context.xml"/>
    <import resource="classpath:remote-context.xml"/>

    <bean id="deploymentTestBed" class="com.latticeengines.testframework.security.impl.GlobalAuthDeploymentTestBed">
        <constructor-arg name="plsApiHostPort" value="${pls.test.deployment.api}"/>
        <constructor-arg name="adminApiHostPort" value="${pls.test.deployment.admin.api}"/>
        <constructor-arg name="environment" value="${pls.test.env}"/>
    </bean>

</beans>