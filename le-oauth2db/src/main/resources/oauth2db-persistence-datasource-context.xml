<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">


    <bean id="dataSourceOauth2" primary="true"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${oauth2.datasource.driver}"/>
        <property name="url" value="${oauth2.datasource.url}"/>
        <property name="username" value="${oauth2.datasource.user}"/>
        <property name="password"
                  value="${oauth2.datasource.password.encrypted}"/>
    </bean>
</beans>