<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="dataSourceOauth2" primary="true" class="com.latticeengines.common.exposed.bean.DataSourceBeanFactory">
        <property name="driverClass" value="${oauth2.datasource.driver}"/>
        <property name="jdbcUrl" value="${oauth2.datasource.url}"/>
        <property name="user" value="${oauth2.datasource.user}"/>
        <property name="password" value="${oauth2.datasource.password.encrypted}"/>
        <property name="maxPoolSize" value="32"/>
    </bean>

</beans>