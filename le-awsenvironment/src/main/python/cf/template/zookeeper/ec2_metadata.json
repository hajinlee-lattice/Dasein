{
  "AWS::CloudFormation::Init": {
    "configSets": {
      "bootstrap": [
        "prepare",
        "install"
      ]
    },
    "prepare": {
      "files": {
        "/tmp/zkserver-head.txt": {
          "content": {
            "Fn::Join": [
              "\n",
              [ "#!/usr/bin/env bash",
                "# description: Zookeeper Start Stop Restart",
                "# processname: zookeeper",
                "# chkconfig: 244 30 80"
              ]
            ]
          },
          "mode": "000777",
          "owner": "root",
          "group": "root"
        },
        "/tmp/mount_volume.sh": {
          "content": {
            "Fn::Join": [
              "\n",
              [ "#!/usr/bin/env bash",
                "mkdir -p /mnt/zookeeper/logs",
                "file -s /dev/xvdh",
                "mkfs -t ext4 /dev/xvdh",
                "echo '/dev/xvdh       /mnt/zookeeper/logs   ext4    defaults,nofail        0       2' >> /etc/fstab",
                "mount -a"
              ]
            ]
          },
          "mode": "000777",
          "owner": "root",
          "group": "root"
        },
        "/tmp/bootstrap.sh": {
          "content": {
            "Fn::Join": [
              "\n",
              [ "#!/usr/bin/env bash",
                "wget http://mirrors.ocf.berkeley.edu/apache/zookeeper/zookeeper-3.4.8/zookeeper-3.4.8.tar.gz",
                "tar xzf zookeeper-3.4.8.tar.gz",
                "cp zookeeper-3.4.8/bin/zkServer.sh .",
                "sed -i '/env bash/d' zkServer.sh",
                "sed -i '/BASH_SOURCE-/ZOOBIN=`readlink $0`/g' zkServer.sh",
                "cat /tmp/zkserver-head.txt zkServer.sh > zookeeper-3.4.8/bin/zkServer.sh",
                "mv zookeeper-3.4.8 /opt",
                "cp /opt/zookeeper-3.4.8/conf/zoo_sample.cfg /opt/zookeeper-3.4.8/conf/zoo.cfg",
                "chmod a+w /opt/zookeeper-3.4.8/conf/zoo.cfg"
              ]
            ]
          },
          "mode": "000777",
          "owner": "root",
          "group": "root"
        },
        "/var/lib/zookeeper/myid": {
          "content": "",
          "mode": "000777",
          "owner": "root",
          "group": "root"
        }
      }
    },
    "install": {
      "commands": {
        "1": {
          "command": "bash /tmp/bootstrap.sh"
        },
        "2": {
          "command" : "crontab -l | { cat; echo \"0 */4 * * * bash -c /opt/zookeeper-3.4.8/bin/zkCleanup.sh 5\"; } | crontab -"
        }
      }
    }
  }
}