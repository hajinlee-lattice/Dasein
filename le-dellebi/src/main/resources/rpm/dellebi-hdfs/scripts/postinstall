#!/bin/bash
echo 'Running Postinstall'

JARFILE=`ls /tmp/app/dellebi/le-dellebi*-shaded.jar`
VERSION=`echo $JARFILE | cut -d \- -f 3`
SNAPSHOT=`echo $JARFILE | cut -d \- -f 4`

if test $SNAPSHOT = "SNAPSHOT"
    then
        VERSION=$VERSION-"SNAPSHOT"
fi

hdfs dfs -rm -r -f /app/$VERSION/dellebi/lib/*
hdfs dfs -put /tmp/app/dellebi/le-dellebi*-shaded.jar /app/$VERSION/dellebi/lib
hdfs dfs -copyFromLocal /tmp/app/dellebi/dataflow.properties /app/$VERSION/dellebi
rm -rf /tmp/app/dellebi/
