<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.0.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-4.0.xsd
           http://camel.apache.org/schema/spring
           http://camel.apache.org/schema/spring/camel-spring.xsd">

    <context:annotation-config />

    <import resource="classpath:dellebi-persistence-context.xml" />
    <context:component-scan base-package="com.latticeengines.dellebi" />
    <context:component-scan base-package="com.latticeengines.dataplatform.service.impl">
        <context:exclude-filter type="aspectj"
            expression="com.latticeengines.dataplatform.service.impl.dlorchestration.*" />
        <context:exclude-filter type="aspectj"
            expression="com.latticeengines.dataplatform.service.impl.modeling.*" />
        <context:exclude-filter type="aspectj"
            expression="com.latticeengines.dataplatform.service.impl.parallel.*" />
        <context:exclude-filter type="aspectj"
            expression="com.latticeengines.dataplatform.service.impl.watchdog.*" />
        <context:exclude-filter type="assignable"
            expression="com.latticeengines.dataplatform.service.impl.ParallelDispatchServiceImpl" />
        <context:exclude-filter type="assignable"
            expression="com.latticeengines.dataplatform.service.impl.MapReduceCustomizationServiceImpl" />
        <context:exclude-filter type="assignable"
            expression="com.latticeengines.dataplatform.service.impl.JobServiceImpl" />
    </context:component-scan>

    <import resource="classpath:dataplatform-yarn-config-context.xml" />
    <import resource="classpath:dataplatform-yarn-client-context.xml" />
    <import resource="classpath:common-component-context.xml"/>

    <import
        resource="classpath:dellebi-quartz-${DELLEBI_QUARTZ_ENABLED:disabled}-context.xml" />
    <import resource="classpath:dellebi-component-context.xml" />



</beans>