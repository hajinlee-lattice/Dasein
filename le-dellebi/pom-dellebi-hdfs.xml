<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.latticeengines</groupId>
    <artifactId>le-dellebi-hdfs-rpm</artifactId>
    <version>4.14.0-SNAPSHOT</version>
    <packaging>rpm</packaging>
    <description>LE DELLEBI NO DEPENDENCY RPM</description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1.5</version>
                <extensions>true</extensions>
                <configuration>
                    <group>Application/Collectors</group>
                    <sourceEncoding>utf-8</sourceEncoding>
                    <changelogFile>src/main/resources/rpm/dependency/changelog</changelogFile>
                    <mappings>
                        <mapping>
                            <directory>/tmp/app/dellebi</directory>
                            <filemode>644</filemode>
                            <username>yarn</username>
                            <groupname>hdfs</groupname>
                            <sources>
                                <source>
                                    <location>target/le-dellebi-${project.version}-shaded.jar</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preinstallScriptlet>
                        <scriptFile>src/main/resources/rpm/dellebi-hdfs/scripts/preinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>src/main/resources/rpm/dellebi-hdfs/scripts/postinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>

