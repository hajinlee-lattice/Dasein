<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">


    <context:annotation-config/>
    <context:component-scan base-package="com.latticeengines.objectapi">
        <context:exclude-filter type="aspectj" expression="com.latticeengines.objectapi.controller.*"/>
    </context:component-scan>

    <import resource="classpath:query-context.xml"/>
    <import resource="classpath:common-properties-context.xml"/>
    <import resource="classpath:objectapi-aspects-context.xml"/>
    <import resource="classpath:security-no-controller-context.xml"/>
</beans>