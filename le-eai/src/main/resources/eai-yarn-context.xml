<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:component-scan base-package="com.latticeengines.eai.service">
        <context:exclude-filter type="regex"
            expression="com.latticeengines.eai.service.impl.file.*" />
    </context:component-scan>
    <context:component-scan base-package="com.latticeengines.eai.yarn" />
    <context:component-scan base-package="com.latticeengines.eai.components" />
    <context:component-scan base-package="com.latticeengines.remote.exposed.service" />

    <import resource="classpath:eai-marketo-context.xml" />
    <import resource="classpath:eai-eloqua-context.xml" />

</beans>