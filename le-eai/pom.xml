<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>le-eai</artifactId>
    <packaging>jar</packaging>
    <name>${component-name}</name>

    <properties>
        <component-name>le-eai</component-name>
        <hadoop.version>2.4.0.2.1.3.0-563</hadoop.version>
        <camel.version>2.14.0</camel.version>
        <le.common.version>1.0.27-SNAPSHOT</le.common.version>
        <le.domain.version>1.0.27-SNAPSHOT</le.domain.version>
        <le.dataplatform.version>1.0.27-SNAPSHOT</le.dataplatform.version>
        <le.scheduler.version>1.0.27-SNAPSHOT</le.scheduler.version>
        <fdb.sql.parser.version>1.5.0</fdb.sql.parser.version>
        <parquet.avro.version>1.4.3</parquet.avro.version>
    </properties>

    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-parent</artifactId>
        <version>1.0.27-SNAPSHOT</version>
        <relativePath>../le-parent</relativePath>
    </parent>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.camel.maven</groupId>
                <artifactId>camel-salesforce-maven-plugin</artifactId>
                <version>${camel.version}</version>
            </plugin>
        </plugins>
    </build>

