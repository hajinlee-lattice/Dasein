    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-4</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- license>GPL (c) 2005, SWWDC</license -->
                    <!--distribution>Trash 2005</distribution -->
                    <group>Application/Collectors</group>
                    <!-- prefix>/usr/local</prefix -->
                    <changelogFile>src/main/resources/changelog</changelogFile>
                    <mappings>
                        <mapping>
                            <directory>/opt/jetty/webapps</directory>
                            <filemode>755</filemode>
                            <username>yarn</username>
                            <groupname>yarn</groupname>
                            <sources>
                                <source>
                                    <location>target/le-pls-${le.rpm.version}.war</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/etc/ledp</directory>
                            <filemode>755</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
                            <sources>
                                <source>
                                    <location>${db.properties.path}/db.properties</location>
                                </source>
                                <source>
                                    <location>${pls.properties.path}/pls.properties</location>
                                </source>
                                <source>
                                    <location>${security.properties.path}/security.properties</location>
                                </source>
                                <source>
                                    <location>${proxy.properties.path}/proxy.properties</location>
                                </source>
                                <source>
                                    <location>${workflow.properties.path}/workflow.properties</location>
                                </source>
                                <source>
                                    <location>${monitor.properties.path}/monitor.properties</location>
                                </source>
                                <source>
                                    <location>certificates/${jks.name}</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/opt/jetty/bin</directory>
                            <filemode>755</filemode>
                            <username>yarn</username>
                            <groupname>yarn</groupname>
                            <sources>
                                <source>
                                    <location>${bin.env.path}/jetty.sh</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/opt/jetty/etc</directory>
                            <filemode>755</filemode>
                            <username>yarn</username>
                            <groupname>yarn</groupname>
                            <sources>
                                <source>
                                    <location>${bin.env.path}/jetty.xml</location>
                                </source>
                                <source>
                                    <location>${bin.env.path}/jetty-rewrite.xml</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/opt/jetty</directory>
                            <filemode>755</filemode>
                            <username>yarn</username>
                            <groupname>yarn</groupname>
                            <sources>
                                <source>
                                    <location>${bin.env.path}/start.ini</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/home/yarn</directory>
                            <filemode>700</filemode>
                            <username>yarn</username>
                            <groupname>hadoop</groupname>
                            <sources>
                                <source>
                                    <location>${bin.env.path}/.bashrc</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preremoveScriptlet>
                        <scriptFile>src/main/scripts/preremove</scriptFile>
                    </preremoveScriptlet>
                    <preinstallScriptlet>
                        <scriptFile>src/main/scripts/preinstall</scriptFile>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>src/main/scripts/postinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
