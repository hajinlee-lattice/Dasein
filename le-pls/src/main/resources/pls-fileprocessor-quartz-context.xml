<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="fileProcessorJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="durability" value="true" />
        <property name="jobClass" value="com.latticeengines.pls.service.impl.FileProcessor" />
        <property name="jobDataAsMap">
            <map>
                <entry key="fileProcessorDir" value="${pls.fileprocessor.dir}" />
                <entry key="restApiProxy" value-ref="restApiProxy" />
            </map>
        </property>
    </bean>

    <!-- Cron Trigger, run every 15 seconds -->
    <bean id="fileProcessorCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="fileProcessorJob" />
        <property name="cronExpression" value="0/15 * * * * ?" />
    </bean>

</beans>