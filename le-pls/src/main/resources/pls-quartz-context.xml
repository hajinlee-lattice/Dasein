<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <import resource="classpath:pls-modeldownload-quartz-context.xml"/>
    <!--<import resource="classpath:pls-fileprocessor-quartz-context.xml"/>-->
    <import resource="classpath:pls-sourcefilepurge-quartz-context.xml"/>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="modelSummaryDownloadCronTrigger" />
                <!-- <ref bean="fileProcessorCronTrigger" /> -->
                <ref bean="sourceFilePurgeCronTrigger" />
            </list>
        </property>
    </bean>

</beans>