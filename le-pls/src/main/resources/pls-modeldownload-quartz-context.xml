<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="modelSummaryDownloadJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="durability" value="true" />
        <property name="jobClass" value="com.latticeengines.pls.service.impl.ModelSummaryDownloadServiceImpl" />
        <property name="jobDataAsMap">
            <map>
                <entry key="tenantEntityMgr" value-ref="tenantEntityMgr" />
                <entry key="modelingServiceHdfsBaseDir" value="${pls.modelingservice.basedir}" />
                <entry key="modelSummaryDownloadExecutor" value-ref="modelSummaryDownloadExecutor" />
                <entry key="modelSummaryEntityMgr" value-ref="modelSummaryEntityMgr" />
                <entry key="yarnConfiguration" value-ref="yarnConfiguration" />
                <entry key="modelSummaryParser" value-ref="modelSummaryParser" />
                <entry key="timeStampContainer" value-ref="timeStampContainer" />
            </map>
        </property>
    </bean>

    <!-- Cron Trigger, run every 15 seconds -->
    <bean id="modelSummaryDownloadCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="modelSummaryDownloadJob" />
        <property name="cronExpression" value="0/15 * * * * ?" />
    </bean>


</beans>