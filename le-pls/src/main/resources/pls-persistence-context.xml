<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jpa="http://www.springframework.org/schema/data/jpa"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
      http://www.springframework.org/schema/data/jpa
      http://www.springframework.org/schema/data/jpa/spring-jpa.xsd">

    <jpa:repositories base-package="com.latticeengines.pls.repository.writer"
                      base-class="com.latticeengines.db.exposed.repository.impl.BaseJpaRepositoryImpl"
                      entity-manager-factory-ref="entityManagerFactory"
                      transaction-manager-ref="transactionManager"  />

    <jpa:repositories base-package="com.latticeengines.pls.repository.reader"
                      base-class="com.latticeengines.db.exposed.repository.impl.BaseJpaRepositoryImpl"
                      entity-manager-factory-ref="entityManagerFactoryReader"
                      transaction-manager-ref="transactionManagerReader"  />

</beans>
