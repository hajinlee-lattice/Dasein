<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
      http://www.springframework.org/schema/tx
      http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

    <bean id="dataSourceAccountMaster" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
        <property name="url" value="${pls.accountmaster.datasource.url}"/>
        <property name="username" value="${pls.accountmaster.datasource.user}"/>
        <property name="password" value="${pls.accountmaster.datasource.password.encrypted}"/>
    </bean>


    <!-- Hibernate session factory -->
    <bean id="sessionFactoryAccountMaster" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSourceAccountMaster"/>
        <property name="packagesToScan"
                  value="com.latticeengines.domain.exposed.pls, com.latticeengines.domain.exposed.metadata, com.latticeengines.domain.exposed.modelreview, com.latticeengines.domain.exposed.security, com.latticeengines.domain.exposed.workflow, com.latticeengines.domain.exposed.dante.multitenant"/>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</prop>
                <prop key="hibernate.show_sql">true</prop>
                <prop key="hibernate.globally_quoted_identifiers">true</prop>
            </props>
        </property>
    </bean>

    <bean id="transactionManagerAccountMaster" class="org.springframework.orm.hibernate4.HibernateTransactionManager"
          p:sessionFactory-ref="sessionFactoryAccountMaster">
        <qualifier value="accountMaster"/>
    </bean>

    <tx:annotation-driven transaction-manager="transactionManagerAccountMaster"/>

    <!--  DAOs for AccountMaster database  -->
    <bean id="companyDao" class="com.latticeengines.pls.dao.impl.CompanyDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryAccountMaster"/>
    </bean>

    <bean id="contactDao" class="com.latticeengines.pls.dao.impl.ContactDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryAccountMaster"/>
    </bean>

    <bean id="amAttributeDao" class="com.latticeengines.pls.dao.impl.AmAttributeDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryAccountMaster"/>
    </bean>

    <bean name="propDataManage" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
        <property name="driverClass" value="${pls.manage.driver}"/>
        <property name="jdbcUrl" value="${pls.manage.url}"/>
        <property name="user" value="${pls.manage.user}" />
        <property name="password" value="${pls.manage.password.encrypted}" />
        <property name="acquireIncrement" value="2"/>
        <property name="maxPoolSize" value="8"/>
        <property name="checkoutTimeout" value="10000"/>
        <property name="idleConnectionTestPeriod" value="10"/>
        <property name="maxIdleTime" value="30"/>
    </bean>

    <bean id="sessionFactoryPropDataManage" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="propDataManage"/>
        <property name="packagesToScan" value="com.latticeengines.domain.exposed.datacloud.customer"/>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">${pls.manage.dialect}</prop>
                <prop key="hibernate.show_sql">false</prop>
                <prop key="hibernate.globally_quoted_identifiers">true</prop>
            </props>
        </property>
    </bean>

    <bean id="transactionManagerPropDataManage" class="org.springframework.orm.hibernate4.HibernateTransactionManager"
          p:sessionFactory-ref="sessionFactoryPropDataManage">
        <qualifier value="propDataManage"/>
    </bean>

   <tx:annotation-driven/>
    <bean id="dataCloudDao" class="com.latticeengines.pls.dao.impl.DataCloudDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryPropDataManage" />
    </bean>
</beans>
