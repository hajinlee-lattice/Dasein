    <!-- Hibernate session factory -->
    <bean id="sessionFactoryAccountMaster" class="org.springframework.orm.jpa.vendor.HibernateJpaSessionFactoryBean">
        <property name="entityManagerFactory" ref="entityManagerFactoryAccountMaster" />
    </bean>

    <!-- Entity manager factory -->
    <bean id="entityManagerFactoryAccountMaster"
          class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="dataSource" ref="dataSourceAccountMaster" />
        <property name="packagesToScan" value="com.latticeengines.domain.exposed.pls, com.latticeengines.domain.exposed.metadata, com.latticeengines.domain.exposed.modelreview, com.latticeengines.domain.exposed.security, com.latticeengines.domain.exposed.workflow, com.latticeengines.domain.exposed.multitenant" />
        <property name="jpaVendorAdapter">
            <bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
                <!-- property name="prepareConnection" value="false"/-->
            </bean>
        </property>
        <property name="jpaProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</prop>
                <prop key="hibernate.show_sql">true</prop>
                <prop key="hibernate.globally_quoted_identifiers">true</prop>
                <prop key="hibernate.id.new_generator_mappings">true</prop>
                <prop key="hibernate.current_session_context_class">org.springframework.orm.hibernate5.SpringSessionContext</prop>
                <prop key="hibernate.allow_refresh_detached_entity">true</prop>
                <!-- prop key="hibernate.connection.release_mode">on_close</prop-->
                <!-- prop key="hibernate.connection.handling_mode">DELAYED_ACQUISITION_AND_RELEASE_AFTER_TRANSACTION</prop-->
            </props>
        </property>
    </bean>

    <bean id="transactionManagerAccountMaster" class="org.springframework.orm.hibernate5.HibernateTransactionManager"
          p:sessionFactory-ref="sessionFactoryAccountMaster">
        <qualifier value="accountMaster"/>
    </bean>

    <tx:annotation-driven transaction-manager="transactionManagerAccountMaster"/>
    <jpa:repositories base-package="com.latticeengines.pls.repository" base-class="com.latticeengines.db.exposed.repository.impl.BaseJpaRepositoryImpl"
                      entity-manager-factory-ref="entityManagerFactory" transaction-manager-ref="transactionManager"  />

    <!--  DAOs for AccountMaster database  -->
    <bean id="companyDao" class="com.latticeengines.pls.dao.impl.CompanyDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryAccountMaster"/>
    </bean>

    <bean id="contactDao" class="com.latticeengines.pls.dao.impl.ContactDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryAccountMaster"/>
    </bean>

    <bean id="amAttributeDao" class="com.latticeengines.pls.dao.impl.AmAttributeDaoImpl">
        <property name="sessionFactory" ref="sessionFactoryAccountMaster"/>
    </bean>

</beans>
