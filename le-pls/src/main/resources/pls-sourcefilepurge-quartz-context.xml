<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="sourceFilePurgeJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="durability" value="true" />
        <property name="jobClass" value="com.latticeengines.pls.service.impl.SourceFilePurgeServiceImpl" />
        <property name="jobDataAsMap">
            <map>
                <entry key="sourceFileService" value-ref="sourceFileService" />
                <entry key="sourceFileEntityMgr" value-ref="sourceFileEntityMgr" />
                <entry key="yarnConfiguration" value-ref="yarnConfiguration" />
                <entry key="tenantEntityMgr" value-ref="tenantEntityMgr" />
                <entry key="retainDays" value="${pls.sourcefile.retain.days}" />
            </map>
        </property>
    </bean>

    <!-- Cron Trigger, run every day at 5am -->
    <bean id="sourceFilePurgeCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="sourceFilePurgeJob" />
        <property name="cronExpression" value="0 0 5 * * ?" />
    </bean>


</beans>
