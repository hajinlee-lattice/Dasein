<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">


    <bean id="placeholderConfigurer" class="com.latticeengines.common.exposed.util.PropertyUtils">
        <property name="locations">
            <list>
                <value>file:${DB_PROPDIR:/etc/ledp}/db.properties</value>
                <value>file:${PLS_PROPDIR:/etc/ledp}/pls.properties</value>
                <value>file:${SECURITY_PROPDIR:/etc/ledp}/security.properties</value>
                <value>file:${PROXY_PROPDIR:/etc/ledp}/proxy.properties</value>
                <value>file:${WORKFLOW_PROPDIR:/etc/ledp}/workflow.properties</value>
                <value>file:${MONITOR_PROPDIR:/etc/ledp}/monitor.properties</value>
                <value>file:${SCORINGAPI_PROPDIR:/etc/ledp}/scoringapi.properties</value>
            </list>
        </property>
        <property name="ignoreUnresolvablePlaceholders" value="false"/>
        <property name="ignoreResourceNotFound" value="false"/>
    </bean>

</beans>
