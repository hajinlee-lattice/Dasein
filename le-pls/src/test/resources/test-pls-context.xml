<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <import resource="classpath:pls-context.xml"/>
    <import resource="classpath:test-testframework-context.xml"/>
    <import resource="classpath:test-pls-properties-context.xml"/>
    <import resource="classpath:remote-context.xml"/>
    <import resource="classpath:swlib-context.xml"/>

    <context:component-scan base-package="com.latticeengines.common.exposed, com.latticeengines.scoringapi.exposed"/>

    <bean id="deploymentTestBed" class="com.latticeengines.testframework.security.impl.GlobalAuthDeploymentTestBed">
        <constructor-arg name="plsApiHostPort" value="${pls.test.deployment.api}"/>
        <constructor-arg name="adminApiHost" value="${pls.test.deployment.admin.api}"/>
        <constructor-arg name="environment" value="${pls.test.env}"/>
    </bean>

</beans>