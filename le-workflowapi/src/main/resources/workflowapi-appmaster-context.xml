<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="placeholderConfigurer" class="com.latticeengines.common.exposed.util.PropertyUtils">
        <property name="locations">
            <list>
                <value>file:workflow.properties</value>
                <value>file:workflowapi.properties</value>
                <value>file:dataplatform.properties</value>
                <value>file:db.properties</value>
                <value>file:security.properties</value>
                <value>file:proxy.properties</value>
                <value>file:propdata.properties</value>
                <value>file:monitor.properties</value>
                <value>file:camille.properties</value>
            </list>
        </property>
        <property name="ignoreUnresolvablePlaceholders" value="false" />
        <property name="ignoreResourceNotFound" value="false" />
    </bean>

    <bean id="itemProcessor" class="com.latticeengines.workflowapi.yarn.runtime.WorkflowProcessor" />

    <import resource="classpath:batch-amjob/dataplatform-batch-appmaster-context.xml" />
    <import resource="classpath:dataplatform-context.xml" />
    <import resource="classpath:workflow-context.xml" />
    <import resource="classpath:workflowapi-yarn-context.xml" />
</beans>
