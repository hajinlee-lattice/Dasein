<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.latticeengines.workflowapi">
        <context:exclude-filter type="aspectj" expression="com.latticeengines.workflowapi.controller.*" />
    </context:component-scan>
    <import resource="classpath:workflow-context.xml"/>
    <import resource="classpath:yarn-context.xml"/>
    <import resource="classpath:workflowapi-yarn-client-context.xml"/>
    <import resource="classpath:proxy-context.xml"/>
    <import resource="classpath:cache-context.xml"/>
    <import resource="classpath:quartzclient-context.xml"/>

</beans>
