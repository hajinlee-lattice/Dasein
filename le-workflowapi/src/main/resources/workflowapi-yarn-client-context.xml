<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="workflowapiClient" class="org.springframework.yarn.fs.PrototypeYarnClientFactoryBean"
        scope="prototype">
        <property name="appName" value="workflowapi" />
        <property name="configuration">
            <ref bean="yarnConfiguration" />
        </property>
        <property name="resourceLocalizer">
            <ref bean="defaultYarnLocalResources" />
        </property>
    </bean>

</beans>