<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="ColorConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd'T'HH:mm:ss,SSSXXX}{UTC} [%t] %-5p %c{1.}:%L - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="ColorConsole"/>
        </Root>
        <Logger name="com.latticeengines.monitor.exposed.metrics.impl" additivity="false" level="WARN">
            <AppenderRef ref="ColorConsole"/>
        </Logger>
        <Logger name="com.latticeengines.monitor.metric.service.impl" additivity="false" level="WARN">
            <AppenderRef ref="ColorConsole"/>
        </Logger>
    </Loggers>
</Configuration>
