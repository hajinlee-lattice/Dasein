<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:component-scan base-package="com.latticeengines.workflowapi"/>
    <context:component-scan base-package="com.latticeengines.apps.cdl">
        <context:exclude-filter type="aspectj" expression="com.latticeengines.apps.cdl.controller.*" />
        <context:exclude-filter type="aspectj" expression="com.latticeengines.apps.cdl.provision.*" />
    </context:component-scan>

    <import resource="classpath:common-testclient-env-context.xml"/>
    <import resource="classpath:serviceapps-cdl-context.xml"/>
    <import resource="classpath:serviceflows-cdl-workflow-context.xml" />
    <import resource="classpath:testframework-context.xml"/>
    <import resource="classpath:workflowapi-context.xml"/>
    <import resource="classpath:yarn-context.xml"/>

</beans>
