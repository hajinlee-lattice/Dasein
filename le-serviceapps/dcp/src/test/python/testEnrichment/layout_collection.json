							"});",
							"/* pm.environment.set(\"source_id\", \"Source_oap0y5vh\"); */",
							"if(pm.response.code !== 200) {",
							"    postman.setNextRequest(null)",
							"}",
							"else {",
							"     postman.setNextRequest(\"GetEntitlementForSource\"); ",
							"}",
							""
						],
						"type": "text/javascript"
					}
				}
			],
