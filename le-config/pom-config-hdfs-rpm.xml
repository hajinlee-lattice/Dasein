<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>le-config-hdfs-rpm</artifactId>
    <packaging>rpm</packaging>
    <description>LE CONFIG HDFS RPM</description>

    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-parent</artifactId>
        <version>3.7.0-SNAPSHOT</version>
        <relativePath>../le-parent</relativePath>
    </parent>

    <properties>
        <le.rpm.version>3.7.0-SNAPSHOT</le.rpm.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-4</version>
                <extensions>true</extensions>
                <configuration>
                    <group>Application/Collectors</group>
                    <changelogFile>src/main/resources/changelog</changelogFile>
                    <mappings>
                        <mapping>
                            <directory>/tmp/ledp</directory>
                            <filemode>777</filemode>
                            <sources>
                                <source>
                                    <location>conf/env</location>
                                </source>
                                <source>
                                    <location>src/main/resources/log4j.properties</location>
                                </source>
                                <source>
                                    <location>src/main/python/replace_token.py</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preinstallScriptlet>
                        <scriptFile>src/main/scripts/hdfs/preinstall</scriptFile>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>src/main/scripts/hdfs/postinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
