<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:annotation-config />
    <context:component-scan base-package="com.latticeengines.yarn">
        <context:exclude-filter type="aspectj"
            expression="com.latticeengines.yarn.exposed.yarn.runtime.*" />
    </context:component-scan>

    <import resource="classpath:hadoop-config-context.xml" />
    <import resource="classpath:yarn-mr-config-context.xml" />
    <import resource="classpath:yarn-client-context.xml" />
    <import resource="classpath:db-context.xml" />
    <import resource="classpath:common-component-context.xml" />
    <import resource="classpath:common-threadpool-context.xml" />
    <import resource="classpath:swlib-context.xml" />

    <bean id="sprintYarnClient" class="org.springframework.yarn.client.YarnClientFactoryBean">
        <property name="configuration" ref="baseConfiguration" />
    </bean>

</beans>
