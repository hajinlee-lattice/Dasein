<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <import resource="classpath:microservice-context.xml"/>
    <import resource="classpath:microservice-security-context.xml"/>
    <import resource="classpath:datacloudapi-api-context.xml"/>
    <import resource="classpath:quartzclient-context.xml"/>
    <import resource="classpath:workflow-context.xml"/>
    <import resource="classpath:datacloud-collection-context.xml"/>

    <context:component-scan base-package="
        com.latticeengines.datacloudapi.api.controller,
        com.latticeengines.microservice.datacloudapi,
        com.latticeengines.datacloudapi.qbean,
        com.latticeengines.datacloud.collection.quartz"
    />

    <bean id="datacloudapiHealthCheck" class="com.latticeengines.monitor.exposed.metric.stats.impl.HealthInspection">
        <property name="componentName" value="datacloudapi-microservice" />
    </bean>

</beans>
