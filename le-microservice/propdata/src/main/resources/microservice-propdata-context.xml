<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <import resource="classpath:microservice-context.xml"/>
    <import resource="classpath:propdata-api-context.xml"/>
    <import resource="classpath:quartzclient-resource-context.xml"/>
    <import resource="classpath:microservice-propdata-embedded-server-context.xml"/>

    <context:component-scan base-package="com.latticeengines.propdata.api.controller, com.latticeengines.microservice.propdata"/>

    <bean id="propdataHealthCheck" class="com.latticeengines.monitor.exposed.metric.stats.impl.HealthInspection">
        <property name="componentName" value="propdata-microservice" />
    </bean>

    <bean id="embeddedDbLoader" class="com.latticeengines.propdata.match.service.impl.EmbeddedDbLoader">
        <property name="embeddedDbService" ref="embeddedDbService"/>
        <property name="preloadEnabled" value="${propdata.embedded.preload.enabled:false}"/>
    </bean>

</beans>
