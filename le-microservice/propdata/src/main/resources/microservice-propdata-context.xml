<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <import resource="classpath:microservice-context.xml"/>
    <import resource="classpath:propdata-api-context.xml"/>

    <context:component-scan base-package="com.latticeengines.propdata.api.controller, com.latticeengines.microservice.propdata"/>

    <bean id="propdataHealthCheck" class="com.latticeengines.monitor.exposed.metric.stats.impl.HealthInspection">
        <property name="componentName" value="propdata-microservice" />
    </bean>

    <bean id="propdataFetchPoolTracker" class="com.latticeengines.monitor.exposed.metric.stats.impl.ThreadPoolInspection">
        <property name="inspectionName" value="propdata-num-fetchers" />
        <property name="taskExecutor" ref="matchExecutor" />
    </bean>

</beans>
