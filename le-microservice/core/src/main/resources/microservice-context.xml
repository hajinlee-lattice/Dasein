<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:mvc="http://www.springframework.org/schema/mvc"
  xsi:schemaLocation="
  http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
  http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

    <import resource="classpath:network-context.xml"/>
    <import resource="classpath:common-component-context.xml"/>
  
    <context:component-scan base-package="com.latticeengines.microservice">
        <context:exclude-filter type="assignable" expression="com.latticeengines.microservice.swagger.SwaggerConfig" />
        <context:exclude-filter type="assignable" expression="com.latticeengines.microservice.doc.DocketProviderImpl" />
        <context:exclude-filter type="assignable" expression="com.latticeengines.microservice.controller.StatusController" />
    </context:component-scan>

    <mvc:annotation-driven />

    <bean id="apiVersionManager"
          class="com.latticeengines.common.exposed.version.VersionManager">
        <constructor-arg name="currentVersion" value="2.0.27-SNAPSHOT" />
    </bean>

    <import resource="classpath:monitor-aspects-context.xml"/>
    
</beans>
