<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
  http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
    http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

    <import resource="classpath:network-context.xml"/>
    <import resource="classpath:common-component-context.xml"/>
    <import resource="classpath:common-webapp-env-context.xml"/>
    <import resource="classpath:security-aspect-context.xml"/>

    <context:component-scan base-package="com.latticeengines.microservice.exposed"/>
    <bean class="com.latticeengines.microservice.swagger.SwaggerConfig" />

    <mvc:annotation-driven>
        <mvc:message-converters>
            <bean class="org.springframework.http.converter.StringHttpMessageConverter"/>
            <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter"/>
            <bean class="com.latticeengines.common.exposed.converter.KryoHttpMessageConverter"/>
        </mvc:message-converters>
    </mvc:annotation-driven>

    <mvc:interceptors>
        <bean class="io.opentracing.contrib.spring.web.interceptor.TracingHandlerInterceptor">
            <constructor-arg ref="tracer"/>
        </bean>
    </mvc:interceptors>

    <bean id="tracingFilter" class="io.opentracing.contrib.web.servlet.filter.TracingFilter">
        <constructor-arg ref="tracer"/>
    </bean>

    <bean id="apiVersionManager"
          class="com.latticeengines.common.exposed.version.VersionManager">
        <constructor-arg name="currentVersion" value="4.28.0-SNAPSHOT"/>
    </bean>

    <import resource="classpath:monitor-aspects-context.xml"/>
    <import resource="classpath:monitor-metric-context.xml"/>
    <import resource="classpath:monitor-alerts-context.xml"/>

    <import resource="classpath:security-no-controller-context.xml"/>
    <import resource="classpath:security-provider-context.xml"/>

    <aop:aspectj-autoproxy proxy-target-class="true"/>
    <bean id="resourceAspect" class="com.latticeengines.db.exposed.aspect.CleanupMultiTenantContextAspect"/>

</beans>
