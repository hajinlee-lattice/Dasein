<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>le-${component-name}</artifactId>
    <packaging>war</packaging>
    <name>le-${component-name}</name>
    <description>LE MODELING</description>

    <properties>
        <component-name>microservice</component-name>
        <le.dataplatform.version>4.3.0-SNAPSHOT</le.dataplatform.version>
        <le.domain.version>4.3.0-SNAPSHOT</le.domain.version>
        <le.monitor.version>4.3.0-SNAPSHOT</le.monitor.version>
        <jetty.port>8080</jetty.port>
        <jett.stop.port>10980</jett.stop.port>
        <jetty.dir>test</jetty.dir>
        <jetty.use.test.cp>true</jetty.use.test.cp>
    </properties>

    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-microservice-parent</artifactId>
        <version>4.3.0-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <version>${maven.war.version}</version>
                <configuration>
                    <attachClasses>true</attachClasses>
                    <classesClassifier>classes</classesClassifier>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.latticeengines</groupId>
            <artifactId>le-security</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
</project>
