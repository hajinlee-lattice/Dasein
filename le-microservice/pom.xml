    <properties>
        <component-name>microservice-parent</component-name>
        <le.monitor.version>3.7.0-SNAPSHOT</le.monitor.version>
        <le.microservice.version>3.7.0-SNAPSHOT</le.microservice.version>
        <le.propdata.version>3.7.0-SNAPSHOT</le.propdata.version>
        <le.network.version>3.7.0-SNAPSHOT</le.network.version>
