<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>le-microservice-rpm</artifactId>
    <packaging>rpm</packaging>
    <description>LE MICROSERVICE RPM</description>

    <properties>
        <le.rpm.version>2.0.12-SNAPSHOT</le.rpm.version>
    </properties>

    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-parent</artifactId>
        <version>2.0.12-SNAPSHOT</version>
        <relativePath>../le-parent</relativePath>
    </parent>

    <profiles>
        <profile>
            <id>buildmachine</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>environment.type</name>
                    <value>buildmachine</value>
                </property>
            </activation>
            <properties>
                <eai.properties.path>../le-eai/conf/env/buildmachine</eai.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/buildmachine
                </dataplatform.properties.path>
                <db.properties.path>../le-db/conf/env/buildmachine</db.properties.path>
                <security.properties.path>../le-security/conf/env/buildmachine</security.properties.path>
                <metadata.properties.path>../le-metadata/conf/env/buildmachine</metadata.properties.path>
                <dataflowapi.properties.path>../le-dataflowapi/conf/env/buildmachine</dataflowapi.properties.path>
                <bin.env.path>bin/env/buildmachine</bin.env.path>
            </properties>
        </profile>
        <profile>
            <id>development</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>environment.type</name>
                    <value>devcluster</value>
                </property>
            </activation>
            <properties>
                <eai.properties.path>../le-eai/conf/env/devcluster</eai.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/devcluster
                </dataplatform.properties.path>
                <db.properties.path>../le-db/conf/env/devcluster</db.properties.path>
                <security.properties.path>../le-security/conf/env/devcluster</security.properties.path>
                <metadata.properties.path>../le-metadata/conf/env/devcluster</metadata.properties.path>
                <dataflowapi.properties.path>../le-dataflowapi/conf/env/devcluster</dataflowapi.properties.path>
                <bin.env.path>bin/env/devcluster</bin.env.path>
            </properties>
        </profile>
        <profile>
            <id>qa</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>qacluster</value>
                </property>
            </activation>
            <properties>
                <eai.properties.path>../le-eai/conf/env/qacluster</eai.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/qacluster
                </dataplatform.properties.path>
                <db.properties.path>../le-db/conf/env/qacluster</db.properties.path>
                <security.properties.path>../le-security/conf/env/qacluster</security.properties.path>
                <metadata.properties.path>../le-metadata/conf/env/qacluster</metadata.properties.path>
                <dataflowapi.properties.path>../le-dataflowapi/conf/env/qacluster</dataflowapi.properties.path>
                <bin.env.path>bin/env/qacluster</bin.env.path>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>prodcluster</value>
                </property>
            </activation>
            <properties>
                <eai.properties.path>../le-eai/conf/env/prodcluster</eai.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/prodcluster
                </dataplatform.properties.path>
                <db.properties.path>../le-db/conf/env/prodcluster</db.properties.path>
                <security.properties.path>../le-security/conf/env/procluster</security.properties.path>
                <metadata.properties.path>../le-metadata/conf/env/procluster</metadata.properties.path>
                <dataflowapi.properties.path>../le-dataflowapi/conf/env/procluster</dataflowapi.properties.path>
                <bin.env.path>bin/env/prodcluster</bin.env.path>
            </properties>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-4</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- license>GPL (c) 2005, SWWDC</license -->
                    <!--distribution>Trash 2005</distribution -->
                    <group>Application/Collectors</group>
                    <mappings>
                        <mapping>
                            <directory>/opt/jetty/webapps</directory>
                            <filemode>755</filemode>
                            <username>yarn</username>
                            <groupname>yarn</groupname>
                            <sources>
                                <source>
                                    <location>core/target/le-microservice-${le.rpm.version}.war</location>
                                </source>
                                <source>
                                    <location>modeling/target/le-modeling-microservice-${le.rpm.version}.war</location>
                                </source>
                                <source>
                                    <location>eai/target/le-eai-microservice-${le.rpm.version}.war</location>
                                </source>
                                <source>
                                    <location>metadata/target/le-metadata-microservice-${le.rpm.version}.war</location>
                                </source>
                                <source>
                                    <location>dataflowapi/target/le-dataflowapi-microservice-${le.rpm.version}.war</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/etc/ledp</directory>
                            <filemode>755</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
                            <sources>
                                <source>
                                    <location>${eai.properties.path}/eai.properties</location>
                                </source>
                                <source>
                                    <location>${dataplatform.properties.path}/dataplatform.properties</location>
                                </source>
                                <source>
                                    <location>${db.properties.path}/db.properties</location>
                                </source>
                                <source>
                                    <location>${security.properties.path}/security.properties</location>
                                </source>
                                <source>
                                    <location>${dataflowapi.properties.path}/dataflowapi.properties</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/opt/jetty/bin</directory>
                            <filemode>755</filemode>
                            <username>yarn</username>
                            <groupname>yarn</groupname>
                            <sources>
                                <source>
                                    <location>${bin.env.path}/jetty.sh</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/home/yarn</directory>
                            <filemode>700</filemode>
                            <username>yarn</username>
                            <groupname>hadoop</groupname>
                            <sources>
                                <source>
                                    <location>${bin.env.path}/.bashrc</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preremoveScriptlet>
                        <scriptFile>core/src/main/scripts/preremove</scriptFile>
                    </preremoveScriptlet>
                    <preinstallScriptlet>
                        <scriptFile>core/src/main/scripts/preinstall</scriptFile>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>core/src/main/scripts/postinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
