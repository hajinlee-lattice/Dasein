<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.latticeengines</groupId>
    <artifactId>le-microservice-tc-rpm</artifactId>
    <version>4.14.0-SNAPSHOT</version>
    <packaging>rpm</packaging>
    <description>LE MICROSERVICE RPM</description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1.5</version>
                <extensions>true</extensions>
                <configuration>
                    <group>Application/Collectors</group>
                    <sourceEncoding>utf-8</sourceEncoding>
                    <mappings>
                        <mapping>
                            <directory>/tmp/le-microservice-tc-rpm/ms</directory>
                            <sources>
                                <source>
                                    <location>core/target/le-microservice-${project.version}.war</location>
                                    <destination>ROOT.war</destination>
                                </source>
                                <source>
                                    <location>modeling/target/le-modeling-microservice-${project.version}.war</location>
                                    <destination>modeling.war</destination>
                                </source>
                                <source>
                                    <location>eai/target/le-eai-microservice-${project.version}.war</location>
                                    <destination>eai.war</destination>
                                </source>
                                <source>
                                    <location>metadata/target/le-metadata-microservice-${project.version}.war</location>
                                    <destination>metadata.war</destination>
                                </source>
                                <source>
                                    <location>dataflowapi/target/le-dataflowapi-microservice-${project.version}.war
                                    </location>
                                    <destination>dataflowapi.war</destination>
                                </source>
                                <source>
                                    <location>datacloudapi/target/le-datacloudapi-microservice-${project.version}.war
                                    </location>
                                    <destination>datacloudapi.war</destination>
                                </source>
                                <source>
                                    <location>scoring/target/le-scoring-microservice-${project.version}.war</location>
                                    <destination>scoring.war</destination>
                                </source>
                                <source>
                                    <location>workflowapi/target/le-workflowapi-microservice-${project.version}.war
                                    </location>
                                    <destination>workflowapi.war</destination>
                                </source>
                                <source>
                                    <location>quartz/target/le-quartz-microservice-${project.version}.war</location>
                                    <destination>quartz.war</destination>
                                </source>
                                <source>
                                    <location>dellebi/target/le-dellebi-microservice-${project.version}.war</location>
                                    <destination>dellebi.war</destination>
                                </source>
                                <source>
                                    <location>modelquality/target/le-modelquality-microservice-${project.version}.war
                                    </location>
                                    <destination>modelquality.war</destination>
                                </source>
                                <source>
                                    <location>sqoop/target/le-sqoop-microservice-${project.version}.war</location>
                                    <destination>sqoop.war</destination>
                                </source>
                                <source>
                                    <location>objectapi/target/le-objectapi-microservice-${project.version}.war
                                    </location>
                                    <destination>objectapi.war</destination>
                                </source>
                                <source>
                                    <location>dante/target/le-dante-microservice-${project.version}.war</location>
                                    <destination>dante.war</destination>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/tmp/le-microservice-tc-rpm/env</directory>
                            <sources>
                                <source>
                                    <location>core/conf/env</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preremoveScriptlet>
                        <scriptFile>core/src/main/scripts/preremove</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </preremoveScriptlet>
                    <preinstallScriptlet>
                        <scriptFile>core/src/main/scripts/preinstall_tc</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>core/src/main/scripts/postinstall_tc</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
