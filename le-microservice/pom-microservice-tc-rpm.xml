    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-4</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- license>GPL (c) 2005, SWWDC</license -->
                    <!--distribution>Trash 2005</distribution -->
                    <group>Application/Collectors</group>
                    <mappings>
                        <mapping>
                            <directory>/tmp/webapps</directory>
                            <filemode>755</filemode>
                            <username>yarn</username>
                            <groupname>yarn</groupname>
                            <sources>
                                <source>
                                    <location>core/target/le-microservice-${le.rpm.version}.war</location>
                                </source>
                                <source>
                                    <location>modeling/target/le-modeling-microservice-${le.rpm.version}.war</location>
                                </source>
                                <source>
                                    <location>eai/target/le-eai-microservice-${le.rpm.version}.war</location>
                                </source>
                                <source>
                                    <location>metadata/target/le-metadata-microservice-${le.rpm.version}.war</location>
                                </source>
                                <source>
                                    <location>dataflowapi/target/le-dataflowapi-microservice-${le.rpm.version}.war</location>
                                </source>
                                <source>
                                    <location>propdata/target/le-propdata-microservice-${le.rpm.version}.war</location>
                                </source>
                                <source>
                                    <location>scoring/target/le-scoring-microservice-${le.rpm.version}.war</location>
                                </source>
                                <source>
                                    <location>workflowapi/target/le-workflowapi-microservice-${le.rpm.version}.war</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/etc/ledp</directory>
                            <filemode>755</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
                            <sources>
                                <source>
                                    <location>${eai.properties.path}/eai.properties</location>
                                </source>
                                <source>
                                    <location>${dataplatform.properties.path}/dataplatform.properties</location>
                                </source>
                                <source>
                                    <location>${db.properties.path}/db.properties</location>
                                </source>
                                <source>
                                    <location>${security.properties.path}/security.properties</location>
                                </source>
                                <source>
                                    <location>${metadata.properties.path}/metadata.properties</location>
                                </source>
                                <source>
                                    <location>${dataflowapi.properties.path}/dataflowapi.properties</location>
                                </source>
                                <source>
                                    <location>${propdata.properties.path}/propdata.properties</location>
                                </source>
                                <source>
                                    <location>${monitor.properties.path}/monitor.properties</location>
                                </source>
                                <source>
                                    <location>${scoring.properties.path}/scoring.properties</location>
                                </source>
                                <source>
                                    <location>${workflowapi.properties.path}/workflowapi.properties</location>
                                </source>
                                <source>
                                    <location>${workflow.properties.path}/workflow.properties</location>
                                </source>
                                <source>
                                    <location>${proxy.properties.path}/proxy.properties</location>
                                </source>
                                <source>
                                    <location>${dataflow.properties.path}/dataflow.properties</location>
                                </source>
                                <source>
                                    <location>${camille.properties.path}/camille.properties</location>
                                </source>
                                <source>
                                    <location>${microservice.properties.path}/microservice.properties</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preremoveScriptlet>
                        <scriptFile>core/src/main/scripts/preremove</scriptFile>
                    </preremoveScriptlet>
                    <preinstallScriptlet>
                        <scriptFile>core/src/main/scripts/preinstall_tc</scriptFile>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>core/src/main/scripts/postinstall_tc</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
