                <workflowapi.properties.path>../le-workflowapi/conf/env/qaclusterb</workflowapi.properties.path>
                <workflow.properties.path>../le-workflow/conf/env/qaclusterb</workflow.properties.path>
                <proxy.properties.path>../le-proxy/conf/env/qaclusterb</proxy.properties.path>
                <dataflow.properties.path>../le-dataflow/conf/env/qaclusterb</dataflow.properties.path>
                <camille.properties.path>../le-camille/conf/env/qaclusterb</camille.properties.path>
