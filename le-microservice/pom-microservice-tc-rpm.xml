<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>le-microservice-tc-rpm</artifactId>
    <packaging>rpm</packaging>
    <description>LE MICROSERVICE RPM</description>

    <properties>
        <le.rpm.version>2.0.44-SNAPSHOT</le.rpm.version>
    </properties>

    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-parent</artifactId>
        <version>2.0.44-SNAPSHOT</version>
        <relativePath>../le-parent</relativePath>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-4</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- license>GPL (c) 2005, SWWDC</license -->
                    <!--distribution>Trash 2005</distribution -->
                    <group>Application/Collectors</group>
                    <mappings>
                        <mapping>
                            <directory>/tmp/le-microservice-tc-rpm/ms</directory>
                            <sources>
                                <source>
                                    <location>core/target/le-microservice-${le.rpm.version}.war</location>
                                    <destination>ROOT.war</destination>
                                </source>
                                <source>
                                    <location>modeling/target/le-modeling-microservice-${le.rpm.version}.war</location>
                                    <destination>modeling.war</destination>
                                </source>
                                <source>
                                    <location>eai/target/le-eai-microservice-${le.rpm.version}.war</location>
                                    <destination>eai.war</destination>
                                </source>
                                <source>
                                    <location>metadata/target/le-metadata-microservice-${le.rpm.version}.war</location>
                                    <destination>metadata.war</destination>
                                </source>
                                <source>
                                    <location>dataflowapi/target/le-dataflowapi-microservice-${le.rpm.version}.war</location>
                                    <destination>dataflowapi.war</destination>
                                </source>
                                <source>
                                    <location>propdata/target/le-propdata-microservice-${le.rpm.version}.war</location>
                                    <destination>propdata.war</destination>
                                </source>
                                <source>
                                    <location>scoring/target/le-scoring-microservice-${le.rpm.version}.war</location>
                                    <destination>scoring.war</destination>
                                </source>
                                <source>
                                    <location>workflowapi/target/le-workflowapi-microservice-${le.rpm.version}.war</location>
                                    <destination>workflowapi.war</destination>
                                </source>
                                <source>
                                    <location>quartz/target/le-quartz-microservice-${le.rpm.version}.war</location>
                                    <destination>quartz.war</destination>
                                </source>
                                <source>
                                    <location>dellebi/target/le-dellebi-microservice-${le.rpm.version}.war</location>
                                    <destination>dellebi.war</destination>
                                </source>
                                <source>
                                    <location>modelquality/target/le-modelquality-microservice-${le.rpm.version}.war</location>
                                    <destination>modelquality.war</destination>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/tmp/le-microservice-tc-rpm/env</directory>
                            <sources>
                                <source>
                                    <location>core/conf/env</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preremoveScriptlet>
                        <scriptFile>core/src/main/scripts/preremove</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </preremoveScriptlet>
                    <preinstallScriptlet>
                        <scriptFile>core/src/main/scripts/preinstall_tc</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>core/src/main/scripts/postinstall_tc</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
