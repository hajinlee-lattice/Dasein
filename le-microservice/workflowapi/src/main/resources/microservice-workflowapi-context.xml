<?xml version="1.0" encoding="UTF-8"?><beans xmlns="http://www.springframework.org/schema/beans"       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"       xmlns:context="http://www.springframework.org/schema/context"       xmlns:security="http://www.springframework.org/schema/security"       xsi:schemaLocation="http://www.springframework.org/schema/beans       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd       http://www.springframework.org/schema/context       http://www.springframework.org/schema/context/spring-context-4.0.xsd       http://www.springframework.org/schema/security       http://www.springframework.org/schema/security/spring-security-4.2.xsd">    <import resource="classpath:microservice-context.xml"/>    <security:http auto-config="false"                   use-expressions="true"                   pattern="/**"                   entry-point-ref="restAuthenticationEntryPoint"                   create-session="stateless">        <security:csrf disabled="true"/>        <security:intercept-url pattern="/health" access="permitAll" />        <security:intercept-url pattern="/redirect/**" access="permitAll" />        <security:intercept-url pattern="/v2/api-docs" access="permitAll" />        <security:intercept-url pattern="/**" access="hasRole('INTERNAL_USER')" />        <security:custom-filter ref="internalRestServicesFilter" before="PRE_AUTH_FILTER" />    </security:http>    <import resource="classpath:workflowapi-context.xml"/>    <context:component-scan base-package="com.latticeengines.workflowapi.controller, com.latticeengines.microservice.workflowapi" />    <bean id="workflowapiHealthCheck" class="com.latticeengines.monitor.exposed.metric.stats.impl.HealthInspection">        <property name="componentName" value="workflowapi-microservice" />    </bean></beans>