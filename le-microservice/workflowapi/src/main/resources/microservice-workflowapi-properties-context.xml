<?xml version="1.0" encoding="UTF-8"?><beans xmlns="http://www.springframework.org/schema/beans"       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"       xsi:schemaLocation="http://www.springframework.org/schema/beans      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">    <bean id="placeholderConfigurer" class="com.latticeengines.common.exposed.util.PropertyUtils">        <property name="locations">            <list>                <value>file:${WORKFLOW_PROPDIR:/etc/ledp}/workflow.properties</value>                <value>file:${WORKFLOWAPI_PROPDIR:/etc/ledp}/workflowapi.properties</value>                <value>file:${DATAPLATFORM_PROPDIR:/etc/ledp}/dataplatform.properties</value>                <value>file:${DB_PROPDIR:/etc/ledp}/db.properties</value>                <value>file:${SECURITY_PROPDIR:/etc/ledp}/security.properties</value>                <value>file:${PROXY_PROPDIR:/etc/ledp}/proxy.properties</value>            </list>        </property>        <property name="ignoreUnresolvablePlaceholders" value="false" />        <property name="ignoreResourceNotFound" value="false" />    </bean></beans>