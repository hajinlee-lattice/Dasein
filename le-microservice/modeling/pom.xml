    <description>LE MODELING</description>

    <properties>
        <component-name>modeling-microservice</component-name>
        <le.microservice.version>2.0.20-SNAPSHOT</le.microservice.version>
        <le.dataplatform.version>2.0.20-SNAPSHOT</le.dataplatform.version>
        <le.domain.version>2.0.20-SNAPSHOT</le.domain.version>
        <le.monitor.version>2.0.20-SNAPSHOT</le.monitor.version>
        <sqoop.version>1.4.5.2.2.0.0-2041</sqoop.version>
        <hadoop.version>2.6.0.2.2.0.0-2041</hadoop.version>
