<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.latticeengines</groupId>
    <artifactId>le-ui</artifactId>
    <packaging>pom</packaging>
    <version>2.0.43-SNAPSHOT</version>
    <description>LE UI RPM</description>

    <properties>
        <le.rpm.version>2.0.43-SNAPSHOT</le.rpm.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>uipackage</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>tar</executable>
                            <workingDirectory>..</workingDirectory>
                            <arguments>
                                <argument>czf</argument>
                                <argument>le-ui.tar.gz</argument>
                                <argument>--exclude='*tests*'</argument>
                                <argument>--exclude='le-ui/target'</argument>
                                <argument>--exclude='le-ui/src'</argument>

                                <argument>--exclude='le-ui/projects/**/app'</argument>
                                <argument>--exclude='le-ui/projects/**/lib'</argument>
                                <argument>--exclude='le-ui/projects/**/test'</argument>
                                <argument>--exclude='le-ui/projects/**/node_modules'</argument>
                                <argument>--exclude='le-ui/projects/**/.sass_cache'</argument>

                                <argument>--exclude='le-ui/projects/common/components/**/*.js'</argument>
                                <argument>--exclude='le-ui/projects/common/components/**/*.scss'</argument>
                                <argument>--exclude='le-ui/projects/tenantconsole/assets'</argument>

                                <argument>--exclude='le-ui/projects/ng2'</argument> <!-- not using angular2 in production yet -->
                                <argument>le-ui</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
