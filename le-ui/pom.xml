<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.latticeengines</groupId>
    <artifactId>le-ui</artifactId>
    <packaging>pom</packaging>
    <version>4.12.0-SNAPSHOT</version>
    <description>LE UI</description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>uipackage</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>tar</executable>
                            <workingDirectory>..</workingDirectory>
                            <arguments>
                                <argument>czf</argument>
                                <argument>le-ui.tar.gz</argument>
                                <argument>--exclude=target</argument>
                                <argument>--exclude=src</argument>

                                <argument>--exclude=projects/**/test</argument>
                                <argument>--exclude=projects/**/node_modules</argument>
                                <argument>--exclude=projects/**/.sass_cache</argument>

                                <argument>--exclude=projects/common/components/**/*.js</argument>
                                <argument>--exclude=projects/common/components/**/*.scss</argument>
                                <argument>--exclude=projects/tenantconsole/assets</argument>

                                <argument>--exclude=projects/ng2</argument> <!-- not using angular2 in production yet -->
                                <argument>le-ui</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
