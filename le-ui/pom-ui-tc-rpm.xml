<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.latticeengines</groupId>
    <artifactId>le-ui-tc-rpm</artifactId>
    <packaging>rpm</packaging>
    <version>3.4.0-SNAPSHOT</version>
    <description>LE UI TOMCAT RPM</description>

    <properties>
        <le.rpm.version>3.4.0-SNAPSHOT</le.rpm.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>globalauthservicegen</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>tar</executable>
                            <workingDirectory>..</workingDirectory>
                            <arguments>
                                <argument>czf</argument>
                                <argument>le-ui.tar.gz</argument>
                                <argument>--exclude='*tests*'</argument>
                                <argument>--exclude='le-ui/target'</argument>
                                <argument>--exclude='le-ui/src'</argument>
                                <argument>le-ui</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-4</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- license>GPL (c) 2005, SWWDC</license -->
                    <!--distribution>Trash 2005</distribution -->
                    <group>Application/Collectors</group>
                    <changelogFile>src/main/resources/changelog</changelogFile>
                    <defineStatements>
                        <defineStatement>_unpackaged_files_terminate_build 0</defineStatement>
                    </defineStatements>
                    <mappings>
                        <mapping>
                            <directory>/tmp/le-ui</directory>
                            <sources>
                                <source>
                                    <location>../le-ui.tar.gz</location>
                                </source>
                                <source>
                                    <location>../le-config/src/main/python/replace_token.py</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preremoveScriptlet>
                        <scriptFile>src/main/resources/scripts/tcpreremove</scriptFile>
                    </preremoveScriptlet>
                    <preinstallScriptlet>
                        <scriptFile>src/main/resources/scripts/tcpreinstall</scriptFile>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>src/main/resources/scripts/tcpostinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
