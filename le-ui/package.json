{
  "name": "LE-WebApps",
  "version": "0.0.1",
  "dependencies": {
    "express": "^4.13.3",
    "express-handlebars": "^2.0.1",
    "request": "^2.65.0",
    "grunt": "^0.4.5",
    "grunt-env": "^0.4.4",
    "grunt-run": "^0.5.2",
    "nodemon": "^1.8.1"
  },
  "devDependencies": {},
  "scripts": {
    "//": "environmental",
    "qa": "npm run commoninit && npm run sass && concurrent -kr \"grunt qa\" \"npm run sentry\"",
    "dev": "npm run commoninit && npm run sass && concurrent -kr \"grunt dev\" \"npm run sentry\"",
    "prod": "npm run commoninit && npm run sass && npm run sass && grunt prod",
    
    "commoninit": "cd projects/common/ && npm install",

    "//": "concurrent projects",
    "sass": "concurrent -r \"npm run pdsass\"",
    "sentry": "concurrent -r \"npm run pdsentry\"",
    
    "//": "individual projects",
    "pdsass": "cd projects/prospectdiscovery/ && grunt sass",
    "pdsentry": "cd projects/prospectdiscovery/ && grunt sentry",
    "lpsass": "cd projects/leadprioritization/ && grunt sass",
    "lpsentry": "cd projects/leadprioritization/ && grunt sentry"
  }
}