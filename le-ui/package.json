{
  "name": "le-ui",
  "description": "Converged Platform",
  "license": "ISC",
  "repository": {
    "type": "svn",
    "url": "https://lesvn.lattice.local/svn/lattice/LEDP/branches/develop/ledp/le-ui"
  },
  "version": "0.0.1",
  "dependencies": {
    "concurrently": "^1.0.0",
    "express": "^4.13.3",
    "express-handlebars": "^2.0.1",
    "file-stream-rotator": "0.0.6",
    "grunt": "^0.4.5",
    "grunt-env": "^0.4.4",
    "grunt-run": "^0.5.2",
    "morgan": "^1.7.0",
    "nodemon": "^1.8.1",
    "request": "^2.65.0"
  },
  "devDependencies": {},
  "scripts": {
    "install": "npm run InstallDev",
    "postinstall": "npm run build",
    "InstallProduction": "npm run InstallCommon && npm run InstallLP && npm run InstallPD",
    "InstallDev": "concurrent \"npm run InstallDevCommon\" \"npm run InstallDevLogin\" \"npm run InstallDevLP\" \"npm run InstallDevPD\"",
    "//": "individual projects",
    "dev": "npm run sass && concurrent -kr \"grunt dev\" \"npm run sentry\"",
    "local": "npm run sass && concurrent -kr \"grunt local\" \"npm run sentry\"",
    "qa": "grunt qa",
    "prod": "grunt prod",
    "build": "concurrent \"npm run loginbuild\" \"npm run pdbuild\" \"npm run lpbuild\" ",
    "sass": "concurrent \"npm run commonsass\" \"npm run pdsass\" \"npm run lpsass\" ",
    "sentry": "concurrent \"npm run commonsentry\" \"npm run pdsentry\" \"npm run lpsentry\"",
    "InstallCommon": "cd projects/common/ && npm install --production",
    "InstallPD": "cd projects/prospectdiscovery/ && npm install --production",
    "InstallLP": "cd projects/leadprioritization/ && npm install --production",
    "InstallDevCommon": "cd projects/common/ && npm install",
    "InstallDevLogin": "cd projects/login/ && npm install",
    "InstallDevPD": "cd projects/prospectdiscovery/ && npm install",
    "InstallDevLP": "cd projects/leadprioritization/ && npm install",
    "commonbuild": "cd projects/common/ && grunt build",
    "loginbuild": "cd projects/login/ && grunt build",
    "pdbuild": "cd projects/prospectdiscovery/ && grunt build",
    "lpbuild": "cd projects/leadprioritization/ && grunt build",
    "commonsass": "cd projects/common/ && grunt sass:dist",
    "pdsass": "cd projects/prospectdiscovery/ && grunt sass:dev",
    "lpsass": "cd projects/leadprioritization/ && grunt sass:dev",
    "commonsentry": "cd projects/common/ && grunt sentry",
    "pdsentry": "cd projects/prospectdiscovery/ && grunt sentry",
    "lpsentry": "cd projects/leadprioritization/ && grunt sentry"
  }
}
