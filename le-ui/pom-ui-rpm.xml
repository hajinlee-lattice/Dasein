<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.latticeengines</groupId>
    <artifactId>le-ui-rpm</artifactId>
    <packaging>rpm</packaging>
    <version>2.0.32-SNAPSHOT</version>
    <description>LE UI RPM</description>

    <properties>
        <le.rpm.version>2.0.32-SNAPSHOT</le.rpm.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <profiles>
        <profile>
            <id>buildmachine</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>buildmachine</value>
                </property>
            </activation>
            <properties>
                <ui.environ.variables.path>conf/env/buildmachine</ui.environ.variables.path>
            </properties>
        </profile>
        <profile>
            <id>devcluster</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>devcluster</value>
                </property>
            </activation>
            <properties>
                <ui.environ.variables.path>conf/env/devcluster</ui.environ.variables.path>
            </properties>
        </profile>
        <profile>
            <id>qacluster</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>qacluster</value>
                </property>
            </activation>
            <properties>
                <ui.environ.variables.path>conf/env/qacluster</ui.environ.variables.path>
            </properties>
        </profile>
        <profile>
            <id>qaclustera</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>qaclustera</value>
                </property>
            </activation>
            <properties>
                <ui.environ.variables.path>conf/env/qaclustera</ui.environ.variables.path>
            </properties>
        </profile>
        <profile>
            <id>qaclusterb</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>qaclusterb</value>
                </property>
            </activation>
            <properties>
                <ui.environ.variables.path>conf/env/qaclusterb</ui.environ.variables.path>
            </properties>
        </profile>
        <profile>
            <id>stage</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>stage</value>
                </property>
            </activation>
            <properties>
                <ui.environ.variables.path>conf/env/stage</ui.environ.variables.path>
            </properties>
        </profile>
        <profile>
            <id>prodcluster</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>prodcluster</value>
                </property>
            </activation>
            <properties>
                <ui.environ.variables.path>conf/env/prodcluster</ui.environ.variables.path>
            </properties>
        </profile>
        <profile>
            <id>prodclustera</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>prodclustera</value>
                </property>
            </activation>
            <properties>
                <ui.environ.variables.path>conf/env/prodclustera</ui.environ.variables.path>
            </properties>
        </profile>
        <profile>
            <id>prodclusterb</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>prodclusterb</value>
                </property>
            </activation>
            <properties>
                <ui.environ.variables.path>conf/env/prodclusterb</ui.environ.variables.path>
            </properties>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-4</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- license>GPL (c) 2005, SWWDC</license -->
                    <!--distribution>Trash 2005</distribution -->
                    <group>Application/Collectors</group>
                    <changelogFile>src/main/resources/changelog</changelogFile>
                    <mappings>
                        <mapping>
                            <directory>/tmp/le-ui</directory>
                            <filemode>755</filemode>
                            <username>build</username>
                            <groupname>build</groupname>
                            <sources>
                                <source>
                                    <location>../le-ui.tar.gz</location>
                                </source>
                                <source>
                                    <location>${ui.environ.variables.path}/ENV_VARS</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preremoveScriptlet>
                        <scriptFile>src/main/resources/scripts/preremove</scriptFile>
                    </preremoveScriptlet>
                    <preinstallScriptlet>
                        <scriptFile>src/main/resources/scripts/preinstall</scriptFile>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>src/main/resources/scripts/postinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
