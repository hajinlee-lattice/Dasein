<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.latticeengines.metadata.hive"/>

    <bean id="hiveDataSource" class="com.latticeengines.common.exposed.bean.DataSourceBeanFactory" depends-on="beanEnvironment">
        <property name="driverClass" value="org.apache.hive.jdbc.HiveDriver" />
        <property name="jdbcUrl" value="${metadata.hive.url}"/>
        <property name="user" value="${metadata.hive.username}" />
        <property name="password" value="${metadata.hive.password.encrypted}" />
        <property name="maxPoolSize" value="2"/>
    </bean>

    <bean id="hiveJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate" p:dataSource-ref="hiveDataSource"/>

</beans>
