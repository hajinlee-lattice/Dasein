<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="dataSourceReadOnly" class="com.latticeengines.common.exposed.bean.DataSourceBeanFactory" depends-on="beanEnvironment">
        <property name="driverClass" value="${db.datasource.readonly.driver}" />
        <property name="jdbcUrl" value="${db.datasource.readonly.url}"/>
        <property name="user" value="${db.datasource.user}" />
        <property name="password" value="${db.datasource.password.encrypted}" />
        <property name="maxPoolSize" value="32"/>
    </bean>

    <!-- Entity manager factory -->
    <bean id="entityManagerFactoryReadOnly"
          class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="dataSource" ref="dataSourceReadOnly" />
        <property name="packagesToScan" value="com.latticeengines.domain.exposed" />
        <property name="jpaVendorAdapter">
            <bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
                <!-- property name="prepareConnection" value="false"/-->
            </bean>
        </property>
        <property name="jpaProperties">
            <props>
                <prop key="hibernate.dialect">${db.datasource.dialect}</prop>
                <prop key="hibernate.show_sql">false</prop>
                <prop key="hibernate.use_sql_comments">true</prop>
                <prop key="hibernate.format_sql">true</prop>
                <prop key="hibernate.type">trace</prop>
                <prop key="hibernate.globally_quoted_identifiers">true</prop>
                <prop key="hibernate.id.new_generator_mappings">true</prop>
                <prop key="hibernate.current_session_context_class">org.springframework.orm.hibernate5.SpringSessionContext</prop>
                <prop key="hibernate.allow_refresh_detached_entity">true</prop>
            </props>
        </property>
    </bean>

    <bean id="transactionManagerReadOnly" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="entityManagerFactoryReadOnly"/>
    </bean>

</beans>