<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean name="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
        <property name="driverClass" value="${db.datasource.driver}"/>
        <property name="jdbcUrl" value="${db.datasource.url}"/>
        <property name="user" value="${db.datasource.user}" />
        <property name="password" value="${db.datasource.password.encrypted}" />
        <property name="acquireIncrement" value="4"/>
        <property name="minPoolSize" value="4"/>
        <property name="maxPoolSize" value="16"/>
        <property name="checkoutTimeout" value="60000"/>
        <property name="idleConnectionTestPeriod" value="10"/>
        <property name="maxIdleTime" value="30"/>
    </bean>

</beans>