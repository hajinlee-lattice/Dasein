<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="log.dir">/var/log/ledp</Property>
        <Property name="log.pattern">%d{yyyy-MM-dd'T'HH:mm:ss,SSSXXX}{UTC} [%t] %-5p %c{1}.%M:%L { "requestID":"%X{com.latticeengines.requestid}", "uri":"%X{com.latticeengines.uri}", "tenant":"%X{customerspace}", "message":%m }%n</Property>
    </Properties>

    <Appenders>
        <Console name="ConsoleInfo" target="SYSTEM_OUT">
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout>
                <Pattern>${log.pattern}</Pattern>
            </PatternLayout>
        </Console>
        <Console name="ConsoleDebug" target="SYSTEM_OUT">
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout>
                <Pattern>${log.pattern}</Pattern>
            </PatternLayout>
        </Console>
        <Console name="DebugGateway" target="SYSTEM_OUT">
            <Filters>
                <ThresholdFilter level="INFO" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ContextMapFilter onMatch="ACCEPT" onMismatch="DENY" operator="or">
                    <KeyValuePair key="DebugGateway" value="ON"/>
                </ContextMapFilter>
            </Filters>
            <PatternLayout>
                <Pattern>${log.pattern}</Pattern>
            </PatternLayout>
        </Console>
        <RollingFile
                name="RollingFile"
                fileName="${log.dir}/le-scoringapi.log"
                filePattern="${log.dir}/le-scoringapi-%d{yyyy-MM-dd}-%i.log.gz"
                ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd'T'HH:mm:ss,SSSXXX}{UTC} [%t] %-5p %c{1.}:%L - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5" />
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="ConsoleInfo"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
        <Logger name="com.latticeengines" additivity="false" level="DEBUG">
            <AppenderRef ref="ConsoleInfo"/>
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="DebugGateway"/>
        </Logger>
        <Logger name="com.latticeengines.monitor.exposed.metrics.impl" additivity="false" level="DEBUG">
            <AppenderRef ref="ConsoleDebug"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>
        <Logger name="com.latticeengines.monitor.metric.service.impl" additivity="false" level="DEBUG">
            <AppenderRef ref="ConsoleDebug"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>
    </Loggers>

</Configuration>
