<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>le-docker</artifactId>
    <packaging>jar</packaging>
    <name>le-${component-name}</name>

    <properties>
        <component-name>docker</component-name>
        <kafka.connect.docker.context>src/main/resources/kafka/le-kafka-connect</kafka.connect.docker.context>
        <tomcat.docker.context>src/main/resources/tomcat/le-tomcat</tomcat.docker.context>
        <matchapi.docker.context>src/main/resources/tomcat/le-matchapi</matchapi.docker.context>
    </properties>

    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-parent</artifactId>
        <version>2.0.37-SNAPSHOT</version>
        <relativePath>../le-parent</relativePath>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-lattice-artifacts</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <copy file="${project.basedir}/../le-datafabric/target/le-datafabric-connect-${project.version}-shaded.jar"
                                      tofile="${project.basedir}/${kafka.connect.docker.context}/plugin/le-datafabric-connect-${project.version}-shaded.jar"
                                      overwrite="true" />
                                <copy file="${project.basedir}/../le-matchapi/target/le-matchapi-${project.version}.war"
                                      tofile="${project.basedir}/${matchapi.docker.context}/webapps/ROOT.war"
                                      overwrite="true" />
                                <copy file="${project.basedir}/../le-config/conf/env/qacluster_aws/latticeengines.properties"
                                      tofile="${project.basedir}/${tomcat.docker.context}/conf/env/qacluster_aws/latticeengines.properties"
                                      overwrite="true" />
                                <copy file="${project.basedir}/../le-config/conf/env/prodcluster_aws/latticeengines.properties"
                                      tofile="${project.basedir}/${tomcat.docker.context}/conf/env/prodcluster_aws/latticeengines.properties"
                                      overwrite="true" />
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>${maven.exec.version}</version>
                <executions>
                    <execution>
                        <id>build-docker-images</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>bash</executable>
                            <workingDirectory>src/main/resources</workingDirectory>
                            <arguments>
                                <argument>mvn_build.sh</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
