<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<artifactId>le-scheduler-rpm</artifactId>
	<packaging>rpm</packaging>
	<description>LE SCHEDULER RPM</description>
	
	<properties>
		<le.rpm.version>1.0.33-SNAPSHOT</le.rpm.version>
	</properties>

	<parent>
		<groupId>com.latticeengines</groupId>
		<artifactId>le-parent</artifactId>
		<version>1.0.33-SNAPSHOT</version>
		<relativePath>../le-parent</relativePath>
	</parent>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>rpm-maven-plugin</artifactId>
				<version>2.1-alpha-4</version>
				<extensions>true</extensions>
				<configuration>
					<!-- license>GPL (c) 2005, SWWDC</license -->
					<!--distribution>Trash 2005</distribution -->
					<group>Application/Collectors</group>
					<!-- prefix>/usr/local</prefix -->
					<changelogFile>src/main/resources/rpm/changelog</changelogFile>
					<mappings>
					<mapping>
							<directory>/tmp/etc/hadoop/conf</directory>
							<filemode>644</filemode>
							<username>yarn</username>
							<groupname>hadoop</groupname>
							<sources>
								<source>
									<location>driven/cascading-service.properties</location>
								</source>
							</sources>
						</mapping>
					</mappings>
					<mapping>
							<directory>/tmp/usr/hdp/current/hadoop-client/lib/</directory>
							<filemode>644</filemode>
							<username>root</username>
							<groupname>root</groupname>
							<sources>
								<source>
									<location>driven/driven-plugin-1.2-eap-11.jar</location>
								</source>
							</sources>
						</mapping>
					<preinstallScriptlet>
						<scriptFile>driven/preinstall</scriptFile>
					</preinstallScriptlet>
					<postinstallScriptlet>
						<scriptFile>driven/postinstall</scriptFile>
					</postinstallScriptlet>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>