<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<artifactId>le-scheduler-rpm</artifactId>
	<packaging>rpm</packaging>
	<description>LE SCHEDULER RPM</description>
	
	<properties>
		<le.rpm.version>2.0.12-SNAPSHOT</le.rpm.version>
	</properties>

	<parent>
		<groupId>com.latticeengines</groupId>
		<artifactId>le-parent</artifactId>
		<version>2.0.12-SNAPSHOT</version>
		<relativePath>../le-parent</relativePath>
	</parent>

	<profiles>
		<profile>
			<id>development</id>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>environment.type</name>
					<value>devcluster</value>
				</property>
			</activation>
			<properties>
				<fair-scheduler.xml.path>conf/env/devcluster</fair-scheduler.xml.path>
			</properties>
		</profile>
		<profile>
			<id>integration</id>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>environment.type</name>
					<value>intcluster</value>
				</property>
			</activation>
			<properties>
				<fair-scheduler.xml.path>conf/env/intcluster</fair-scheduler.xml.path>
			</properties>
		</profile>
		<profile>
			<id>qa</id>
			<activation>
				<property>
					<name>environment.type</name>
					<value>qacluster</value>
				</property>
			</activation>
			<properties>
				<fair-scheduler.xml.path>conf/env/qacluster</fair-scheduler.xml.path>
			</properties>
		</profile>
		<profile>
			<id>production</id>
			<activation>
				<property>
					<name>environment.type</name>
					<value>prodcluster</value>
				</property>
			</activation>
			<properties>
				<fair-scheduler.xml.path>conf/env/prodcluster</fair-scheduler.xml.path>
			</properties>
		</profile>
		<profile>
			<id>buildmachine</id>
			<activation>
				<property>
					<name>environment.type</name>
					<value>buildmachine</value>
				</property>
			</activation>
			<properties>
				<fair-scheduler.xml.path>conf/env/buildmachine</fair-scheduler.xml.path>
			</properties>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>rpm-maven-plugin</artifactId>
				<version>2.1-alpha-4</version>
				<extensions>true</extensions>
				<configuration>
					<!-- license>GPL (c) 2005, SWWDC</license -->
					<!--distribution>Trash 2005</distribution -->
					<group>Application/Collectors</group>
					<!-- prefix>/usr/local</prefix -->
					<changelogFile>src/main/resources/rpm/changelog</changelogFile>
					<mappings>
						<mapping>
							<directory>/tmp/usr/hdp/current/hadoop-yarn-resourcemanager</directory>
							<filemode>644</filemode>
							<username>root</username>
							<groupname>root</groupname>
							<sources>
								<source>
									<location>target/le-scheduler-${le.rpm.version}.jar</location>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>/tmp/etc/hadoop/conf</directory>
							<filemode>644</filemode>
							<username>yarn</username>
							<groupname>hadoop</groupname>
							<sources>
								<source>
									<location>${fair-scheduler.xml.path}/fair-scheduler.xml</location>
								</source>
							</sources>
						</mapping>
					</mappings>
					<preinstallScriptlet>
						<scriptFile>src/main/resources/rpm/scripts/preinstall</scriptFile>
					</preinstallScriptlet>
					<postinstallScriptlet>
						<scriptFile>src/main/resources/rpm/scripts/postinstall</scriptFile>
					</postinstallScriptlet>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>