<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jpa="http://www.springframework.org/schema/data/jpa"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa.xsd">

    <bean id="documentDbSource" class="com.latticeengines.common.exposed.bean.DataSourceBeanFactory">
        <property name="driverClass" value="${documentdb.datasource.driver}"/>
        <property name="jdbcUrl" value="${documentdb.datasource.url}"/>
        <property name="user" value="${documentdb.datasource.user}"/>
        <property name="password" value="${documentdb.datasource.password.encrypted}"/>
    </bean>

    <!-- Entity manager factory -->
    <bean id="documentEntityManagerFactory"
          class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="dataSource" ref="documentDbSource"/>
        <property name="packagesToScan" value="com.latticeengines.documentdb.entity"/>
        <property name="jpaVendorAdapter">
            <bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
                <!-- property name="prepareConnection" value="false"/-->
            </bean>
        </property>
        <property name="jpaProperties">
            <props>
                <prop key="hibernate.dialect">${documentdb.datasource.dialect}</prop>
                <prop key="hibernate.show_sql">false</prop>
                <prop key="hibernate.globally_quoted_identifiers">true</prop>
                <prop key="hibernate.id.new_generator_mappings">true</prop>
                <prop key="hibernate.current_session_context_class">
                    org.springframework.orm.hibernate5.SpringSessionContext
                </prop>
                <prop key="hibernate.allow_refresh_detached_entity">true</prop>
                <!-- prop key="hibernate.connection.release_mode">on_close</prop-->
                <!-- prop key="hibernate.connection.handling_mode">DELAYED_ACQUISITION_AND_RELEASE_AFTER_TRANSACTION</prop-->
            </props>
        </property>
    </bean>

    <bean id="documentTransactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="documentEntityManagerFactory"/>
    </bean>

    <jpa:auditing/>

</beans>