<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.latticeengines</groupId>
    <artifactId>le-toplevel</artifactId>
    <version>4.13.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Lattice Data Platform Top Level non-HDFS Module</name>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1.5</version>
                <extensions>true</extensions>
                <configuration>
                    <group>Application/Collectors</group>
                    <sourceEncoding>utf-8</sourceEncoding>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <modules>
        <module>le-api/pom-api-tc-rpm.xml</module>
        <module>le-config/pom-config-tc-rpm.xml</module>
        <module>le-oauth2/pom-oauth2-tc-rpm.xml</module>
        <module>le-scoringapi/pom-scoringapi-tc-rpm.xml</module>
        <module>le-playmaker/pom-playmaker-tc-rpm.xml</module>
        <module>le-pls/pom-pls-tc-rpm.xml</module>
        <module>le-ui/pom-ui-tc-rpm.xml</module>
        <module>le-admin/pom-admin-tc-rpm.xml</module>
        <module>le-matchapi/pom-matchapi-rpm.xml</module>
        <module>le-microservice/pom-microservice-tc-rpm.xml</module>
        <module>le-ulysses/pom-ulysses-tc-rpm.xml</module>
    </modules>
</project>
