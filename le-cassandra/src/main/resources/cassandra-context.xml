<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:cassandra="http://www.springframework.org/schema/data/cassandra"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/cql http://www.springframework.org/schema/cql/spring-cql-1.0.xsd
    http://www.springframework.org/schema/data/cassandra http://www.springframework.org/schema/data/cassandra/spring-cassandra-1.0.xsd
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:component-scan base-package="com.latticeengines.cassandra" />

	<cassandra:cluster contact-points="${cassandra.contactpoints}"
		port="${cassandra.port}" />

	<cassandra:session id="propDataSession"
		keyspace-name="${cassandra.keyspace}" />
	<cassandra:mapping />
	<cassandra:converter />
	<cassandra:template id="propDataCassandraTemplate"
		session-ref="propDataSession" />

	<cassandra:repositories base-package="com.latticeengines.cassandra.dao.impl" />

</beans>