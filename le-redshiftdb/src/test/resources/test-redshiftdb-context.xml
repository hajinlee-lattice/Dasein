<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:redshiftdb-context.xml"/>
    <import resource="classpath:common-properties-context.xml"/>

    <bean name="redshiftDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
        <property name="driverClass" value="com.amazon.redshift.jdbc42.Driver"/>
        <property name="jdbcUrl"
                  value="${redshift.jdbc.url}/${redshift.test.database}?user=${redshift.user}&amp;password=${redshift.password.encrypted}"/>
        <property name="acquireIncrement" value="4"/>
        <property name="maxPoolSize" value="32"/>
        <property name="checkoutTimeout" value="10000"/>
        <property name="idleConnectionTestPeriod" value="10"/>
        <property name="maxIdleTime" value="30"/>
    </bean>

</beans>