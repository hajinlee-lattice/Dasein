<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>le-security</artifactId>
    <packaging>jar</packaging>
    <name>le-${component-name}</name>

    <properties>
        <component-name>security</component-name>
        <le.common.version>4.1.0-SNAPSHOT</le.common.version>
        <le.db.version>4.1.0-SNAPSHOT</le.db.version>
        <le.domain.version>4.1.0-SNAPSHOT</le.domain.version>
        <le.camille.version>4.1.0-SNAPSHOT</le.camille.version>
        <le.network.version>4.1.0-SNAPSHOT</le.network.version>
        <le.monitor.version>4.1.0-SNAPSHOT</le.monitor.version>
        <le.auth.version>4.1.0-SNAPSHOT</le.auth.version>
        <jetty.port>8084</jetty.port>
        <jetty.stop.port>10984</jetty.stop.port>
        <jetty.dir>test</jetty.dir>
        <jetty.use.test.cp>true</jetty.use.test.cp>
    </properties>

    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-web-parent</artifactId>
        <version>4.1.0-SNAPSHOT</version>
        <relativePath>../le-parent/web-pom.xml</relativePath>
    </parent>

    <profiles>
        <profile>
            <id>load</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>${maven.surefire.version}</version>
                        <executions>
                            <execution>
                                <id>unit-test</id>
                                <configuration>
                                    <skip>true</skip>
                                </configuration>
                            </execution>
                            <execution>
                                <id>default-test</id>
                                <configuration>
                                    <skip>true</skip>
                                </configuration>
                            </execution>
                            <execution>
                                <id>functional-test</id>
                                <configuration>
                                    <skip>true</skip>
                                </configuration>
                            </execution>
                            <execution>
                                <id>load-test</id>
                                <goals>
                                    <goal>test</goal>
                                </goals>
                                <phase>integration-test</phase>
                                <configuration>
                                    <systemPropertyVariables>
                                        <numOfThreads>${THREADS_NUM}</numOfThreads>
                                        <numOfTenants>${TENANTS_NUM}</numOfTenants>
                                        <numOfUsers>${USERS_NUM}</numOfUsers>
                                        <numOfRuns>${RUNS_NUMBER}</numOfRuns>
                                        <threadSleep>${SLEEP_TIME}</threadSleep>
                                    </systemPropertyVariables>
                                    <argLine>
                                        -XX:MaxPermSize=256m
                                        ${argLine}
                                    </argLine>
                                    <skip>false</skip>
                                    <includes>
                                        <include>${load.classes.include}</include>
                                    </includes>
                                    <groups>${load.groups}</groups>
                                    <forkMode>always</forkMode>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

    </profiles>

    <dependencies>
        <dependency>
            <groupId>com.latticeengines</groupId>
            <artifactId>le-db</artifactId>
            <version>${le.db.version}</version>
            <classifier>intf</classifier>
        </dependency>
        <dependency>
            <groupId>com.latticeengines</groupId>
            <artifactId>le-db</artifactId>
            <version>${le.db.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.latticeengines</groupId>
            <artifactId>le-auth</artifactId>
            <version>${le.auth.version}</version>
            <classifier>intf</classifier>
        </dependency>
        <dependency>
            <groupId>com.latticeengines</groupId>
            <artifactId>le-auth</artifactId>
            <version>${le.auth.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.latticeengines</groupId>
            <artifactId>le-monitor</artifactId>
            <version>${le.monitor.version}</version>
            <classifier>intf</classifier>
        </dependency>
        <dependency>
            <groupId>com.latticeengines</groupId>
            <artifactId>le-monitor</artifactId>
            <version>${le.monitor.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.latticeengines</groupId>
            <artifactId>le-domain</artifactId>
            <version>${le.domain.version}</version>
            <classifier>intf</classifier>
        </dependency>
        <dependency>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-ldap</artifactId>
            <version>${spring.security.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-web</artifactId>
            <version>${spring.security.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-config</artifactId>
            <version>${spring.security.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-framework-bom</artifactId>
            <version>${spring.version}</version>
            <type>pom</type>
            <scope>import</scope>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-servlets</artifactId>
            <version>${jetty.version}</version>
        </dependency>
    </dependencies>
</project>
