<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:component-scan base-package="com.latticeengines.matchapi">
        <!-- Need to exclude instantiating the swagger config except for bringing up the API
             since the servlet container instances are not available when running tests. -->
        <context:exclude-filter type="assignable" expression="com.latticeengines.matchapi.swagger.SwaggerConfig" />
    </context:component-scan>
    <context:component-scan base-package="com.latticeengines.datacloud.yarn" />

    <import resource="classpath:matchapi-aspects-context.xml" />
    <import resource="classpath:aws-context.xml" />
    <import resource="classpath:hadoop-config-context.xml" />
    <import resource="classpath:yarn-context.xml" />
    <import resource="classpath:datacloud-match-context.xml" />
    <import resource="classpath:datacloud-match-monitor-context.xml" />
    <import resource="classpath:datacloud-yarn-client-context.xml" />
</beans>