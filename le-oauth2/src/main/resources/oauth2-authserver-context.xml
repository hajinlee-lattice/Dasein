<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
  http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
  http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

    <import resource="classpath:common-webapp-env-context.xml"/>
    <import resource="classpath:oauth2db-context.xml"/>
    <import resource="classpath:oauth2-camille-context.xml"/>
    <import resource="classpath:monitor-metric-context.xml"/>

    <context:component-scan base-package="com.latticeengines.oauth2.authserver">
    </context:component-scan>

    <mvc:annotation-driven/>
    <mvc:resources mapping="/webjars/**" location="classpath:/META-INF/resources/webjars/"/>
    <mvc:resources mapping="/swagger-ui.html" location="classpath:/META-INF/resources/swagger-ui.html"/>

    <bean id="oauth2HealthCheck" class="com.latticeengines.monitor.exposed.metric.stats.impl.HealthInspection">
        <property name="componentName" value="oauth2"/>
    </bean>



</beans>