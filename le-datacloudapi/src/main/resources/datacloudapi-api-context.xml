<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

    <context:component-scan base-package="com.latticeengines.datacloudapi">
        <context:exclude-filter type="aspectj" expression="com.latticeengines.datacloud.controller.*" />
    </context:component-scan>

    <import resource="classpath:datacloud-etl-collection-context.xml"/>
    <import resource="classpath:datacloudapi-engine-context.xml" />

    <aop:aspectj-autoproxy proxy-target-class="true"/>
    <bean id="resourceAspect" class="com.latticeengines.datacloudapi.api.service.impl.ResourceAspect"/>

</beans>