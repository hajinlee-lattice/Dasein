<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <import resource="classpath:common-component-context.xml"/>
    <import resource="classpath:common-threadpool-context.xml"/>
    <import resource="classpath:aws-context.xml"/>
    <import resource="classpath:proxy-context.xml"/>
    <import resource="classpath:db-context.xml"/>
    <import resource="classpath:redshiftdb-context.xml"/>

    <context:component-scan base-package="com.latticeengines.query"/>

    <bean name="redshiftSegmentDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
        <property name="driverClass" value="com.amazon.redshift.jdbc42.Driver"/>
        <property name="jdbcUrl"
                  value="${redshift.jdbc.url}/${redshift.app.database}?user=${redshift.segment.user}&amp;password=${redshift.password.encrypted}&amp;tcpKeepAlive=true"/>
        <property name="acquireIncrement" value="4"/>
        <property name="maxPoolSize" value="32"/>
        <property name="checkoutTimeout" value="10000"/>
        <property name="idleConnectionTestPeriod" value="10"/>
        <property name="maxIdleTime" value="30"/>
    </bean>

</beans>