<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

        <context:annotation-config/>
        <context:component-scan base-package="com.latticeengines.sqoop">
                <context:exclude-filter type="aspectj" expression="com.latticeengines.sqoop.controller.*" />
        </context:component-scan>
        <context:component-scan base-package="com.latticeengines.db.service"/>

        <import resource="classpath:common-component-context.xml" />
        <import resource="classpath:hadoop-config-context.xml" />
        <import resource="classpath:monitor-metric-context.xml"/>

</beans>
