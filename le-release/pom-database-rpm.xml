<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>le-database-rpm</artifactId>
    <packaging>rpm</packaging>
    <description>LE Database RPM</description>

    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../le-parent</relativePath>
    </parent>

    <profiles>
        <profile>
            <id>development</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>environment.type</name>
                    <value>dev</value>
                </property>
            </activation>
            <properties>
                <api.properties.path>conf/env/dev</api.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/dev
                </dataplatform.properties.path>
                <bin.env.path>bin/env/dev</bin.env.path>
            </properties>
        </profile>
        <profile>
            <id>qe</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>qe</value>
                </property>
            </activation>
            <properties>
                <api.properties.path>conf/env/qe</api.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/qe
                </dataplatform.properties.path>
                <bin.env.path>bin/env/qe</bin.env.path>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>prod</value>
                </property>
            </activation>
            <properties>
                <api.properties.path>conf/env/deployment</api.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/prod
                </dataplatform.properties.path>
                <bin.env.path>bin/env/prod</bin.env.path>
            </properties>
        </profile>
    </profiles>


    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-4</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- license>GPL (c) 2005, SWWDC</license -->
                    <!--distribution>Trash 2005</distribution -->
                    <group>Application/Collectors</group>
                    <!-- prefix>/usr/local</prefix -->
                    <changelogFile>src/main/resources/database/changelog</changelogFile>
                    <mappings>                        
                        <mapping>
                            <directory>/tmp/dataplatform/database</directory>
                            <filemode>755</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
                            <sources>
                                <!-- database configuration properties -->
                                <source>
                                    <location>${dataplatform.properties.path}/dataplatform.properties</location>
                                </source>
                            </sources>
                        </mapping>       
                        <mapping>
                            <directory>/tmp/dataplatform/database/lib</directory>
                            <filemode>755</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
                            <sources>
                                <!-- SchemaGenerator.class -->
                                <source>
                                    <location>../le-dataplatform/target/le-dataplatform-1.0.0-SNAPSHOT-tests.jar</location>
                                </source>            
                                <source>
                                    <location>../le-domain/target/le-domain-1.0.0-SNAPSHOT.jar</location>    
                                </source>
                                <!-- drivers and other libraries -->
                                <source>
                                    <location>../le-dataplatform/target/dependency</location>
                                </source>
                                <source>
                                    <location>src/main/resources/database/log4j.xml</location>
                                </source>
                            </sources>
                        </mapping>                                      
                    </mappings>
                    <preinstallScriptlet>
                        <scriptFile>src/main/scripts/database/preinstall</scriptFile>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>src/main/scripts/database/postinstall</scriptFile>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
            
        </plugins>
    </build>
</project>