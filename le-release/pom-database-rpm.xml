<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<artifactId>le-database-rpm</artifactId>
	<packaging>rpm</packaging>
	<description>LE Database RPM</description>

	<properties>
		<le.rpm.version>1.0.3-SNAPSHOT</le.rpm.version>
	</properties>
	
	<parent>
		<groupId>com.latticeengines</groupId>
		<artifactId>le-parent</artifactId>
		<version>1.0.3-SNAPSHOT</version>
		<relativePath>../le-parent</relativePath>
	</parent>

	<profiles>
		<profile>
			<id>buildmachine</id>
			<activation>
				<property>
					<name>environment.type</name>
					<value>buildmachine</value>
				</property>
			</activation>
			<properties>
				<dataplatform.properties.path>
					../le-dataplatform/conf/env/buildmachine
				</dataplatform.properties.path>
			</properties>
		</profile>
		<profile>
			<id>development</id>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>environment.type</name>
					<value>devcluster</value>
				</property>
			</activation>
			<properties>
				<dataplatform.properties.path>
					../le-dataplatform/conf/env/devcluster
				</dataplatform.properties.path>
			</properties>
		</profile>
		<profile>
			<id>integration</id>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>environment.type</name>
					<value>intcluster</value>
				</property>
			</activation>
			<properties>
				<dataplatform.properties.path>
					../le-dataplatform/conf/env/intcluster
				</dataplatform.properties.path>
			</properties>
		</profile>
		<profile>
			<id>qa</id>
			<activation>
				<property>
					<name>environment.type</name>
					<value>qacluster</value>
				</property>
			</activation>
			<properties>
				<dataplatform.properties.path>
					../le-dataplatform/conf/env/qacluster
				</dataplatform.properties.path>
			</properties>
		</profile>
		<profile>
			<id>production</id>
			<activation>
				<property>
					<name>environment.type</name>
					<value>prodcluster</value>
				</property>
			</activation>
			<properties>
				<dataplatform.properties.path>
					../le-dataplatform/conf/env/prodcluster
				</dataplatform.properties.path>
			</properties>
		</profile>
		<profile>
			<id>production_test</id>
			<activation>
				<property>
					<name>environment.type</name>
					<value>prod_test</value>
				</property>
			</activation>
			<properties>
				<dataplatform.properties.path>
					../le-dataplatform/conf/env/prod_test
				</dataplatform.properties.path>
			</properties>
		</profile>
	</profiles>


	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>rpm-maven-plugin</artifactId>
				<version>2.1-alpha-4</version>
				<extensions>true</extensions>
				<configuration>
					<!-- license>GPL (c) 2005, SWWDC</license -->
					<!--distribution>Trash 2005</distribution -->
					<group>Application/Collectors</group>
					<!-- prefix>/usr/local</prefix -->
					<changelogFile>src/main/resources/database/changelog</changelogFile>
					<mappings>
						<mapping>
							<directory>/tmp/dataplatform/database</directory>
							<filemode>755</filemode>
							<username>root</username>
							<groupname>root</groupname>
							<sources>
								<!-- database configuration properties -->
								<source>
									<location>${dataplatform.properties.path}/dataplatform.properties</location>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>/tmp/dataplatform/database/lib</directory>
							<filemode>755</filemode>
							<username>root</username>
							<groupname>root</groupname>
							<sources>
								<!-- SchemaGenerator.class -->
								<source>
									<location>../le-dataplatform/target/le-dataplatform-${le.rpm.version}-tests.jar</location>
								</source>
								<source>
									<location>../le-dataplatform/target/le-dataplatform-${le.rpm.version}.jar</location>
								</source>
								<source>
									<location>../le-domain/target/le-domain-${le.rpm.version}.jar</location>
								</source>
								<!-- drivers and other libraries -->
								<source>
									<location>../le-dataplatform/target/dependency</location>
								</source>
								<source>
									<location>src/main/resources/database/log4j.xml</location>
								</source>
							</sources>
						</mapping>
					</mappings>
					<preinstallScriptlet>
						<scriptFile>src/main/scripts/database/preinstall</scriptFile>
					</preinstallScriptlet>
					<postinstallScriptlet>
						<scriptFile>src/main/scripts/database/postinstall</scriptFile>
					</postinstallScriptlet>
				</configuration>
			</plugin>

		</plugins>
	</build>
</project>