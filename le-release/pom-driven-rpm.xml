<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>le-driven-rpm</artifactId>
    <packaging>rpm</packaging>
    <description>LE DRIVEN RPM - install driven properties on jenkins slaves</description>

    <properties>
        <le.rpm.version>3.1.0-SNAPSHOT</le.rpm.version>
    </properties>
    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-parent</artifactId>
        <version>3.1.0-SNAPSHOT</version>
        <relativePath>../le-parent</relativePath>
    </parent>

    <profiles>
        <profile>
            <id>buildmachine</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>environment.type</name>
                    <value>buildmachine</value>
                </property>
            </activation>
            <properties>
                <driven.properties.path>conf/driven/env/buildmachine</driven.properties.path>
            </properties>
        </profile>
        <profile>
            <id>development</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>environment.type</name>
                    <value>devcluster</value>
                </property>
            </activation>
            <properties>
                <driven.properties.path>conf/driven/env/devcluster</driven.properties.path>
            </properties>
        </profile>
        <profile>
            <id>integration</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>intcluster</value>
                </property>
            </activation>
            <properties>
                <driven.properties.path>conf/driven/env/intcluster</driven.properties.path>
            </properties>
        </profile>
        <profile>
            <id>qa</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>qacluster</value>
                </property>
            </activation>
            <properties>
                <driven.properties.path>conf/driven/env/qacluster</driven.properties.path>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>prodcluster</value>
                </property>
            </activation>
            <properties>
                <driven.properties.path>conf/driven/env/prodcluster</driven.properties.path>
            </properties>
        </profile>
    </profiles>


    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-4</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- license>GPL (c) 2005, SWWDC</license -->
                    <!--distribution>Trash 2005</distribution -->
                    <group>Application/Collectors</group>
                    <!-- prefix>/usr/local</prefix -->
                    <changelogFile>src/main/resources/driven/changelog</changelogFile>
                    <mappings>
                        <mapping>
                            <directory>/etc/hadoop/conf</directory>
                            <filemode>733</filemode>
                            <username>yarn</username>
                            <groupname>yarn</groupname>
                            <sources>
                                <source>
                                    <location>${driven.properties.path}/cascading-service.properties</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preremoveScriptlet>
                        <scriptFile>src/main/scripts/driven/preremove</scriptFile>
                    </preremoveScriptlet>
                    <preinstallScriptlet>
                        <scriptFile>src/main/scripts/driven/preinstall</scriptFile>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>src/main/scripts/driven/postinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>