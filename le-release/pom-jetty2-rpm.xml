<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>le-jetty2-rpm</artifactId>
    <packaging>rpm</packaging>
    <description>LE JETTY RPM</description>

    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-parent</artifactId>
        <version>2.0.5-SNAPSHOT</version>
        <relativePath>../le-parent</relativePath>
    </parent>

    <properties>
        <environment.type>default</environment.type>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-4</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- license>GPL (c) 2005, SWWDC</license -->
                    <!--distribution>Trash 2005</distribution -->
                    <group>Application/Collectors</group>
                    <!-- prefix>/usr/local</prefix -->
                    <changelogFile>src/main/resources/jetty/changelog</changelogFile>
                    <needarch>true</needarch>
                    <mappings>
                        <mapping>
                            <directory>/opt/jetty2</directory>
                            <filemode>775</filemode>
                            <username>yarn</username>
                            <groupname>yarn</groupname>
                            <sources>
                                <source>
                                    <location>src/main/resources/jetty/jetty-distribution-9.1.4.v20140401</location>
                                    <targetArchitecture>x86_64</targetArchitecture>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/opt/jetty2/start.d</directory>
                            <filemode>775</filemode>
                            <username>yarn</username>
                            <groupname>yarn</groupname>
                            <sources>
                                <source>
                                    <location>src/main/resources/jetty2/http.ini</location>
                                </source>
                                <source>
                                    <location>src/main/resources/jetty2/https.ini</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preremoveScriptlet>
                        <scriptFile>src/main/scripts/jetty2/preremove</scriptFile>
                    </preremoveScriptlet>
                    <preinstallScriptlet>
                        <scriptFile>src/main/scripts/jetty2/preinstall</scriptFile>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>src/main/scripts/jetty2/postinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>