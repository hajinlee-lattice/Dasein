<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>le-scoringapi-rpm</artifactId>
    <packaging>rpm</packaging>
    <description>LE SCORINGAPI RPM</description>

    <properties>
        <le.rpm.version>2.0.23-SNAPSHOT</le.rpm.version>
    </properties>

    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-parent</artifactId>
        <version>2.0.23-SNAPSHOT</version>
        <relativePath>../le-parent</relativePath>
    </parent>

    <profiles>
        <profile>
            <id>buildmachine</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>environment.type</name>
                    <value>buildmachine</value>
                </property>
            </activation>
            <properties>
                <monitor.properties.path>../le-monitor/conf/env/buildmachine</monitor.properties.path>
                <proxy.properties.path>../le-proxy/conf/env/buildmachine</proxy.properties.path>
                <scoringapi.properties.path>conf/env/buildmachine</scoringapi.properties.path>
                <oauth2db.properties.path>../le-oauth2db/conf/env/buildmachine</oauth2db.properties.path>
            </properties>
        </profile>
        <profile>
            <id>development</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>environment.type</name>
                    <value>devcluster</value>
                </property>
            </activation>
            <properties>
                <monitor.properties.path>../le-monitor/conf/env/development</monitor.properties.path>
                <proxy.properties.path>../le-proxy/conf/env/development</proxy.properties.path>
                <scoringapi.properties.path>conf/env/development</scoringapi.properties.path>
                <oauth2db.properties.path>../le-oauth2db/conf/env/development</oauth2db.properties.path>
            </properties>
        </profile>
        <profile>
            <id>qa</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>qacluster</value>
                </property>
            </activation>
            <properties>
                <monitor.properties.path>../le-monitor/conf/env/qacluster</monitor.properties.path>
                <proxy.properties.path>../le-proxy/conf/env/qacluster</proxy.properties.path>
                <scoringapi.properties.path>conf/env/qacluster</scoringapi.properties.path>
                <oauth2db.properties.path>../le-oauth2db/conf/env/qacluster</oauth2db.properties.path>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>prodcluster</value>
                </property>
            </activation>
            <properties>
                <monitor.properties.path>../le-monitor/conf/env/prodcluster</monitor.properties.path>
                <proxy.properties.path>../le-proxy/conf/env/prodcluster</proxy.properties.path>
                <scoringapi.properties.path>conf/env/prodcluster</scoringapi.properties.path>
                <oauth2db.properties.path>../le-oauth2db/conf/env/prodcluster</oauth2db.properties.path>
            </properties>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-4</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- license>GPL (c) 2005, SWWDC</license -->
                    <!--distribution>Trash 2005</distribution -->
                    <group>Application/Collectors</group>
                    <mappings>
                        <mapping>
                            <directory>/opt/jetty/webapps</directory>
                            <filemode>755</filemode>
                            <username>yarn</username>
                            <groupname>yarn</groupname>
                            <sources>
                                <source>
                                    <location>target/le-scoringapi-${le.rpm.version}.war</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/etc/ledp</directory>
                            <filemode>755</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
                            <sources>
                                <source>
                                    <location>${monitor.properties.path}/monitor.properties</location>
                                </source>
                                <source>
                                    <location>${scoringapi.properties.path}/scoringapi.properties</location>
                                </source>
                                <source>
                                    <location>${proxy.properties.path}/proxy.properties</location>
                                </source>
                                <source>
                                    <location>${oauth2db.properties.path}/oauth2.properties</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preremoveScriptlet>
                        <scriptFile>src/main/resources/scripts/preremove</scriptFile>
                    </preremoveScriptlet>
                    <preinstallScriptlet>
                        <scriptFile>src/main/resources/scripts/preinstall</scriptFile>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>src/main/resources/scripts/postinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
