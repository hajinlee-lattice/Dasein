<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <import resource="classpath:common-webapp-env-context.xml"/>
    <import resource="classpath:db-context.xml" />
    <import resource="classpath:scoringapi-yarn-config-context.xml" />
    <import resource="classpath:datafabric-context.xml" />
    <import resource="classpath:proxy-context.xml" />
    <import resource="classpath:oauth2db-persistence-context.xml" />
    <import resource="classpath:oauth2db-context.xml" />
    <import resource="classpath:oauth2db-auth-mgr-context.xml"/>
    <import resource="classpath:monitor-alerts-context.xml" />
    <import resource="classpath:monitor-metric-context.xml" />
    <import resource="classpath:camille-runtime-context.xml"/>
    <import resource="classpath:security-aspect-context.xml"/>

    <bean id="batonService" class="com.latticeengines.baton.exposed.service.impl.BatonServiceImpl" />

    <context:annotation-config />

    <context:component-scan
        base-package="com.latticeengines.scoringapi, com.latticeengines.common.exposed.rest, com.latticeengines.transform">
        <!-- Need to exclude instantiating the swagger config except for bringing
            up the API since the servlet container instances are not available when running
            tests. -->
        <context:exclude-filter type="assignable"
            expression="com.latticeengines.scoringapi.swagger.SwaggerConfig" />
    </context:component-scan>


</beans>
