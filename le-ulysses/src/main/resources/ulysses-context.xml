<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
  http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
  http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

    <import resource="classpath:common-component-context.xml"/>
    <import resource="classpath:common-threadpool-context.xml"/>
    <import resource="classpath:oauth2db-persistence-datasource-context.xml"/>
    <import resource="classpath:db-context.xml"/>
    <import resource="classpath:aws-context.xml"/>
    <import resource="classpath:datafabric-context.xml"/>
    <import resource="classpath:proxy-context.xml"/>
    <import resource="classpath:security-no-controller-context.xml"/>
    <import resource="classpath:app-context.xml"/>
    <import resource="classpath:camille-runtime-context.xml"/>
    <import resource="classpath:monitor-aspects-context.xml"/>
    
    <context:component-scan base-package="com.latticeengines.ulysses">
        <!-- Need to exclude instantiating the swagger config except for bringing up the API
             since the servlet container instances are not available when running tests. -->
        <context:exclude-filter type="assignable" expression="com.latticeengines.ulysses.swagger.SwaggerConfig"/>
    </context:component-scan>

    <mvc:annotation-driven/>

</beans>