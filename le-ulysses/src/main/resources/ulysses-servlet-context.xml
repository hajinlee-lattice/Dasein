<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd

  http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

    <import resource="classpath:ulysses-context.xml"/>
    <import resource="classpath:monitor-metric-context.xml"/>
    <import resource="classpath:oauth2db-context.xml" />
    <import resource="classpath:oauth2db-auth-mgr-context.xml"/>
    
    <import resource="classpath:common-webapp-env-context.xml"/>
    
    <bean class="com.latticeengines.ulysses.swagger.SwaggerConfig" />

    <bean id="ulyssesHealthCheck" class="com.latticeengines.monitor.exposed.metric.stats.impl.HealthInspection">
        <property name="componentName" value="ulysses" />
    </bean>

    <mvc:resources mapping="swagger-ui.html" location="classpath:/META-INF/resources/" />
    <mvc:resources mapping="/webjars/**" location="classpath:/META-INF/resources/webjars/" />
    <mvc:interceptors>
        <bean class="com.latticeengines.ulysses.utils.LoggerInterceptor"/>
    </mvc:interceptors>

</beans>