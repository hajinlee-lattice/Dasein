<workflow-app xmlns="uri:oozie:workflow:0.4" name="${customer}---${table}---le-workflow-wf">
    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapred.job.queue.name</name>
                <value>${queueName}</value>
            </property>
        </configuration>
    </global>

    <start to="Propdata_Export" />
    <action name="Propdata_Export">
        <java>
            <main-class>com.lattice.workflow.action.PropDataExportToDBAction
            </main-class>
            <arg>ie-customer=${customer}</arg>
            <arg>ie-table=${table}</arg>
            <arg>ie-mapColumn=${propDataMapColumn}</arg>
            <file>/app/dataplatform/dataplatform.properties</file>
            <file>/app/workflow/propdata.properties</file>
            <file>/app/workflow/workflow.properties</file>
        </java>
        <ok to="Propdata_Match" />
        <error to="fail" />
    </action>
    <action name="Propdata_Match">
        <java>
            <main-class>com.lattice.workflow.action.PropDataAddCommandAction
            </main-class>
            <java-opts>-Doozie.action.output.properties=${wf:id()}_propdataMatch.properties</java-opts>
            <arg>commandIds-createdBy=${propDataCreatedBy}</arg>
            <arg>commands-commandName=${propDataCommandName}</arg>
            <arg>commands-contractExternalID=${contractExternalID}</arg>
            <arg>commands-deploymentExternalID=${deploymentExternalID}</arg>
            <arg>commands-destTables=${propDataDestTables}</arg>
            <arg>commands-isDownloading=${propDataIsDownloading}</arg>
            <arg>commands-maxNumRetries=${propDataMaxNumRetries}</arg>
            <arg>commands-sourceTable=${table}</arg>
            <file>/app/dataplatform/dataplatform.properties</file>
            <file>/app/workflow/propdata.properties</file>
            <file>/app/workflow/workflow.properties</file>
            <capture-output />
        </java>
        <ok to="Propdata_Import" />
        <error to="fail" />
    </action>
    <action name="Propdata_Import">
        <java>
            <prepare>
                <delete
                    path="${nameNode}${dataplatformCustomerBaseDir}/${customer}/data/propdata_output/${table}" />
            </prepare>
            <main-class>com.lattice.workflow.action.PropDataImportFromDBAction</main-class>
            <arg>ie-customer=${customer}</arg>
            <arg>ie-table=${table}</arg>
            <arg>ie-keyCols=${propDataKeyCols}</arg>
            <arg>commands-commandId=${wf:actionData('Propdata_Match')['commands-commandId']}</arg>
            <arg>commands-destTables=${wf:actionData('Propdata_Match')['commands-destTables']}</arg>
            <arg>commands-commandName=${wf:actionData('Propdata_Match')['commands-commandName']}</arg>
            <file>/app/dataplatform/dataplatform.properties</file>
            <file>/app/workflow/propdata.properties</file>
            <file>/app/workflow/workflow.properties</file>
        </java>
        <ok to="end" />
        <error to="fail" />
    </action>
    <kill name="fail">
        <message>Workflow failed, error
            message[${wf:errorMessage(wf:lastErrorNode())}]
        </message>
    </kill>
    <end name="end" />
</workflow-app>

