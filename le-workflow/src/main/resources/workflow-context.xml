<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:annotation-config/>

    <context:component-scan base-package="com.latticeengines.workflow"/>

    <import resource="classpath:db-context.xml"/>
    <import resource="classpath:security-no-controller-context.xml"/>
    <import resource="classpath:proxy-context.xml"/>
    <import resource="classpath:aws-context.xml"/>
    <import resource="classpath:workflow-aspect-context.xml"/>

    <bean id="jobRegistryBeanPostProcessor" class="com.latticeengines.workflow.core.CustomJobRegistryBeanPostProcessor">
        <property name="jobRegistry" ref="jobRegistry"/>
    </bean>
</beans>