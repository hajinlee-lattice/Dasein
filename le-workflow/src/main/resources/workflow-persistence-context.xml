<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="dataSourceWorkflow" class="com.latticeengines.common.exposed.bean.DataSourceBeanFactory" depends-on="beanEnvironment">
        <property name="driverClass" value="${workflow.datasource.driver}" />
        <property name="jdbcUrl" value="${workflow.datasource.url}"/>
        <property name="user" value="${workflow.datasource.user}" />
        <property name="password" value="${workflow.datasource.password.encrypted}" />
        <property name="maxPoolSize" value="4"/>
        <property name="maxIdleTime" value="0" />
        <property name="enableDebugSlowSql" value="false" />
    </bean>

    <!-- Entity manager factory -->
    <bean id="entityManagerFactoryWorkflow"
          class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="dataSource" ref="dataSourceWorkflow" />
        <property name="packagesToScan" value="com.latticeengines.domain.exposed" />
        <property name="jpaVendorAdapter">
            <bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
                <!-- property name="prepareConnection" value="false"/-->
            </bean>
        </property>
        <property name="jpaProperties">
            <props>
                <prop key="hibernate.dialect">${workflow.datasource.dialect}</prop>
                <prop key="hibernate.show_sql">false</prop>

                <prop key="hibernate.use_sql_comments">true</prop>
                <prop key="hibernate.format_sql">true</prop>
                <prop key="hibernate.type">trace</prop>

                <prop key="hibernate.globally_quoted_identifiers">true</prop>
                <prop key="hibernate.id.new_generator_mappings">true</prop>
                <prop key="hibernate.current_session_context_class">org.springframework.orm.hibernate5.SpringSessionContext</prop>
                <prop key="hibernate.allow_refresh_detached_entity">true</prop>
                <!-- prop key="hibernate.connection.release_mode">on_close</prop-->
                <!-- prop key="hibernate.connection.handling_mode">DELAYED_ACQUISITION_AND_RELEASE_AFTER_TRANSACTION</prop-->
            </props>
        </property>
    </bean>

    <!-- Hibernate session factory -->
    <bean id="sessionFactoryWorkflow" class="org.springframework.orm.jpa.vendor.HibernateJpaSessionFactoryBean">
        <property name="entityManagerFactory" ref="entityManagerFactoryWorkflow" />
    </bean>

    <bean id="transactionManagerWorkflow"
          class="org.springframework.orm.hibernate5.HibernateTransactionManager"
          p:sessionFactory-ref="sessionFactoryWorkflow">
    </bean>

    <bean id="jdbcTemplateWorkflow" class="org.springframework.jdbc.core.JdbcTemplate" p:dataSource-ref="dataSourceWorkflow" />

</beans>