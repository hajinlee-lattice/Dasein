<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jpa="http://www.springframework.org/schema/data/jpa"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="ldcCollectionDbSource"
          class="com.latticeengines.common.exposed.bean.DataSourceBeanFactory">
        <property name="driverClass" value="${ldc_collectiondb.datasource.driver}"/>
        <property name="jdbcUrl" value="${ldc_collectiondb.datasource.url}"/>
        <property name="user" value="${ldc_collectiondb.datasource.user}"/>
        <property name="password" value="${ldc_collectiondb.datasource.password.encrypted}"/>
        <property name="writerConnection" value="true"/>
        <property name="maxPoolSize" value="${ldc_collectiondb.datasource.poolsize.max}"/>
        <property name="maxPoolSizeForWebApp" value="${ldc_collectiondb.datasource.poolsize.max.webapp}"/>
        <property name="maxPoolSizeForAppMaster" value="${ldc_collectiondb.datasource.poolsize.max.appmaster}"/>
        <property name="acquireIncrement" value="5" />
    </bean>

    <!-- Entity manager factory -->
    <bean id="ldcCollectionEntityManagerFactory"
          class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="dataSource" ref="ldcCollectionDbSource"/>
        <property name="packagesToScan" value="com.latticeengines.ldc_collectiondb.entity"/>
        <property name="jpaVendorAdapter">
            <bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
                <!-- property name="prepareConnection" value="false"/-->
            </bean>
        </property>
        <property name="jpaProperties">
            <props>
                <prop key="hibernate.dialect">${ldc_collectiondb.datasource.dialect}</prop>
                <prop key="hibernate.show_sql">false</prop>
                <prop key="hibernate.globally_quoted_identifiers">true</prop>
                <prop key="hibernate.id.new_generator_mappings">true</prop>
                <prop key="hibernate.current_session_context_class">
                    org.springframework.orm.hibernate5.SpringSessionContext
                </prop>
                <prop key="hibernate.allow_refresh_detached_entity">true</prop>
                <!-- prop key="hibernate.connection.release_mode">on_close</prop-->
                <!-- prop key="hibernate.connection.handling_mode">DELAYED_ACQUISITION_AND_RELEASE_AFTER_TRANSACTION</prop-->
            </props>
        </property>
    </bean>

    <bean id="ldcCollectionTransactionManager"
          class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="ldcCollectionEntityManagerFactory"/>
    </bean>


    <bean id="ldcCollectionDbSourceReader"
          class="com.latticeengines.common.exposed.bean.DataSourceBeanFactory">
        <property name="driverClass" value="${ldc_collectiondb.datasource.driver}"/>
        <property name="jdbcUrl" value="${ldc_collectiondb.datasource.reader.url}"/>
        <property name="user" value="${ldc_collectiondb.datasource.user}"/>
        <property name="password" value="${ldc_collectiondb.datasource.password.encrypted}"/>
        <property name="maxPoolSize" value="${ldc_collectiondb.datasource.reader.poolsize.max}"/>
        <property name="maxPoolSizeForWebApp" value="${ldc_collectiondb.datasource.reader.poolsize.max.webapp}"/>
        <property name="maxPoolSizeForAppMaster" value="${ldc_collectiondb.datasource.reader.poolsize.max.appmaster}"/>
    </bean>

    <bean id="ldcCollectionEntityManagerFactoryReader"
          class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="dataSource" ref="ldcCollectionDbSourceReader"/>
        <property name="packagesToScan" value="com.latticeengines.ldc_collectiondb.entity"/>
        <property name="jpaVendorAdapter">
            <bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
                <!-- property name="prepareConnection" value="false"/-->
            </bean>
        </property>
        <property name="jpaProperties">
            <props>
                <prop key="hibernate.dialect">${ldc_collectiondb.datasource.dialect}</prop>
                <prop key="hibernate.show_sql">false</prop>
                <prop key="hibernate.globally_quoted_identifiers">true</prop>
                <prop key="hibernate.id.new_generator_mappings">true</prop>
                <prop key="hibernate.current_session_context_class">
                    org.springframework.orm.hibernate5.SpringSessionContext
                </prop>
                <prop key="hibernate.allow_refresh_detached_entity">true</prop>
                <!-- prop key="hibernate.connection.release_mode">on_close</prop-->
                <!-- prop key="hibernate.connection.handling_mode">DELAYED_ACQUISITION_AND_RELEASE_AFTER_TRANSACTION</prop-->
            </props>
        </property>
    </bean>

    <bean id="ldcCollectionTransactionManagerReader"
          class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="ldcCollectionEntityManagerFactoryReader"/>
    </bean>

    <jpa:auditing/>

</beans>