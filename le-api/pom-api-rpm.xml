<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>le-api-rpm</artifactId>
    <packaging>rpm</packaging>
    <description>LE API RPM</description>

    <properties>
        <le.rpm.version>2.0.39-SNAPSHOT</le.rpm.version>
    </properties>

    <parent>
        <groupId>com.latticeengines</groupId>
        <artifactId>le-parent</artifactId>
        <version>2.0.39-SNAPSHOT</version>
        <relativePath>../le-parent</relativePath>
    </parent>

    <profiles>
        <profile>
            <id>buildmachine</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>environment.type</name>
                    <value>buildmachine</value>
                </property>
            </activation>
            <properties>
                <api.properties.path>conf/env/buildmachine</api.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/buildmachine
                </dataplatform.properties.path>
                <db.properties.path>../le-db/conf/env/buildmachine</db.properties.path>
                <bin.env.path>bin/env/buildmachine</bin.env.path>
            </properties>
        </profile>
        <profile>
            <id>development</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>environment.type</name>
                    <value>devcluster</value>
                </property>
            </activation>
            <properties>
                <api.properties.path>conf/env/devcluster</api.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/devcluster
                </dataplatform.properties.path>
                <db.properties.path>../le-db/conf/env/devcluster</db.properties.path>
                <bin.env.path>bin/env/devcluster</bin.env.path>
            </properties>
        </profile>
        <profile>
            <id>qa</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>qacluster</value>
                </property>
            </activation>
            <properties>
                <api.properties.path>conf/env/qacluster</api.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/qacluster
                </dataplatform.properties.path>
                <db.properties.path>../le-db/conf/env/qacluster</db.properties.path>
                <bin.env.path>bin/env/qacluster</bin.env.path>
            </properties>
        </profile>
        <profile>
            <id>qaclustera</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>qaclustera</value>
                </property>
            </activation>
            <properties>
                <api.properties.path>conf/env/qaclustera</api.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/qaclustera
                </dataplatform.properties.path>
                <db.properties.path>../le-db/conf/env/qaclustera</db.properties.path>
                <bin.env.path>bin/env/qacluster</bin.env.path>
            </properties>
        </profile>
        <profile>
            <id>qaclusterb</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>qaclusterb</value>
                </property>
            </activation>
            <properties>
                <api.properties.path>conf/env/qaclusterb</api.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/qaclusterb
                </dataplatform.properties.path>
                <db.properties.path>../le-db/conf/env/qaclusterb</db.properties.path>
                <bin.env.path>bin/env/qacluster</bin.env.path>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>prodcluster</value>
                </property>
            </activation>
            <properties>
                <api.properties.path>conf/env/deployment</api.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/prodcluster
                </dataplatform.properties.path>
                <db.properties.path>../le-db/conf/env/prodcluster</db.properties.path>
                <bin.env.path>bin/env/prodcluster</bin.env.path>
            </properties>
        </profile>
        <profile>
            <id>productiona</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>prodclustera</value>
                </property>
            </activation>
            <properties>
                <api.properties.path>conf/env/prodclustera</api.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/prodclustera
                </dataplatform.properties.path>
                <db.properties.path>../le-db/conf/env/prodclustera</db.properties.path>
                <bin.env.path>bin/env/prodcluster</bin.env.path>
            </properties>
        </profile>
        <profile>
            <id>productionb</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>prodclusterb</value>
                </property>
            </activation>
            <properties>
                <api.properties.path>conf/env/prodclusterb</api.properties.path>
                <dataplatform.properties.path>
                    ../le-dataplatform/conf/env/prodclusterb
                </dataplatform.properties.path>
                <db.properties.path>../le-db/conf/env/prodclusterb</db.properties.path>
                <bin.env.path>bin/env/prodcluster</bin.env.path>
            </properties>
        </profile>
    </profiles>


    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-4</version>
                <extensions>true</extensions>
                <configuration>
                    <!-- license>GPL (c) 2005, SWWDC</license -->
                    <!--distribution>Trash 2005</distribution -->
                    <group>Application/Collectors</group>
                    <!-- prefix>/usr/local</prefix -->
                    <changelogFile>src/main/resources/changelog</changelogFile>
                    <mappings>
                        <mapping>
                            <directory>/opt/jetty/webapps</directory>
                            <filemode>755</filemode>
                            <username>yarn</username>
                            <groupname>yarn</groupname>
                            <sources>
                                <source>
                                    <location>target/le-api-${le.rpm.version}.war</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/etc/ledp</directory>
                            <filemode>755</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
                            <sources>
                                <source>
                                    <location>${api.properties.path}/api.properties</location>
                                </source>
                                <source>
                                    <location>${dataplatform.properties.path}/dataplatform.properties</location>
                                </source>
                                <source>
                                    <location>${db.properties.path}/db.properties</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/opt/jetty/bin</directory>
                            <filemode>755</filemode>
                            <username>yarn</username>
                            <groupname>yarn</groupname>
                            <sources>
                                <source>
                                    <location>${bin.env.path}/jetty.sh</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/home/yarn</directory>
                            <filemode>700</filemode>
                            <username>yarn</username>
                            <groupname>hadoop</groupname>
                            <sources>
                                <source>
                                    <location>${bin.env.path}/.bashrc</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <preremoveScriptlet>
                        <scriptFile>src/main/scripts/preremove</scriptFile>
                    </preremoveScriptlet>
                    <preinstallScriptlet>
                        <scriptFile>src/main/scripts/preinstall</scriptFile>
                    </preinstallScriptlet>
                    <postinstallScriptlet>
                        <scriptFile>src/main/scripts/postinstall</scriptFile>
                        <fileEncoding>utf-8</fileEncoding>
                    </postinstallScriptlet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>